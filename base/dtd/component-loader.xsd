 <xsd:element name='component-loader'>
  <xsd:complexType>
   <xsd:choice minOccurs='0' maxOccurs='unbounded'>
    <xsd:element ref='load-component'/>
    <xsd:element ref='load-components'/>
   </xsd:choice>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='load-component'>
  <xsd:complexType>
   <xsd:attribute name='component-name' type='xsd:string' use='optional'/>
   <xsd:attribute name='component-location' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='load-components'>
  <xsd:complexType>
   <xsd:attribute name='parent-directory' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
