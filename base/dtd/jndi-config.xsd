 <xsd:element name='jndi-config'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='jndi-server' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='jndi-server'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='context-provider-url' type='xsd:string' use='optional'/>
   <xsd:attribute name='initial-context-factory' type='xsd:string' use='optional'/>
   <xsd:attribute name='url-pkg-prefixes' type='xsd:string' use='optional'/>
   <xsd:attribute name='security-principal' type='xsd:string' use='optional'/>
   <xsd:attribute name='security-credentials' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
