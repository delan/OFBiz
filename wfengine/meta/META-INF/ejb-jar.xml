<ejb-jar>
	<description>O4BizWorkflow</description>
     	<display-name>O4BizWorkflow</display-name>
	<enterprise-beans>
	  	<session>  	
		    	<ejb-name>WorkflowBean</ejb-name>
	                <home>org.ofbiz.wfengine.WorkflowHome</home>
			<remote>org.ofbiz.wfengine.Workflow</remote>
			<ejb-class>org.ofbiz.wfengine.impl.WFEngine</ejb-class>
			<session-type>Stateless</session-type>
	                <transaction-type>Container</transaction-type>
	       </session>
       </enterprise-beans>
       <assembly-descriptor>
	  	<container-transaction>
				<method>
	  			<ejb-name>WorkflowBean</ejb-name>
	  			<method-intf>Remote</method-intf>
	  			<method-name>*</method-name>
				</method>
				<trans-attribute>RequiresNew</trans-attribute>
    		</container-transaction>
  	</assembly-descriptor>
</ejb-jar>