<?xml version="1.0" encoding="UTF-8"?>

<domain>
    <name>default</name>
    <maximum>0</maximum> <!-- set to 0 means no limit on the number of concurrent transactions -->
    <timeout>120</timeout> <!-- 120 seconds is a long time for transaction timeouts, but necessary when remote authorizations and so forth are done as part of a transaction -->
    
    <resources>
        <!-- NOTE: This configuration does not currently work because of this class; I can't figure out which one to use for Postgres, if there is one... -->
        <dataSource>
            <name>localpostgres</name>
            <jar>../ofbiz/lib/common/postgresql.jar</jar>
            <class>org.postgresql.PostgresqlDataSource</class>
            <config>
                <serverName>127.0.0.1</serverName>
                <databaseName>ofbiz</databaseName>
                <user>ofbiz</user><password>ofbiz</password>
            </config>
            <limits>
                <!-- Start with 5 connections, never go below 5, and never go above 50 -->
                <maximum>50</maximum><minimum>5</minimum><initial>5</initial>
                <!-- Discard connections idle for 5 minutes -->
                <maxRetain>300</maxRetain>
                <!-- If maximum reached, block for 5 seconds -->
                <timeout>5</timeout>
                <trace>false</trace>
            </limits>
        </dataSource>
