<?xml version="1.0" encoding="UTF-8" ?>

<site-conf>
    <description>CommonApp Site Configuration File</description>
    
    <owner>unused</owner>
    <datasource>unused</datasource>
    <errorpage>/error/error.jsp</errorpage>

    <!-- Security Mappings -->
    <request-map>
        <uri>checkLogin</uri><secure>false</secure><auth>false</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.security.WebEventSecurity</event-path><event-invoke>checkLogin</event-invoke>
        <success>view:main</success><error>view:login</error>
    </request-map>
    <request-map>
        <uri>login</uri><secure>true</secure><auth>false</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.security.WebEventSecurity</event-path><event-invoke>login</event-invoke>
        <success>view:main</success><error>view:login</error>
    </request-map>
    <request-map>
        <uri>logout</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.security.WebEventSecurity</event-path><event-invoke>logout</event-invoke>
        <success>view:main</success><error>view:main</error>
    </request-map>
    <view-map><view>login</view><mapped-page>/login.jsp</mapped-page></view-map>
    <!-- End of Security Mappings -->

    <!-- Request Mappings -->
    <request-map>
        <uri>view</uri>
        <secure>false</secure>
        <auth>false</auth>
        <success>view:main</success>
        <error>view:error</error>
    </request-map>
    <request-map>
        <uri>chain</uri>
        <event-type>java</event-type>
        <event-path>org.ofbiz.core.event.TestEvent</event-path>
        <event-invoke>test</event-invoke>
        <success>request:/view</success>
        <error>view:error</error>
    </request-map>

    <request-map><uri>main</uri><secure>false</secure><auth>false</auth><success>view:main</success></request-map>
    <request-map><uri>sitemap</uri><secure>false</secure><auth>false</auth><success>view:sitemap</success></request-map>
    <request-map><uri>entitymaint</uri><secure>true</secure><auth>true</auth><success>view:entitymaint</success></request-map>

    <request-map><uri>FindGeneric</uri><secure>true</secure><auth>true</auth><success>view:FindGeneric</success></request-map>
    <request-map><uri>ViewGeneric</uri><secure>true</secure><auth>true</auth><success>view:ViewGeneric</success></request-map>
    <request-map>
        <uri>UpdateGeneric</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.entity.GenericWebEvent</event-path><event-invoke>updateGeneric</event-invoke>
        <success>view:ViewGeneric</success><error>view:ViewGeneric</error>
    </request-map>

    <request-map><uri>FindUtilCache</uri><secure>true</secure><auth>true</auth><success>view:FindUtilCache</success></request-map>
    <request-map>
        <uri>FindUtilCacheClear</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.util.UtilCache</event-path><event-invoke>clearEvent</event-invoke>
        <success>view:FindUtilCache</success><error>view:FindUtilCache</error>
    </request-map>

    <request-map><uri>EditUtilCache</uri><secure>true</secure><auth>true</auth><success>view:EditUtilCache</success></request-map>
    <request-map>
        <uri>EditUtilCacheUpdate</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.util.UtilCache</event-path><event-invoke>updateEvent</event-invoke>
        <success>view:EditUtilCache</success><error>view:EditUtilCache</error>
    </request-map>
    <request-map>
        <uri>EditUtilCacheClear</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.util.UtilCache</event-path><event-invoke>clearEvent</event-invoke>
        <success>view:EditUtilCache</success><error>view:EditUtilCache</error>
    </request-map>

    <request-map><uri>FindUtilCacheElements</uri><secure>true</secure><auth>true</auth><success>view:FindUtilCacheElements</success><error>view:FindUtilCacheElements</error></request-map>
    <request-map>
        <uri>FindUtilCacheElementsRemoveElement</uri><secure>true</secure><auth>true</auth>
        <event-type>java</event-type><event-path>org.ofbiz.core.util.UtilCache</event-path><event-invoke>removeElementEvent</event-invoke>
        <success>view:FindUtilCacheElements</success><error>view:FindUtilCacheElements</error>
    </request-map>
    <!-- end of request mappings -->

    <!-- View Mappings -->
    <view-map><view>error</view><mapped-page>/error/error.jsp</mapped-page></view-map>
    <view-map><view>main</view><mapped-page>/main.jsp</mapped-page></view-map>
    <view-map><view>sitemap</view><mapped-page>/sitemap.jsp</mapped-page></view-map>

    <view-map><view>entitymaint</view><mapped-page>/entity/entitymaint.jsp</mapped-page></view-map>
    <view-map><view>entityref</view><mapped-page>/entity/entityref.jsp</mapped-page></view-map>
    <view-map><view>entityref_list</view><mapped-page>/entity/entityref_list.jsp</mapped-page></view-map>
    <view-map><view>entityref_main</view><mapped-page>/entity/entityref_main.jsp</mapped-page></view-map>
    <view-map><view>FindGeneric</view><mapped-page>/entity/FindGeneric.jsp</mapped-page></view-map>
    <view-map><view>ViewGeneric</view><mapped-page>/entity/ViewGeneric.jsp</mapped-page></view-map>

    <view-map><view>tablesMySql</view><mapped-page>/entity/tablesMySql.jsp</mapped-page></view-map>
    <view-map><view>dataMySql</view><mapped-page>/entity/dataMySql.jsp</mapped-page></view-map>
    <view-map><view>ModelWriter</view><mapped-page>/entity/ModelWriter.jsp</mapped-page></view-map>
    <view-map><view>EditEntity</view><mapped-page>/entity/EditEntity.jsp</mapped-page></view-map>
    <view-map><view>checkdb</view><mapped-page>/entity/checkdb.jsp</mapped-page></view-map>

    <view-map><view>EditUtilCache</view><mapped-page>/cache/EditUtilCache.jsp</mapped-page></view-map>
    <view-map><view>FindUtilCache</view><mapped-page>/cache/FindUtilCache.jsp</mapped-page></view-map>
    <view-map><view>FindUtilCacheElements</view><mapped-page>/cache/FindUtilCacheElements.jsp</mapped-page></view-map>
    <!-- end of view mappings -->
</site-conf>
