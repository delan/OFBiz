<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE services PUBLIC "-//OFBiz//DTD Services Config//EN" "http://www.ofbiz.org/dtds/services.dtd">

<services>
    <description>Taxware Integration Services</description>
    <vendor>OFBiz</vendor>
    <version>1.0</version>

    <service name="taxwareCalcTax" engine="java"
            location="org.ofbiz.commonapp.thirdparty.taxware.TaxwareServices" invoke="calcTax">
        <description>Get tax amount from Taxware</description>
        <attribute name="itemProductList" type="java.util.List" mode="IN"/>
        <attribute name="itemAmountList" type="java.util.List" mode="IN"/>
        <attribute name="itemShippingList" type="java.util.List" mode="IN" optional="true"/>
        <attribute name="orderShippingAmount" type="Double" mode="IN" optional="true"/>
        <attribute name="shippingAddress" type="org.ofbiz.core.entity.GenericValue" mode="IN"/>
        <attribute name="orderAdjustments" type="java.util.List" mode="OUT"/>
        <!-- Item Adjustment List contains each a list of adjustments state,local,etc -->
        <attribute name="itemAdjustments" type="java.util.List" mode="OUT"/>
    </service>

    <service name="taxwareVerifyZip" engine="java"
            location="org.ofbiz.commonapp.thirdparty.taxware.TaxwareServices" invoke="verifyZip">
        <description>Verify Zipcode from Taxware</description>
        <attribute name="stateCode" type="String" mode="INOUT" optional="true"/>
        <attribute name="cityProvince" type="String" mode="INOUT" optional="true"/>
        <attribute name="zipCode" type="String" mode="IN" optional="true"/>
        <attribute name="canadaPostalCode" type="String" mode="IN" optional="true"/>
        <attribute name="countyName" type="String" mode="IN" optional="true"/>
        <attribute name="countyCode" type="String" mode="IN" optional="true"/>
    </service>
</services>