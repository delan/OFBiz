<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE services PUBLIC "-//OFBiz//DTD Services Config//EN" "http://www.ofbiz.org/dtds/services.dtd">

<services>
    <description>CyberSource Integration Services</description>
    <vendor>OFBiz</vendor>
    <version>1.0</version>

    <service name="authorizePayment" engine="java"
            location="org.ofbiz.commonapp.thirdparty.cybersource.CSPaymentServices" invoke="authorize">
        <description>Authorize Credit Cart</description>
        <attribute name="orderId" type="String" mode="IN"/>
        <attribute name="currency" type="String" mode="IN" optional="true"/>
        <attribute name="authResponse" type="String" mode="OUT"/>
    </service>

    <service name="settleAll" engine="java"
            location="org.ofbiz.commonapp.thirdparty.cybersource.CSPaymentServices" invoke="settleAll">
        <description>Bill (Settle) Credit Card Authorization</description>
        <attribute name="ordersProcessed" type="java.util.List" mode="OUT"/>
    </service>
</services>