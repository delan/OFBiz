<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE services PUBLIC "-//OFBiz//DTD Services Config//EN" "http://www.ofbiz.org/dtds/services.dtd">

<services>
    <description>Verisign Payment Service Definition</description>
    <vendor>jFlow</vendor>
    <version>1.0</version>

    <service name="payFlowAuthorize" engine="java"
            location="org.ofbiz.commonapp.thirdparty.verisign.PayflowPro" invoke="authorizePayment">
        <description>Authorizes a payment w/ Verisign</description>
        <attribute name="orderId" type="String" mode="IN"/>
        <attribute name="currency" type="String" mode="IN" optional="true"/>
        <attribute name="authResponse" type="String" mode="OUT"/>
    </service>
</services>
