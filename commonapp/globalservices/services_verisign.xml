<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE services PUBLIC "-//OFBiz//DTD Services Config//EN" "http://www.ofbiz.org/dtds/services.dtd">

<services>
    <description>Verisign Payment Service Definition</description>
    <vendor>jFlow</vendor>
    <version>1.0</version>

    <service name="creditCardAuthorize" engine="java"
            location="org.ofbiz.commonapp.thirdpary.verisign.PayflowPro" invoke="authorizePayment">
        <description>Authorizes a payment w/ Verisign</description>
        <attribute name="TRXTYPE" type="String" mode="IN"/>
        <attribute name="TENDER" type="String" mode="IN"/>
        <attribute name="ACCT" type="String" mode="IN"/>
        <attribute name="EXPDATE" type="String" mode="IN"/>
        <attribute name="AMT" type="Double" mode="IN"/>
        <attribute name="COMMENT1" type="String" mode="IN" optional="true"/>
        <attribute name="COMMENT2" type="String" mode="IN" optional="true"/>
        <attribute name="STREET" type="String" mode="IN" optional="true"/>
        <attribute name="ZIP" type="String" mode="IN" optional="true"/>
        <attribute name="RESULT" type="String" mode="OUT"/>
        <attribute name="PNREF" type="String" mode="OUT" optional="true"/>
        <attribute name="RESPMSG" type="String" mode="OUT"/>
        <attribute name="AUTHCODE" type="String" mode="OUT" optional="true"/>
        <attribute name="AVSADDR" type="String" mode="OUT" optional="true"/>
        <attribute name="AVSZIP" type="String" mode="OUT" optional="true"/>
    </service>
</services>
