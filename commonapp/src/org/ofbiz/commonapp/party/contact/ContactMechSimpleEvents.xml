<simple-methods>
    <!-- ContactMech events -->
    <simple-method method-name="createContactMech" short-description="Create Contact Mechanism">
        <call-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="contactMech" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <call-service service-name="createContactMech" in-map-name="context">
            <default-message>Contact Mechanism successfully created.</default-message>
            <result-to-request result-name="contactMechId"/></call-service>
    </simple-method>
    <simple-method method-name="updateContactMech" short-description="Update Contact Mechanism">
        <call-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="contactMech" in-map-name="parameters" out-map-name="context"/>
        <call-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="updateContactMech" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <call-service service-name="updateContactMech" in-map-name="context">
            <default-message>Contact Mechanism successfully updated.</default-message>
            <result-to-request result-name="newContactMechId" request-name="contactMechId"/></call-service>
    </simple-method>
    <simple-method method-name="deleteContactMech" short-description="Delete Contact Mechanism">
        <call-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="deleteContactMech" in-map-name="parameters" out-map-name="context"/>
