<simple-events>
    <!-- ContactMech events -->
    <simple-event event-name="createContactMech" short-description="Create Contact Mechanism">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="contactMech" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="createContactMech" in-map-name="context">
            <default-message>Contact Mechanism successfully created.</default-message>
            <result-to-request result-name="contactMechId"/></service>
    </simple-event>
    <simple-event event-name="updateContactMech" short-description="Update Contact Mechanism">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="contactMech" in-map-name="parameters" out-map-name="context"/>
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="updateContactMech" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="updateContactMech" in-map-name="context">
            <default-message>Contact Mechanism successfully updated.</default-message>
            <result-to-request result-name="newContactMechId" request-name="contactMechId"/></service>
    </simple-event>
    <simple-event event-name="deleteContactMech" short-description="Delete Contact Mechanism">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/contact/ContactMechMapProcs.xml" 
                processor-name="deleteContactMech" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="deleteContactMech" in-map-name="context">
            <default-message>Contact Mechanism successfully deleted.</default-message></service>
    </simple-event>

