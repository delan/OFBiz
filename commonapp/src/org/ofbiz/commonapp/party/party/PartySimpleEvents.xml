<simple-events>
    <!-- Party events -->
    <simple-event event-name="deleteParty" short-description="Delete Person">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="deleteParty" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="deleteParty" in-map-name="context">
            <default-message>Party successfully deleted.</default-message></service>
    </simple-event>

    <!-- Person events -->
    <simple-event event-name="createPerson" short-description="Create Person">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="person" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="createPerson" in-map-name="context">
            <default-message>Person successfully created.</default-message>
            <result-to-request result-name="contactMechId"/></service>
    </simple-event>
    <simple-event event-name="updatePerson" short-description="Update Person">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="person" in-map-name="parameters" out-map-name="context"/>
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="updateParty" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="updatePerson" in-map-name="context">
            <default-message>Person successfully updated.</default-message>
            <result-to-request result-name="newPartyId" request-name="contactMechId"/></service>
    </simple-event>

    <!-- PartyGroup events -->
    <simple-event event-name="createPartyGroup" short-description="Create Party Group">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="partyGroup" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="createPartyGroup" in-map-name="context">
            <default-message>Party Group successfully created.</default-message>
            <result-to-request result-name="contactMechId"/></service>
    </simple-event>
    <simple-event event-name="updatePartyGroup" short-description="Update Party Group">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="partyGroup" in-map-name="parameters" out-map-name="context"/>
        <simple-map-processor xml-resource="org/ofbiz/commonapp/party/party/PartyMapProcs.xml" 
                processor-name="updateParty" in-map-name="parameters" out-map-name="context"/>
        <check-errors/>
        <service service-name="updatePartyGroup" in-map-name="context">
            <default-message>Party Group successfully updated.</default-message>
            <result-to-request result-name="newPartyId" request-name="contactMechId"/></service>
    </simple-event>
</simple-events>
