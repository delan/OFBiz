<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE simple-map-processors PUBLIC "-//OFBiz//DTD Simple Methods//EN" "http://www.ofbiz.org/dtds/simple-methods.dtd">

<simple-map-processors>
	<simple-map-processor name="createCustRequest">
		<process field="custRequestId"><copy/></process>
		<process field="custRequestTypeId"><copy/><not-empty><fail-message message="Request Type is missing."/></not-empty></process>
		<process field="custRequestDate"><copy/>
			<convert type="Timestamp"><fail-message message="Response required date is not a valid DateTime."/></convert>
		</process>
		<process field="responseRequiredDate">
			<copy/>
			<not-empty><fail-message message="Response Required Date is missing."/></not-empty>
			<convert type="Timestamp"><fail-message message="Response required date is not a valid DateTime."/></convert>
		</process>
		<process field="description"><copy/></process>
	</simple-map-processor>
	<simple-map-processor name="createCustRequestAttribute">
		<process field="custRequestId"><copy/><not-empty><fail-message message="Request Id is missing."/></not-empty></process>
		<process field="attrName"><copy/><not-empty><fail-message message="Attribute name is missing."/></not-empty></process>
		<process field="attrValue"><copy/><not-empty><fail-message message="Attribute value is missing."/></not-empty></process>
	</simple-map-processor>
	<simple-map-processor name="createCustRequestItem">
		<process field="custRequestId"><copy/><not-empty><fail-message message="Request Id is missing."/></not-empty></process>
		<process field="requiredByDate"><copy/>
			<convert type="Timestamp"><fail-message message="Required by date is not a valid DateTime."/></convert>
		</process>
		<process field="quantity"><copy/></process>
		<process field="maximumAmount"><copy/></process>
		<process field="description"><copy/></process>
	</simple-map-processor>
	<simple-map-processor name="createCustRequestRole">
		<process field="custRequestId"><copy/><not-empty><fail-message message="Request Id is missing."/></not-empty></process>
		<process field="partyId"><copy/><not-empty><fail-message message="Party Id is missing."/></not-empty></process>
		<process field="roleTypeId"><copy/><not-empty><fail-message message="Role Type Id is missing."/></not-empty></process>
	</simple-map-processor>
  
</simple-map-processors>
