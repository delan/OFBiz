<entity-services>
    <entity-service service-name="createWorkEffort" short-description="Create Work Effort">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/workeffort/workeffort/WorkEffortMapProcessors.xml" 
                processor-name="serviceCreate" in-map-name="context" out-map-name="weValues"/>
        <check-errors></check-errors>
        <make-value value-name="newWorkEffort" entity-name="WorkEffort" map-name="weValues"/>
        <value-to-list value-name="newWorkEffort" list-name="toStore"/>
        <store-list list-name="toStore"/>
    </entity-service>
    <entity-service service-name="updateWorkEffort" short-description="Update Work Effort">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/workeffort/workeffort/WorkEffortMapProcessors.xml" 
                processor-name="serviceUpdate" in-map-name="context" out-map-name="weValues"/>
        <check-errors></check-errors>
        <find-value value-name="workEffort" entity-name="WorkEffort" map-name="weValues"/>
        <clone-value value-name="workEffort" new-value-name="newWorkEffort"/>
        <fill-value value-name="newWorkEffort" map-name="weValues"/>
        <value-to-list value-name="newWorkEffort" list-name="toStore"/>
        <store-list list-name="toStore"/>
    </entity-service>
    <entity-service service-name="deleteWorkEffort" short-description="Update Work Effort">
        <simple-map-processor xml-resource="org/ofbiz/commonapp/workeffort/workeffort/WorkEffortMapProcessors.xml" 
                processor-name="serviceDelete" in-map-name="context" out-map-name="weValues"/>
        <check-errors></check-errors>
        <make-value value-name="newWorkEffort" entity-name="WorkEffort" map-name="weValues"/>
        <remove-value value-name="newWorkEffort"/>
    </entity-service>
</entity-services>
