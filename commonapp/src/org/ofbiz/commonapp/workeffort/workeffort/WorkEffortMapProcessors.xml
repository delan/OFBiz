<simple-map-processors>
  <simple-map-processor name="update">
    <process field="workEffortId"><copy replace="false"/></process>
    <process field="workEffortTypeId"><copy/></process>
    <process field="universalId"><copy/></process>
    <process field="scopeEnumId"><copy/></process>
    <process field="currentStatusId"><copy/><not-empty><fail-message message="Status is missing."/></not-empty></process>
    <process field="priority"><convert type="Long"><fail-message message="Priority is not a valid whole number."/></convert></process>
    <process field="workEffortName"><copy/><not-empty><fail-message message="Name is missing."/></not-empty></process>
    <process field="description"><copy/></process>
    <process field="locationDesc"><copy/></process>
    <process field="estimatedStartDate">
        <compare-field operator="less" field="estimatedCompletionDate" type="Timestamp"><fail-message message="Estimated Start date/time must be BEFORE End date/time."/></compare-field>
        <convert type="Timestamp"><fail-message message="Estimated Start Date is not a valid Date-Time."/></convert></process>
    <process field="estimatedCompletionDate"><convert type="Timestamp">
        <fail-message message="Estimated Completion Date is not a valid Date-Time."/></convert></process>
    <process field="actualStartDate">
        <compare-field operator="less" field="actualCompletionDate" type="Timestamp"><fail-message message="Actual Start date/time must be BEFORE End date/time."/></compare-field>
        <convert type="Timestamp"><fail-message message="Actual Start Date is not a valid Date-Time."/></convert></process>
    <process field="actualCompletionDate"><convert type="Timestamp">
        <fail-message message="Actual Completion Date is not a valid Date-Time."/></convert></process>
    <process field="estimatedMilliSeconds"><convert type="Double">
        <fail-message message="Estimated Milli-seconds is not a valid number."/></convert></process>
    <process field="actualMilliSeconds"><convert type="Double">
        <fail-message message="Actual Milli-seconds is not a valid number."/></convert></process>
    <process field="totalMilliSecondsAllowed"><convert type="Double">
        <fail-message message="Total Milli-seconds Allowed is not a valid number."/></convert></process>
    <process field="totalMoneyAllowed"><convert type="Double">
        <fail-message message="Total Money Allowed is not a valid number."/></convert></process>
    <process field="timeTransparency"><convert type="Double">
        <fail-message message="Time Transparency is not a valid whole number."/></convert></process>
    <process field="moneyUomId"><copy/></process>
    <process field="specialTerms"><copy/></process>
    <process field="timeTransparency"><copy/></process>
    <process field="infoUrl"><copy/></process>
  </simple-map-processor>
  <simple-map-processor name="delete">
    <process field="workEffortId"><copy replace="false"/></process>
  </simple-map-processor>
</simple-map-processors>
