<simple-map-processors>
  <simple-map-processor name="create">
    <process field="workEffortId"><copy/><not-empty><fail-message message="Work Effort ID is missing."/></not-empty></process>
    <process field="partyId"><copy/><not-empty><fail-message message="Party ID is missing."/></not-empty></process>
    <process field="roleTypeId"><copy/><not-empty><fail-message message="Role Type ID is missing."/></not-empty></process>
    <process field="thruDate">
        <convert type="Timestamp"><fail-message message="Thru Date is not a valid Date-Time."/></convert></process>
    <process field="facilityId"><copy/></process>
    <process field="statusId"><copy/><not-empty><fail-message message="Status ID is missing."/></not-empty></process>
    <process field="comments"><copy/></process>
    <process field="mustRsvp"><copy/></process>
    <process field="expectationEnumId"><copy/></process>
  </simple-map-processor>
  <simple-map-processor name="update">
    <process field="workEffortId"><copy/><not-empty><fail-message message="Work Effort ID is missing."/></not-empty></process>
    <process field="partyId"><copy/><not-empty><fail-message message="Party ID is missing."/></not-empty></process>
    <process field="roleTypeId"><copy/><not-empty><fail-message message="Role Type ID is missing."/></not-empty></process>
    <process field="fromDate">
        <not-empty><fail-message message="From Date is missing."/></not-empty>
        <convert type="Timestamp"><fail-message message="Thru Date is not a valid Date-Time."/></convert></process>
    <process field="thruDate">
        <compare-field operator="greater" field="fromDate" type="Timestamp"><fail-message message="Thru date/time must be AFTER From date/time."/></compare-field>
        <convert type="Timestamp"><fail-message message="Thru Date is not a valid Date-Time."/></convert></process>
    <process field="facilityId"><copy/></process>
    <process field="statusId"><copy/><not-empty><fail-message message="Status ID is missing."/></not-empty></process>
    <process field="comments"><copy/></process>
    <process field="mustRsvp"><copy/></process>
    <process field="expectationEnumId"><copy/></process>
    <process field="actualStartDate">
        <compare-field operator="less" field="actualCompletionDate" type="Timestamp"><fail-message message="Actual Start date/time must be BEFORE End date/time."/></compare-field>
        <convert type="Timestamp"><fail-message message="Actual Start Date is not a valid Date-Time."/></convert></process>
  </simple-map-processor>
  <simple-map-processor name="delete">
    <process field="workEffortId"><copy/><not-empty><fail-message message="Work Effort ID is missing."/></not-empty></process>
    <process field="partyId"><copy/><not-empty><fail-message message="Party ID is missing."/></not-empty></process>
    <process field="roleTypeId"><copy/><not-empty><fail-message message="Role Type ID is missing."/></not-empty></process>
    <process field="fromDate">
        <not-empty><fail-message message="From Date is missing."/></not-empty>
        <convert type="Timestamp"><fail-message message="Thru Date is not a valid Date-Time."/></convert></process>
  </simple-map-processor>
</simple-map-processors>
