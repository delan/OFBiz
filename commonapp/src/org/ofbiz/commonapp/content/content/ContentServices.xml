<simple-methods>
    <!-- Methods for Content -->
    <simple-method method-name="createContent" short-description="Create a Content">
        <check-permission permission="CONTENT" action="_CREATE"><fail-message message="Security Error: to run createContent you must have the CONTENT_CREATE or CONTENT_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value value-name="newEntity" entity-name="Content"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateContent" short-description="Update a Content">
        <check-permission permission="CONTENT" action="_UPDATE"><fail-message message="Security Error: to run updateContent you must have the CONTENT_UPDATE or CONTENT_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value value-name="lookupKeyValue" entity-name="Content"/>
        <set-pk-fields map-name="parameters" value-name="lookupKeyValue"/>
        <find-by-primary-key entity-name="Content" map-name="lookupKeyValue" value-name="lookedUpValue"/>
        <set-nonpk-fields map-name="parameters" value-name="lookedUpValue"/>
        <store-value value-name="lookedUpValue"/>
    </simple-method>
    <simple-method method-name="deleteContent" short-description="Delete a Content">
        <check-permission permission="CONTENT" action="_DELETE"><fail-message message="Security Error: to run updateContent you must have the CONTENT_DELETE or CONTENT_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value value-name="lookupKeyValue" entity-name="Content"/>
        <set-pk-fields map-name="parameters" value-name="lookupKeyValue"/>
        <find-by-primary-key entity-name="Content" map-name="lookupKeyValue" value-name="lookedUpValue"/>
        <remove-value value-name="lookedUpValue"/>
    </simple-method>
    
