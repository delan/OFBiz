<simple-methods>
    <simple-method method-name="createInventoryItem" short-description="Create an InventoryItem">
        <if-has-permission permission="CATALOG" action="_CREATE">
            <!-- if they have the permission, great, do nothing, just continue -->
            <else>
                <string-to-field string="Security Error: you must have the CATALOG_CREATE or CATALOG_ADMIN permission to run createInventoryItem" field-name="securityError"/>
                <field-to-list field-name="securityError" list-name="error_list"/>
                <check-errors/>
            </else>
        </if-has-permission>

        <make-value value-name="newEntity" entity-name="InventoryItem"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        
        <sequenced-id-to-env sequence-name="InventoryItem" env-name="inventoryItemId"/>
        <to-string field-name="inventoryItemId"/>
        <env-to-field env-name="inventoryItemId" map-name="newEntity"/>
        <field-to-result field-name="inventoryItemId" result-name="inventoryItemId"/>
        
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateInventoryItem" short-description="Update an InventoryItem">
        <if-has-permission permission="CATALOG" action="_UPDATE">
            <!-- if they have the permission, great, do nothing, just continue -->
            <else>
                <string-to-field string="Security Error: you must have the CATALOG_UPDATE or CATALOG_ADMIN permission to run updateInventoryItem" field-name="securityError"/>
                <field-to-list field-name="securityError" list-name="error_list"/>
                <check-errors/>
            </else>
        </if-has-permission>

        <field-to-field field-name="inventoryItemId" map-name="parameters" to-map-name="lookupPKMap"/>
        <find-by-primary-key entity-name="InventoryItem" map-name="lookupPKMap" value-name="inventoryItem"/>
        <set-nonpk-fields map-name="parameters" value-name="inventoryItem"/>
        <store-value value-name="inventoryItem"/>
    </simple-method>
    <simple-method method-name="deleteInventoryItem" short-description="Delete an InventoryItem">
        <if-has-permission permission="CATALOG" action="_DELETE">
            <!-- if they have the permission, great, do nothing, just continue -->
            <else>
                <string-to-field string="Security Error: you must have the CATALOG_DELETE or CATALOG_ADMIN permission to run deleteInventoryItem" field-name="securityError"/>
                <field-to-list field-name="securityError" list-name="error_list"/>
                <check-errors/>
            </else>
        </if-has-permission>

        <field-to-field field-name="inventoryItemId" map-name="parameters" to-map-name="lookupPKMap"/>
        <find-by-primary-key entity-name="InventoryItem" map-name="lookupPKMap" value-name="inventoryItem"/>
        <remove-value value-name="inventoryItem"/>
    </simple-method>
</simple-methods>
