    <!-- ProductPromo to ProdCatalog methods -->
    <simple-method method-name="addProductPromoToProdCatalog" short-description="Add Category To ProdCatalog">
        <check-permission permission="CATALOG" action="_CREATE"><fail-message message="Security Error: to run addProductPromoToProdCatalog you must have the CATALOG_CREATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value value-name="newEntity" entity-name="ProdCatalogPromoAppl"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        
        <if-empty field-name="fromDate" map-name="newEntity">
            <make-now-timestamp env-name="nowTimestamp"/>
            <env-to-field env-name="nowTimestamp" field-name="fromDate" map-name="newEntity"/>
        </if-empty>
        
        <create-value value-name="newEntity"/>
    </simple-method>
