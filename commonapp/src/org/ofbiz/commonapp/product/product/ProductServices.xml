<simple-methods>
    <simple-method method-name="duplicateProduct" short-description="Duplicate a Product">
        <if-has-permission permission="CATALOG" action="_CREATE">
            <!-- if they have the permission, great, do nothing, just continue -->
            <else>
                <string-to-field string="Security Error: you must have the CATALOG_CREATE or CATALOG_ADMIN permission to run duplicateProduct" field-name="securityError"/>
                <field-to-list field-name="securityError" list-name="error_list"/>
                <check-errors/>
            </else>
        </if-has-permission>
        <check-errors/>

        <!-- look up the old product and clone it -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="productFindContext"/>
        <find-by-primary-key entity-name="Product" map-name="productFindContext" value-name="oldProduct"/>
        <clone-value value-name="oldProduct" new-value-name="newProduct"/>
        
        <!-- set the newProductId, and write it to the datasource -->
        <field-to-field field-name="newProductId" map-name="parameters" to-field-name="productId" to-map-name="newProduct"/>
        <create-value value-name="newProduct"/>
    </simple-method>
</simple-methods>
