<simple-methods>
    <simple-method method-name="createProductFeatureCategory" short-description="Create Product Feature Category">
        <check-permission permission="CATALOG" action="_CREATE"><fail-message message="Security Error: to run createProductFeatureCategory you must have the CATALOG_CREATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <call-map-processor in-map-name="parameters" out-map-name="newEntityContext">
            <simple-map-processor name="populateEntity">
                <process field="parentCategoryId"><copy/></process>
                <process field="description"><copy/></process>
            </simple-map-processor>
        </call-map-processor>
        <sequenced-id-to-env sequence-name="ProductFeatureCategory" env-name="productFeatureCategoryId"/>
        <to-string field-name="productFeatureCategoryId"/>
        <env-to-field env-name="productFeatureCategoryId" map-name="newEntityContext"/>
        <field-to-result field-name="productFeatureCategoryId" result-name="productFeatureCategoryId"/>
        <check-errors/>
        <make-value value-name="newEntity" entity-name="ProductFeatureCategory" map-name="newEntityContext"/>
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateProductFeatureCategory" short-description="Update Product Feature Category">
        <check-permission permission="CATALOG" action="_UPDATE"><fail-message message="Security Error: to run updateProductFeatureCategory you must have the CATALOG_UPDATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <field-to-field field-name="productFeatureCategoryId" map-name="parameters" to-map-name="productFeatureCategoryPKMap"/>
        <find-by-primary-key entity-name="ProductFeatureCategory" map-name="productFeatureCategoryPKMap" value-name="productFeatureCategory"/>
        <call-map-processor in-map-name="parameters" out-map-name="productFeatureCategory">
            <simple-map-processor name="populateEntity">
                <process field="parentCategoryId"><copy/></process>
                <process field="description"><copy/></process>
            </simple-map-processor>
        </call-map-processor>
        <check-errors/>
        <store-value value-name="productFeatureCategory"/>
    </simple-method>

    <simple-method method-name="createProductFeature" short-description="Create Product Feature">
        <check-permission permission="CATALOG" action="_CREATE"><fail-message message="Security Error: to run createProductFeature you must have the CATALOG_CREATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <make-value value-name="newEntity" entity-name="ProductFeature"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        
        <sequenced-id-to-env sequence-name="ProductFeature" env-name="productFeatureId"/>
        <to-string field-name="productFeatureId"/>
        <env-to-field env-name="productFeatureId" map-name="newEntity"/>
        <field-to-result field-name="productFeatureId" result-name="productFeatureId"/>
        
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateProductFeature" short-description="Update Product Feature">
        <check-permission permission="CATALOG" action="_UPDATE"><fail-message message="Security Error: to run updateProductFeature you must have the CATALOG_UPDATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="productFeaturePKMap"/>
        <find-by-primary-key entity-name="ProductFeature" map-name="productFeaturePKMap" value-name="productFeature"/>
        <set-nonpk-fields map-name="parameters" value-name="productFeature"/>
        <store-value value-name="productFeature"/>
    </simple-method>

    <simple-method method-name="applyFeatureToProduct" short-description="Apply Feature to Product">
        <check-permission permission="CATALOG" action="_CREATE"><fail-message message="Security Error: to run applyFeatureToProduct you must have the CATALOG_CREATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <if-empty field-name="fromDate" map-name="parameters">
            <now-timestamp-to-env env-name="nowStamp"/>
            <env-to-field env-name="nowStamp" field-name="fromDate" map-name="parameters"/>
        </if-empty>
        <make-value value-name="newEntity" entity-name="ProductFeatureAppl"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        <create-value value-name="newEntity"/>

        <!-- clear by and caches for the view-entity -->
        <!-- NOTE that these cannot be cleared automatically because they are on a view-entity -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearCacheByProductIdMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearCacheByProductIdMap"/>
        
        <!-- this cache is from the ProductServices.makeGroup method -->
        <!-- a trickier cache, need to know the productFeatureTypeId for this one, so look it up first... -->
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="lookupProductFeatureMap"/>
        <find-by-primary-key entity-name="ProductFeature" map-name="lookupProductFeatureMap" value-name="productFeature"/>
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearMakeGroupCacheMap"/>
        <field-to-field field-name="productFeatureTypeId" map-name="productFeature" to-map-name="clearMakeGroupCacheMap"/>
        <string-to-field string="STANDARD_FEATURE" field-name="productFeatureApplTypeId" map-name="clearMakeGroupCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearMakeGroupCacheMap"/>

        <!-- the SELECTABLE_FEATURE cache -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearSelFeatCacheMap"/>
        <string-to-field string="SELECTABLE_FEATURE" field-name="productFeatureApplTypeId" map-name="clearSelFeatCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearSelFeatCacheMap"/>
    </simple-method>
    <simple-method method-name="updateFeatureToProductApplication" short-description="Update Feature to Product Application">
        <check-permission permission="CATALOG" action="_UPDATE"><fail-message message="Security Error: to run updateFeatureToProductApplication you must have the CATALOG_UPDATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <field-to-field field-name="productId" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <field-to-field field-name="fromDate" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <find-by-primary-key entity-name="ProductFeatureAppl" map-name="productFeatureApplPKMap" value-name="productFeatureAppl"/>
        <set-nonpk-fields map-name="parameters" value-name="productFeatureAppl"/>
        <store-value value-name="productFeatureAppl"/>

        <!-- clear by and caches for the view-entity -->
        <!-- NOTE that these cannot be cleared automatically because they are on a view-entity -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearCacheByProductIdMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearCacheByProductIdMap"/>
        
        <!-- this cache is from the ProductServices.makeGroup method -->
        <!-- a trickier cache, need to know the productFeatureTypeId for this one, so look it up first... -->
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="lookupProductFeatureMap"/>
        <find-by-primary-key entity-name="ProductFeature" map-name="lookupProductFeatureMap" value-name="productFeature"/>
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearMakeGroupCacheMap"/>
        <field-to-field field-name="productFeatureTypeId" map-name="productFeature" to-map-name="clearMakeGroupCacheMap"/>
        <string-to-field string="STANDARD_FEATURE" field-name="productFeatureApplTypeId" map-name="clearMakeGroupCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearMakeGroupCacheMap"/>

        <!-- the SELECTABLE_FEATURE cache -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearSelFeatCacheMap"/>
        <string-to-field string="SELECTABLE_FEATURE" field-name="productFeatureApplTypeId" map-name="clearSelFeatCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearSelFeatCacheMap"/>
    </simple-method>
    <simple-method method-name="removeFeatureFromProduct" short-description="Remove Feature from Product">
        <check-permission permission="CATALOG" action="_DELETE"><fail-message message="Security Error: to run removeFeatureFromProduct you must have the CATALOG_DELETE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>
        
        <field-to-field field-name="productId" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <field-to-field field-name="fromDate" map-name="parameters" to-map-name="productFeatureApplPKMap"/>
        <find-by-primary-key entity-name="ProductFeatureAppl" map-name="productFeatureApplPKMap" value-name="productFeatureAppl"/>
        <!-- This is old code that just sets the thru date; the current codes actually removes the db row
        <if-empty field-name="thruDate" map-name="parameters">
            <now-timestamp-to-env env-name="nowStamp"/>
            <env-to-field env-name="nowStamp" field-name="thruDate" map-name="parameters"/>
        </if-empty>
        <field-to-field field-name="thruDate" map-name="parameters" to-map-name="productFeatureAppl"/>
        <store-value value-name="productFeatureAppl"/>
        -->
        <remove-value value-name="productFeatureAppl"/>

        <!-- clear by and caches for the view-entity -->
        <!-- NOTE that these cannot be cleared automatically because they are on a view-entity -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearCacheByProductIdMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearCacheByProductIdMap"/>
        
        <!-- this cache is from the ProductServices.makeGroup method -->
        <!-- a trickier cache, need to know the productFeatureTypeId for this one, so look it up first... -->
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="lookupProductFeatureMap"/>
        <find-by-primary-key entity-name="ProductFeature" map-name="lookupProductFeatureMap" value-name="productFeature"/>
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearMakeGroupCacheMap"/>
        <field-to-field field-name="productFeatureTypeId" map-name="productFeature" to-map-name="clearMakeGroupCacheMap"/>
        <string-to-field string="STANDARD_FEATURE" field-name="productFeatureApplTypeId" map-name="clearMakeGroupCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearMakeGroupCacheMap"/>

        <!-- the SELECTABLE_FEATURE cache -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearSelFeatCacheMap"/>
        <string-to-field string="SELECTABLE_FEATURE" field-name="productFeatureApplTypeId" map-name="clearSelFeatCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearSelFeatCacheMap"/>
    </simple-method>

    <simple-method method-name="applyFeatureToProductFromTypeAndCode" short-description="Apply Feature to Product using Feature Type and ID Code">
        <check-permission permission="CATALOG" action="_CREATE"><fail-message message="Security Error: to run applyFeatureToProduct you must have the CATALOG_CREATE or CATALOG_ADMIN permission"/></check-permission>
        <check-errors/>

        <!-- find the ProductFeatures by type and id code -->
        <field-to-field field-name="productFeatureTypeId" map-name="parameters" to-map-name="findProductFeaturesContext"/>
        <field-to-field field-name="idCode" map-name="parameters" to-map-name="findProductFeaturesContext"/>
        <find-by-and entity-name="ProductFeature" map-name="findProductFeaturesContext" list-name="productFeatures"/>
        
        <iterate entry-name="productFeature" list-name="productFeatures">
            <field-to-field field-name="productId" map-name="parameters" to-map-name="applyFeatureContext"/>
            <field-to-field field-name="productFeatureApplTypeId" map-name="parameters" to-map-name="applyFeatureContext"/>
            <field-to-field field-name="fromDate" map-name="parameters" to-map-name="applyFeatureContext"/>
            <field-to-field field-name="thruDate" map-name="parameters" to-map-name="applyFeatureContext"/>
            <field-to-field field-name="sequenceNum" map-name="parameters" to-map-name="applyFeatureContext"/>
            
            <field-to-field field-name="productFeatureId" map-name="productFeature" to-map-name="applyFeatureContext"/>

            <if-empty field-name="sequenceNum" map-name="parameters">
                <field-to-field field-name="defaultSequenceNum" map-name="productFeature" to-field-name="sequenceNum" to-map-name="applyFeatureContext"/>
            </if-empty>
            
            <call-service service-name="applyFeatureToProduct" in-map-name="applyFeatureContext"/>
        </iterate>
    </simple-method>
</simple-methods>
