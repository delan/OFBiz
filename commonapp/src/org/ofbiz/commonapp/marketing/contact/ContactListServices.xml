<simple-methods>

    <!-- ContactList methods -->
    <simple-method method-name="createContactList" short-description="Create an ContactList">
        <check-permission permission="MARKETING" action="_CREATE"><fail-message message="Security Error: to run createContactList you must have the MARKETING_CREATE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactList" value-name="newEntity"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>

        <!-- ContactList uses a sequenced id, so get the next one now and set it... -->        
        <sequenced-id-to-env sequence-name="ContactList" env-name="newSequencedId"/>
        <env-to-field env-name="newSequencedId" field-name="contactListId" map-name="newEntity"/>
        
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateContactList" short-description="Update an ContactList">
        <check-permission permission="MARKETING" action="_UPDATE"><fail-message message="Security Error: to run updateContactList you must have the MARKETING_UPDATE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactList" value-name="lookupPKMap"/>
        <set-pk-fields map-name="parameters" value-name="lookupPKMap"/>
        <find-by-primary-key entity-name="ContactList" map-name="lookupPKMap" value-name="lookedUpValue"/>
        <set-nonpk-fields map-name="parameters" value-name="lookedUpValue"/>
        
        <store-value value-name="lookedUpValue"/>
    </simple-method>
    <simple-method method-name="deleteContactList" short-description="Delete an ContactList">
        <check-permission permission="MARKETING" action="_DELETE"><fail-message message="Security Error: to run deleteContactList you must have the MARKETING_DELETE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactList" value-name="lookupPKMap"/>
        <set-pk-fields map-name="parameters" value-name="lookupPKMap"/>
        <find-by-primary-key entity-name="ContactList" map-name="lookupPKMap" value-name="lookedUpValue"/>
        <remove-value value-name="lookedUpValue"/>
    </simple-method>
    
    <!-- ContactListParty methods -->
    <simple-method method-name="addPartyToContactList" short-description="Add Party To ContactList">
        <check-permission permission="MARKETING" action="_CREATE"><fail-message message="Security Error: to run addPartyToContactList you must have the MARKETING_CREATE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactListParty" value-name="newEntity"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>

        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updatePartyToContactList" short-description="Update Add Party To ContactList">
        <check-permission permission="MARKETING" action="_UPDATE"><fail-message message="Security Error: to run updateContactList you must have the MARKETING_UPDATE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactListParty" value-name="lookupPKMap"/>
        <set-pk-fields map-name="parameters" value-name="lookupPKMap"/>
        <find-by-primary-key entity-name="ContactListParty" map-name="lookupPKMap" value-name="lookedUpValue"/>
        <set-nonpk-fields map-name="parameters" value-name="lookedUpValue"/>
        
        <store-value value-name="lookedUpValue"/>
    </simple-method>
    <simple-method method-name="removePartyFromContactList" short-description="Remove Party from ContactList">
        <check-permission permission="MARKETING" action="_DELETE"><fail-message message="Security Error: to run removePartyFromContactList you must have the MARKETING_DELETE or MARKETING_ADMIN permission"/></check-permission>
        <check-errors/>

        <make-value entity-name="ContactListParty" value-name="lookupPKMap"/>
        <set-pk-fields map-name="parameters" value-name="lookupPKMap"/>
        <find-by-primary-key entity-name="ContactListParty" map-name="lookupPKMap" value-name="lookedUpValue"/>
        <remove-value value-name="lookedUpValue"/>
    </simple-method>
</simple-methods>
