<forms>
	<form name="AddProdCatalogToParty" type="single" 
		target="addProdCatalogToParty" title=""
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="addProdCatalogToParty"/>
		<field name="prodCatalogId" map-name="prodCatalog"><hidden/></field>
		<field name="roleTypeId" title="Role" widget-style="selectBox">
			<drop-down no-current-selected-key="_NA_">
				<entity-options entity-name="RoleType" description="${description}">
					<entity-order-by field-name="description"/>
				</entity-options>
			</drop-down>
		</field>
		<field name="submitButton" title="Add" widget-style="standardSubmit"><submit button-type="button"/></field>
	</form>
	<form name="UpdateProdCatalogToParty" type="list" 
		target="updateProdCatalogToParty" title="" list-name="prodCatalogRoleDatas"
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="updateProdCatalogToParty" map-name="prodCatalogRole"/>
		<field name="prodCatalogId"><hidden/></field>
		<!-- three possibilities for the Party: person, partyGroup, neither... just print everything and if it's empty, no biggie -->
		<field name="partyId" title="Party [ID]" widget-style="buttontext">
			<hyperlink ofbiz-url="false" target="/partymgr/control/viewprofile?partyId=${prodCatalogRole.partyId}"
				description="${person.personalTitle} ${person.firstName} ${person.middleName} ${person.lastName} ${person.suffix} ${partyGroup.groupName} [${prodCatalogRole.partyId}]"/>
		</field>
		<field name="roleTypeId" title="Role" widget-style="tabletext">
			<display description="${roleType.description}"/>
		</field>
		<field name="fromDate" title="From Date &amp;amp; Time" widget-style="tabletext"><display/></field>
		<field name="thruDate" title="Thru Date &amp;amp; Time"></field>
		<field name="submitButton" title="Update" widget-style="standardSubmit"><submit button-type="button"/></field>
		<field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
			<hyperlink target="removeProdCatalogFromParty?prodCatalogId=${prodCatalogRole.prodCatalogId}&amp;partyId=${prodCatalogRole.partyId}&amp;roleTypeId=${prodCatalogRole.roleTypeId}&amp;fromDate=${prodCatalogRole.fromDate}"
				description="[Delete]" also-hidden="false"/>
		</field>
	</form>
</forms>
