    </define>

    <define id='keywordsearch' region='LEFT_ONLY_REGION'>
        <put section='title'>Keyword Search Page</put>
        <put section='content' content='/find/keywordsearch.jsp'/>
    </define>

    <define id='ChooseTopCategory' region='LEFT_ONLY_REGION'>
        <put section='title'>Choose Top Category Page</put>
        <put section='content' content='/ChooseTopCategory.jsp'/>
    </define>

    <define id='EditCategory' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Category Page</put>
        <put section='content' content='/EditCategory.jsp'/>
    </define>
    <define id='EditProduct' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Product Page</put>
        <put section='content' content='/EditProduct.jsp'/>
    </define>
    <define id='EditProductCategories' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Product Categories Page</put>
        <put section='content' content='/EditProductCategories.jsp'/>
    </define>
    <define id='EditCategoryProducts' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Category Products Page</put>
        <put section='content' content='/EditCategoryProducts.jsp'/>
    </define>
    <define id='EditProductKeyword' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Product Keyword Page</put>
        <put section='content' content='/EditProductKeyword.jsp'/>
    </define>
    <define id='EditProductAssoc' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Product Associations Page</put>
        <put section='content' content='/EditProductAssoc.jsp'/>
    </define>
    <define id='EditProductAttributes' region='LEFT_ONLY_REGION'>
        <put section='title'>Edit Product Associations Page</put>
        <put section='content' content='/EditProductAttributes.jsp'/>
    </define>

    <define id='UploadImage' region='MAIN_REGION'>
        <put section='title'>Upload Product Image Page</put>
        <put section='content' content='/UploadImage.jsp'/>
    </define>
    <define id='UploadCategoryImage' region='MAIN_REGION'>
        <put section='title'>Upload Category Image Page</put>
        <put section='content' content='/UploadCategoryImage.jsp'/>
    </define>
