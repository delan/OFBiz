    <!-- Survey Response Methods -->
    <simple-method method-name="createSurveyResponse" short-description="Create Survey Response" login-required="false">
        <!-- lookup the survey -->
        <make-value value-name="surveyLookup" entity-name="Survey"/>
        <set-pk-fields value-name="surveyLookup" map-name="parameters"/>
        <find-by-primary-key map-name="surveyLookup" value-name="survey"/>
        <if-empty field-name="survey">
            <add-error><fail-message message="No survey found for survey ID: ${surveyLookup.surveyId}"/></add-error>
            <check-errors/>
        </if-empty>

        <!-- look up the applied questions -->
        <set from-field="survey.surveyId" field="questionApplLookup.surveyId"/>
        <find-by-and list-name="questions" entity-name="SurveyQuestionAndAppl" map-name="questionApplLookup"/>
        <if-empty field-name="questions">
            <add-error><fail-message message="No questions found for survey ID: ${survey.surveyId}"/></add-error>
            <check-errors/>
        </if-empty>

        <!-- check if anonymous is allowed and if not that we have a partyId -->
        <if-compare field-name="isAnonymous" map-name="survey" operator="not-equals" value="Y">
            <if-empty field-name="partyId" map-name="parameters">
                <add-error><fail-message message="Anonymous response to this survey is not allowed"/></add-error>
                <check-errors/>
            </if-empty>
        </if-compare>

        <!-- if this is a single use and we have a partyId check for existing responses -->
        <if-compare field-name="allowMultiple" map-name="survey" operator="not-equals" value="Y">
            <if-not-empty field-name="partyId" map-name="parameters">
                <set from-field="parameters.partyId" field="responseLookup.partyId"/>
                <set from-field="survey.surveyId" field="responseLookup.surveyId"/>
                <find-by-and list-name="existingResponses" entity-name="SurveyResponse" map-name="responseLookup"/>
                <if-not-empty field-name="existingResponses">
                    <add-error><fail-message message="You have already responded to this survey; multiple responses are not allowed"/></add-error>
                    <check-errors/>
                </if-not-empty>
            </if-not-empty>
        </if-compare>

        <!-- make sure we have answers to check -->
        <if-empty field-name="answers" map-name="parameters">
            <add-error><fail-message message="No answers were found"/></add-error>
            <check-errors/>
        </if-empty>
        <field-to-env field-name="answers" map-name="parameters" env-name="answers"/>

        <!-- make sure all required fields were responded to -->
        <iterate entry-name="question" list-name="questions">
            <if-compare field-name="requiredField" map-name="question" operator="equals" value="Y">
                <if-empty field-name="answers.${question.surveyQuestionId}">
                    <add-error><fail-message message="${question.question} requires a response"/></add-error>
                </if-empty>
            </if-compare>
            <!-- validate the field -->
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="CREDIT_CARD">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isCreditCard">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid credit-card number"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="GIFT_CARD">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isGiftCard">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid gift-card number"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="DATE">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isDate">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid date string (mm/dd/yyyy)"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="EMAIL">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isEmail">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid email address"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_CURRENCY">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isSignedDouble">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid currency amount"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_FLOAT">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isSignedDouble">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid decimal number"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_LONG">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isSignedLong">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid whole number"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
            <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="URL">
                <if-validate-method field-name="answers.${question.surveyQuestionId}" method="isUrl">
                <else>
                    <add-error><fail-message message="${question.question} requires a valid URL"/></add-error>
                </else>
                </if-validate-method>
            </if-compare>
        </iterate>
        <check-errors/>

        <now-timestamp-to-env env-name="nowTimestamp"/>

        <!-- create/update the response -->
        <if-compare field-name="allowUpdate" map-name="survey" operator="equals" value="Y">
            <if-not-empty field-name="parameters.surveyResponseId">
                <set from-field="parameters.surveyResponseId" field="lookupRespMap.surveyResponseId"/>
                <find-by-primary-key entity-name="SurveyResponse" map-name="lookupRespMap" value-name="surveyResponse"/>
            </if-not-empty>
        </if-compare>

        <if-empty field-name="surveyResponse">
            <make-value value-name="surveyResponse" entity-name="SurveyResponse"/>
            <sequenced-id-to-env sequence-name="SurveyResponse" env-name="surveyResponseId"/>
            <env-to-field env-name="surveyResponseId" map-name="surveyResponse"/>
            <set-nonpk-fields value-name="surveyResponse" map-name="parameters"/>
            <create-value value-name="surveyResponse"/>
        </if-empty>

        <if-empty field-name="surveyResponse.responseDate">
            <set from-field="nowTimestamp" field="surveyResponse.responseDate"/>
        </if-empty>
        <set from-field="nowTimestamp" field="surveyResponse.lastModifiedDate"/>

        <store-value value-name="surveyResponse"/>
        <field-to-result field-name="surveyResponseId" map-name="surveyResponse" result-name="surveyResponseId"/>

        <!-- lookup any existing response answers -->
        <set from-field="surveyResponse.surveyResponseId" field="lookupRespAns.surveyResponseId"/>
        <find-by-and list-name="existingAnswers" entity-name="SurveyResponseAnswer" map-name="lookupRespAns"/>
        <iterate entry-name="existingAnswer" list-name="existingAnswers">
            <set from-field="existingAnswer" field="currentAnswers.${existingAnswer.surveyQuestionId}"/>
        </iterate>

        <!-- create the response answers -->
        <iterate entry-name="question" list-name="questions">
            <if-not-empty field-name="currentAnswers">
                <set from-field="currentAnswers.${question.surveyQuestionId}" field="responseAnswer"/>
            </if-not-empty>

            <if-compare-field field-name="surveyQuestionId" map-name="responseAnswer"  operator="not-equals" to-field-name="surveyQuestionId" to-map-name="question">
                <make-value value-name="responseAnswer" entity-name="SurveyResponseAnswer"/>
                <set from-field="surveyResponse.surveyResponseId" field="responseAnswer.surveyResponseId"/>
                <set from-field="question.surveyQuestionId" field="responseAnswer.surveyQuestionId"/>
                <create-value value-name="responseAnswer"/>
            </if-compare-field>

            <if-not-empty field-name="answers.${question.surveyQuestionId}">
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="BOOLEAN">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.booleanResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="EMAIL">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="DATE">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="URL">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="CREDIT_CARD">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="GIFT_CARD">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="PASSWORD">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="TEXT_SHORT">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="TEXT_LONG">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="TEXTAREA">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.textResponse"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_CURRENCY">
                    <set field="responseAnswer.currencyResponse" from-field="answers.${question.surveyQuestionId}" type="Double"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_FLOAT">
                    <set field="responseAnswer.floatResponse" from-field="answers.${question.surveyQuestionId}" type="Double"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="NUMBER_LONG">
                    <set field="responseAnswer.numericResponse" from-field="answers.${question.surveyQuestionId}" type="Long"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="OPTION">
                    <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.surveyOptionSeqId"/>
                </if-compare>
                <if-compare field-name="question.surveyQuestionTypeId" operator="equals" value="CONTENT">
                    <log level="always" message="Found CONTENT type question"/>
                    <if-instance-of field-name="answers.${question.surveyQuestionId}" class="org.ofbiz.entity.util.ByteWrapper">
                        <set from-field="answers._${question.surveyQuestionId}_contentType" field="partyContent._uploadedFile_contentType"/>
                        <set from-field="answers._${question.surveyQuestionId}_fileName" field="partyContent._uploadedFile_fileName"/>
                        <set from-field="answers.${question.surveyQuestionId}" field="partyContent.uploadedFile"/>
                        <set value="DOCUMENT" field="partyContent.contentTypeId"/>
                        <set value="PERSONAL" field="partyContent.dataCategoryId"/>
                        <set value="CTNT_PUBLISHED" field="partyContent.statusId"/>
                        <call-service service-name="createPartyContent" in-map-name="partyContent">
                            <result-to-field result-name="contentId" field-name="responseAnswer.contentId"/>
                        </call-service>
                    <else>                        
                        <set from-field="answers.${question.surveyQuestionId}" field="responseAnswer.contentId"/>
                    </else>
                    </if-instance-of>
                </if-compare>

                <set from-field="nowTimestamp" field="responseAnswer.answeredDate"/>
                <store-value value-name="responseAnswer"/>
            </if-not-empty>
        </iterate>

        <!-- run the survey response service (async) -->
        <set from-field="surveyResponse.surveyResponseId" field="respServiceCtx.surveyResponseId"/>
        <if-not-empty field-name="responseService" map-name="survey">
            <call-service-asynch service-name="${survey.responseService}" in-map-name="respServiceCtx" include-user-login="true"/>  
        </if-not-empty>

        <field-to-result field-name="surveyResponseId" map-name="surveyResponse"/>
        <field-to-result field-name="productStoreSurveyId" map-name="parameters"/>
        <field-to-result field-name="surveyId" map-name="parameters"/>
    </simple-method>
</simple-methods>
