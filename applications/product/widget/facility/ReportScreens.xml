<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">

    <!-- main reports screen of facility's reports section -->
    <screen name="InventoryReports">
        <section>
            <actions>
                <set field="titleProperty" value="InventoryReports"/>
                <set field="headerItem" value="reports"/>
                <entity-condition entity-name="InventoryReportGroupByFacilityAndProduct" list-name="inventoryReportList">
                    <condition-list combine="and">
                        <condition-expr field-name="facilityId" operator="equals" env-name="parameters.facilityId" ignore-if-empty="true"/>
                        <condition-expr field-name="ownerPartyId" operator="equals" env-name="parameters.organizationPartyId" ignore-if-empty="false"/>
                    </condition-list>
                    <!-- note that we need to explicitly identify the fields to select, otherwise the query will include fields that can't logically be grouped -->
                    <select-field field-name="productId"/>
                    <select-field field-name="internalName"/>
                    <select-field field-name="quantityOnHandTotal"/>
                    <select-field field-name="availableToPromiseTotal"/>
                    <order-by field-name="internalName"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="component://product/widget/facility/CommonScreens.xml">
                    <decorator-section name="body">
                        <container>
                            <label style="head1" text="Inventory Reports"/>
                        </container>
                        <container>
                            <include-form name="InventorySummaryForm" location="component://product/widget/facility/ReportForms.xml"/>
                        </container>
                        <container>
                            <label style="head2" text="Inventory Summary"/>
                            <include-form name="InventorySummaryList" location="component://product/widget/facility/ReportForms.xml"/>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>
