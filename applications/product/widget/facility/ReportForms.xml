<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">

    <!-- form for entering constraints for Inventory Summary report -->
    <form name="InventorySummaryForm" type="single" title="" target="InventoryReports"
            default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
    
        <field name="organizationPartyId" title="${uiLabelMap.CommonOrganization}">
            <drop-down allow-empty="false">
                <entity-options entity-name="PartyRoleAndPartyDetail" description="${groupName} ${firstName} ${lastName} [${partyId}]" key-field-name="partyId">
                    <entity-constraint name="roleTypeId" operator="equals" value="INTERNAL_ORGANIZATIO"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="facilityId"  title="${uiLabelMap.ProductFacility}">
            <drop-down allow-empty="false">
                <option key="" description="- ${uiLabelMap.CommonAny} -"/>
                <entity-options entity-name="Facility" description="${facilityName}" key-field-name="facilityId"/>
            </drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonRun}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>

    <form name="InventorySummaryList" type="list" list-name="inventoryReportList" title="" target=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <field name="internalName"><display/></field>
        <field name="productId"><display/></field>
        <field name="quantityOnHandTotal" widget-area-style="tabletextright"><display/></field>
        <field name="availableToPromiseTotal" widget-area-style="tabletextright"><display/></field>
        <field name="productId"><display/></field>
        <field name="facilityId"><hidden/></field>
        <field name="ownerPartyId"><hidden/></field>
    </form>

</forms>
