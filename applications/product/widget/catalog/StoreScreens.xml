    <screen name="EditProductStoreCatalogs">
       <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditProductStoreCatalogs"/>
                <set field="headerItem" value="store"/>
                <set field="tabButtonItem" value="EditProductStoreCatalogs"/>
