    <simple-method method-name="applyFeatureToProduct" short-description="Apply Feature to Product">
        <string-to-field string="applyFeatureToProduct" field-name="callingMethodName"/>
        <string-to-field string="CREATE" field-name="checkAction"/>
        <call-simple-method method-name="checkProductRelatedPermission" xml-resource="org/ofbiz/product/product/ProductServices.xml"/>
        <check-errors/>
        
        <if-empty field-name="fromDate" map-name="parameters">
            <now-timestamp-to-env env-name="nowStamp"/>
            <env-to-field env-name="nowStamp" field-name="fromDate" map-name="parameters"/>
        </if-empty>
        <make-value value-name="newEntity" entity-name="ProductFeatureAppl"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
        <create-value value-name="newEntity"/>

        <!-- clear by and caches for the view-entity -->
        <!-- NOTE that these cannot be cleared automatically because they are on a view-entity -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearCacheByProductIdMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearCacheByProductIdMap"/>
        
        <!-- this cache is from the ProductServices.makeGroup method -->
        <!-- a trickier cache, need to know the productFeatureTypeId for this one, so look it up first... -->
        <field-to-field field-name="productFeatureId" map-name="parameters" to-map-name="lookupProductFeatureMap"/>
        <find-by-primary-key entity-name="ProductFeature" map-name="lookupProductFeatureMap" value-name="productFeature"/>
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearMakeGroupCacheMap"/>
        <field-to-field field-name="productFeatureTypeId" map-name="productFeature" to-map-name="clearMakeGroupCacheMap"/>
        <string-to-field string="STANDARD_FEATURE" field-name="productFeatureApplTypeId" map-name="clearMakeGroupCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearMakeGroupCacheMap"/>

        <!-- the SELECTABLE_FEATURE cache -->
        <field-to-field field-name="productId" map-name="parameters" to-map-name="clearSelFeatCacheMap"/>
        <string-to-field string="SELECTABLE_FEATURE" field-name="productFeatureApplTypeId" map-name="clearSelFeatCacheMap"/>
        <clear-cache-line entity-name="ProductFeatureAndAppl" map-name="clearSelFeatCacheMap"/>
    </simple-method>
