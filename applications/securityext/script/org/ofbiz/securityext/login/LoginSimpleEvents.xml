<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/simple-methods.xsd">
    <!-- UserLogin events -->
    <simple-method method-name="updatePassword" short-description="Update Password">
        <if-has-permission permission="PARTYMGR" action="_CREATE">
            <call-map-processor xml-resource="org/ofbiz/securityext/login/LoginMapProcs.xml"
                processor-name="adminUpdatePassword" in-map-name="parameters" out-map-name="context"/>
        <else>
             <call-map-processor xml-resource="org/ofbiz/securityext/login/LoginMapProcs.xml"
                processor-name="updatePassword" in-map-name="parameters" out-map-name="context"/>
        </else>
        </if-has-permission>
        <check-errors/>
        <call-service service-name="updatePassword" in-map-name="context">
            <default-message resource="SecurityextUiLabels" property="loginmapprocs.password_successfully_updated"/>
            <result-to-field result-name="updatedUserLogin" map-name="dummyServiceResultMap"/>
        </call-service>
        <field-to-env env-name="updatedUserLogin" map-name="dummyServiceResultMap"/>
        <session-to-field field-name="userLogin"/>
        <if-compare-field map-name="userLogin" field-name="userLoginId" operator="equals" to-map-name="updatedUserLogin" to-field-name="userLoginId">
            <field-to-session field-name="updatedUserLogin" session-name="userLogin"/>
        </if-compare-field>
    </simple-method>
</simple-methods>
