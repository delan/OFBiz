<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
    <form name="PaymentApplicationsList" default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="tabletext"
        list-name="entityList" target="" paginate-target="/EditPayment" title="" type="list">
        <auto-fields-entity entity-name="PaymentApplication" default-field-type="display"/>
    </form>
    <form name="EditPaymentApplication" type="single" 
            target="editPaymentApplication" title="" default-map-name="paymentApplication"
            default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
        
        <alt-target use-when="paymentApplication==null" target="createPaymentApplication"/>
        <auto-fields-service service-name="createPaymentApplication" map-name=""/>
        <field name="taxAuthGeoId" title="Tax Auth Geo Id">
             <drop-down allow-empty="true">
             	<entity-options entity-name="TaxAuthority" description="${taxAuthGeoId}"/>
             </drop-down>
        </field>
        <field name="paymentId"><hidden/></field>
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" widget-style="smallSubmit"><submit button-type="button"/></field>
    </form>
</forms>
