<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
        
     <form name="TaxSummary" type="list" title="Tax Authorities and Outstanding Balances" default-widget-style="tabletext"
            default-title-style="tableheadtext" default-tooltip-style="tabletext" list-name="balances">
          <field name="organizationPartyId"><display/></field>
          <field name="taxAuthGeoId"><display/></field>
          <field name="taxAuthPartyId"><display/></field>
          <field name="glAccountId"><display-entity entity-name="GlAccount" description="${accountCode} : ${accountName}"/></field>
          <field name="postedBalance"><display/></field>
          <field name="detail" title="View Details">
              <hyperlink also-hidden="false" description="&amp;nbsp;[View Details]&amp;nbsp;" 
                    target="AccountActivitiesDetail?glAccountId=${glAccountId}&amp;organizationPartyId=${organizationPartyId}&amp;partyId=${taxAuthPartyId}&amp;glFiscalTypeId=ACTUAL"/>
          </field>
     </form>
     
     <!-- can be used for just about anything to show detailed activities in a GL account -->
        
     <form name="AccountActivitesDetail" type="list" title="Account Activity Details" default-widget-style="tabletext"
            default-title-style="tableheadtext" default-tooltip-style="tabletext" list-name="acctTransEntries">
          <field name="glAccountId">
              <display-entity entity-name="GlAccount" description="${accountCode} : ${accountName}">
                  <sub-hyperlink target="ListGlAccountEntries?glAccountId=${glAccountId}" description="[Details]" link-style="tabletext"/>
              </display-entity>                 
          </field>
          <field name="transactionDate"><display/></field>
          <field name="acctgTransId"><display/></field>
          <field name="acctgTransEntrySeqId" title="Seq Id"><display/></field>
          <field name="acctgTransTypeId" title="Type"><display-entity entity-name="AcctgTransType" description="${description}"/></field>
          <field name="invoiceId" use-when="invoiceId!=null">
              <hyperlink also-hidden="false" description="${invoiceId}" target="editInvoice?invoiceId=${invoiceId}"/> 
          </field>
          <field name="invoiceId" use-when="invoiceId==null"><display/></field>
          <field name="paymentId" use-when="paymentId!=null">
              <hyperlink also-hidden="false" description="${paymentId}" target="editPayment?paymentId=${paymentId}"/> 
          </field>
          <field name="paymentId" use-when="paymentId==null"><display/></field>
          <field name="returnId" use-when="returnId!=null">
              <hyperlink also-hidden="false" description="${returnId}" target="/ordermgr/control/returnMain?returnId=${returnId}" 
                  target-type="inter-app"/> 
          </field>
          <field name="returnId" use-when="returnId==null"><display/></field>

          <field name="debitCreditFlag" title="Debit/Credit"><display/></field>
          <field name="amount"><display/></field>
     </form>
</forms>
