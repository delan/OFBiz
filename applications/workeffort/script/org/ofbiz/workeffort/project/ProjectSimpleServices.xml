<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/simple-methods.xsd">
    <simple-method method-name="createPhase" short-description="Create Project Phase">
        <call-map-processor xml-resource="org/ofbiz/workeffort/workeffort/WorkflowMapProcessors.xml" 
                processor-name="createWorkEffortMap" in-map-name="parameters" out-map-name="toCreate"/>
        <call-service service-name="createWorkEffort" in-map-name="toCreate">
            <default-message>Phase successfully created.</default-message>
            <result-to-field result-name="workEffortId" field-name="workEffortId" map-name="newWorkEffort"/>
        </call-service>
        
        <make-value value-name="newEntity" entity-name="WorkEffortAssoc"/>
        <field-to-field field-name="workEffortId" map-name="newWorkEffort" to-field-name="workEffortIdTo" to-map-name="newEntity"/>
        <field-to-field field-name="projectWorkEffortId" map-name="parameters" to-field-name="workEffortIdFrom" to-map-name="newEntity"/>
        <now-timestamp-to-env env-name="newEntity.fromDate"/>
        <string-to-field string="WORK_EFF_BREAKDOWN" field-name="workEffortAssocTypeId" map-name="newEntity"/>
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="createPhaseTask" short-description="Create Phase Task">
        <call-map-processor xml-resource="org/ofbiz/workeffort/workeffort/WorkflowMapProcessors.xml" 
                processor-name="createWorkEffortMap" in-map-name="parameters" out-map-name="toCreate"/>
        <call-service service-name="createWorkEffort" in-map-name="toCreate">
            <default-message>Task successfully created.</default-message>
            <result-to-field result-name="workEffortId" field-name="workEffortId" map-name="newWorkEffort"/>
        </call-service>
        
        <make-value value-name="newEntity" entity-name="WorkEffortAssoc"/>
        <field-to-field field-name="workEffortId" map-name="newWorkEffort" to-field-name="workEffortIdTo" to-map-name="newEntity"/>
        <field-to-field field-name="phaseWorkEffortId" map-name="parameters" to-field-name="workEffortIdFrom" to-map-name="newEntity"/>
        <now-timestamp-to-env env-name="newEntity.fromDate"/>
        <string-to-field string="WORK_EFF_BREAKDOWN" field-name="workEffortAssocTypeId" map-name="newEntity"/>
        <create-value value-name="newEntity"/>
    </simple-method>
</simple-methods>
