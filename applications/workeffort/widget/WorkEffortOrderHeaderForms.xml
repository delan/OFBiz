<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
  
    <form name="ListWorkEffortOrderHeaders" separate-columns="true" default-title-style="tableheadtext" default-tooltip-style="tabletext" 
    default-widget-style="tabletext" target="" title="" type="list" >
        <actions>
            <entity-condition entity-name="OrderHeaderWorkEffort" >
                <condition-list combine="and">
                    <condition-expr field-name="workEffortId" operator="equals" env-name="workEffortId"/>
                </condition-list>
                <order-by field-name="orderId"/>
            </entity-condition>
        </actions>
        <field name="workEffortId">
            <display-entity entity-name="WorkEffort" description="${workEffortName}">
                <sub-hyperlink  description="[${workEffortId}]" target="EditWorkEffort?workEffortId=${workEffortId}" link-style="linktext"/>
            </display-entity>
        </field>
        <field name="orderId" title="${uiLabelMap.WorkEffortShopListId}" widget-style="buttontext">
            <hyperlink target="EditWorkEffortOrderHeader?orderId=${orderId}&amp;workEffortId=${workEffortId}" target-type="inter-app"   description="[${orderId}]" />
        </field>
        <field name="deleteLink" title=" " widget-style="buttontext"><hyperlink target="deleteWorkEffortOrderHeader?workEffortId=${workEffortId}&amp;orderId=${orderId}" also-hidden="false" description="[${uiLabelMap.CommonDelete}]"/></field>
    </form>
  
    <form name="AddWorkEffortOrderHeader" default-map-name="workOrderHeaderFulfillment" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditOrderHeader" extends-resource="component://order/webapp/ordermgr/order/OrderForms.xml"
            target="createWorkEffortOrderHeader" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
            <sort-field name="orderId"/>
            <sort-field name="workReqFulfTypeId"/>
        </sort-order>
        <field name="workEffortId" > <display/> </field>
        <field name="orderId" ><lookup target-form-name="/ordermgr/control/LookupOrderHeader"/></field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
  
    <form name="EditWorkEffortOrderHeader" default-map-name="order" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditOrderHeader" extends-resource="component://order/webapp/ordermgr/order/OrderForms.xml"
            target="updateOrderHeader" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
        </sort-order>
        <field name="workEffortId" map-name="parameters"> <display /> </field>
        <field name="orderId" ><display/></field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
</forms>
