<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <screen name="AddWorkEffortRequest">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleAddWorkEffortRequest"/>
                <set field="tabButtonItem" value="WorkEffortRequests"/>
                <set field="labelTitleProperty" value="PageTitleAddWorkEffortRequest"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" default-value="/workeffort/control/ListWorkEfforts"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <label style="head1">${uiLabelMap.PageTitleAddWorkEffortRequest} for workEffortId=${workEffortId}</label>
                        <include-form name="AddWorkEffortRequest" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditWorkEffortRequest">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditWorkEffortRequest"/>
                <set field="tabButtonItem" value="WorkEffortRequests"/>
                <set field="labelTitleProperty" value="PageTitleEditWorkEffortRequest"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" />
                <set field="custRequestId" from-field="parameters.custRequestId"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
                <entity-one entity-name="CustRequest" value-name="custRequest"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <label style="head1">${uiLabelMap.PageTitleEditWorkEffortRequest}</label>
                        <include-form name="EditWorkEffortRequest" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="ListWorkEffortRequests">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleListWorkEffortRequests"/>
                <set field="tabButtonItem" value="WorkEffortRequests"/>
                <set field="labelTitleProperty" value="PageTitleListWorkEffortRequests"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" default-value="/workeffort/control/ListWorkEfforts"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <container><label style="head1">${uiLabelMap.PageTitleListWorkEffortRequests} for workEffortId=${workEffortId}</label></container>
                        <container><link target="/AddWorkEffortRequest?workEffortId=${workEffortId}" text="[Create New Request]" style="linktext"></link></container>
                        <include-form name="ListWorkEffortRequests" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="AddWorkEffortRequestItem">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleAddWorkEffortRequestItem"/>
                <set field="tabButtonItem" value="WorkEffortRequestItems"/>
                <set field="labelTitleProperty" value="PageTitleAddWorkEffortRequestItem"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" default-value="/workeffort/control/ListWorkEfforts"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
                <entity-one entity-name="CustRequestItem" value-name="custRequestItem"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <label style="head1">${uiLabelMap.PageTitleAddWorkEffortRequestItem} for workEffortId=${workEffortId}</label>
                        <include-form name="AddWorkEffortRequestItem" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditWorkEffortRequestItem">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditWorkEffortRequestItem"/>
                <set field="tabButtonItem" value="WorkEffortRequestItems"/>
                <set field="labelTitleProperty" value="PageTitleEditWorkEffortRequestItem"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" />
                <set field="custRequestId" from-field="parameters.custRequestId"/>
                <set field="custRequestItemId" from-field="parameters.custRequestItemId"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
                <entity-one entity-name="CustRequestItem" value-name="custRequestItem"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <container><label style="head1">${uiLabelMap.PageTitleEditWorkEffortRequestItems} for workEffortId=${workEffortId}</label></container>
                        <include-form name="EditWorkEffortRequestItem" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="ListWorkEffortRequestItems">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleListWorkEffortRequestItems"/>
                <set field="tabButtonItem" value="WorkEffortRequestItems"/>
                <set field="labelTitleProperty" value="PageTitleListWorkEffortRequestItems"/>

                <set field="donePage" from-field="parameters.DONE_PAGE" default-value="/workeffort/control/ListWorkEfforts"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonWorkEffortDecorator" location="component://workeffort/widget/WorkEffortScreens.xml">
                    <decorator-section name="body">
                        <container><label style="head1">${uiLabelMap.PageTitleListWorkEffortRequestItems} for workEffortId=${workEffortId}</label></container>
                        <container><link target="/AddWorkEffortRequestItem?workEffortId=${workEffortId}" text="[Create New RequestItem]" style="linktext"></link></container>
                        <include-form name="ListWorkEffortRequestItems" location="component://workeffort/widget/WorkEffortRequestForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>

