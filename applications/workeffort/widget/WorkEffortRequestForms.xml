<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
  
    <form name="ListWorkEffortRequests" separate-columns="true" default-title-style="tableheadtext" default-tooltip-style="tabletext" 
        default-widget-style="tabletext" target="ListWorkEffortRequests" title="" type="list" >
        <actions>
            <entity-and entity-name="WorkEffortCustRequestView">
                <field-map field-name="workEffortId"/>
            </entity-and>
        </actions>
        <field name="workEffortId" widget-style="buttontext">
            <hyperlink description="[${workEffortId}]" target="EditWorkEffort?workEffortId=${workEffortId}" />
        </field>
        <field name="custRequestId" widget-style="buttontext">
            <hyperlink description="[${custRequestId}]" target="/ordermgr/control/EditRequest?custRequestId=${custRequestId}" target-type="inter-app" />
        </field>
        <field name="description"><display/></field>
        <field name="custRequestTypeDescription"><display/></field>
        <field name="statusItemDescription"><display/></field>
        <field name="editLink" widget-style="buttontext" title="&amp;nbsp;" >
            <hyperlink description="[${uiLabelMap.CommonEdit}]" target="EditWorkEffortRequest?workEffortId=${workEffortId}&amp;custRequestId=${custRequestId}" />
        </field>
        <field name="deleteLink" title="&amp;nbsp;" widget-style="linktext">
            <hyperlink also-hidden="false" description="[${uiLabelMap.CommonDelete}]" target="removeWorkEffortRequest?workEffortId=${workEffortId}&amp;custRequestId=${custRequestId}"/>
        </field>
    </form>
  
    <form name="AddWorkEffortRequest" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditCustRequest" extends-resource="component://order/webapp/ordermgr/request/RequestForms.xml"
            target="createWorkEffortRequest" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
            <banner left-text-style="tabletext" left-text="Enter existing CustRequest Id below"/>
            <sort-field name="custRequestId"/>
            <banner left-text-style="tabletext" left-text="OR add new CustRequest data below to create new entity (leave Cust Request Id empty)"/>
        </sort-order>
        <field name="workEffortId"><display/></field>
        <field name="custRequestId"><lookup target-form-name="/ordermgr/control/LookupCustRequest"/></field>
        <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext">
            <submit button-type="text-link"/>
        </field>
    </form>
    
    <form name="EditWorkEffortRequest" default-map-name="custRequest" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditCustRequest" extends-resource="component://order/webapp/ordermgr/request/RequestForms.xml"
            target="updateWorkEffortRequest" title="" type="single">
        <actions>
            <entity-one entity-name="StatusItem" value-name="currentStatus" auto-field-map="false">
                <field-map field-name="statusId" env-name="custRequest.statusId"/>
            </entity-one>
        </actions>
        <field name="workEffortId" map-name="parameters"><hidden/></field>
        <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext">
            <submit button-type="text-link"/>
        </field>
    </form>
    <form name="ListWorkEffortRequestItems" separate-columns="true" default-title-style="tableheadtext" default-tooltip-style="tabletext" 
        default-widget-style="tabletext" target="ListWorkEffortRequestItems" title="" type="list" >
        <actions>
            <entity-and entity-name="WorkEffortCustRequestItemView">
                <field-map field-name="workEffortId"/>
            </entity-and>
        </actions>
        <field name="workEffortId" widget-style="buttontext"><display/></field>
        <field name="custRequestId" widget-style="buttontext"><display/></field>
        <field name="custRequestItemSeqId" widget-style="buttontext"><display/></field>
        <field name="statusItemDescription"><display/></field>
        <field name="priority"><display/></field>
        <field name="productId"><display/></field>
        <field name="description"><display/></field>
        <field name="editLink" title="&amp;nbsp;" widget-style="linktext">
            <hyperlink also-hidden="false" description="[${uiLabelMap.CommonEdit}]" target="EditWorkEffortRequestItem?workEffortId=${workEffortId}&amp;custRequestId=${custRequestId}&amp;custRequestItemSeqId=${custRequestItemSeqId}"/>
        </field>
        <field name="deleteLink" title="&amp;nbsp;" widget-style="linktext">
            <hyperlink also-hidden="false" description="[${uiLabelMap.CommonDelete}]" target="deleteWorkEffortRequestItem?workEffortId=${workEffortId}&amp;custRequestId=${custRequestId}&amp;custRequestItemSeqId=${custRequestItemSeqId}"/>
        </field>
    </form>
  
    <form name="AddWorkEffortRequestItem" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditCustRequestItem" extends-resource="component://order/webapp/ordermgr/request/RequestForms.xml"
            target="createWorkEffortRequestItem" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
            <banner left-text-style="tabletext" left-text="Enter existing CustRequest Id and CustRequestItemSeqId below"/>
            <sort-field name="custRequestId"/>
            <sort-field name="custRequestItemSeqId"/>
            <banner left-text-style="tabletext" left-text="OR add new CustRequestItem data below to create new entity (CustRequestId must exists, but CustRequestItemSeqId must be provided, but not exists"/>
        </sort-order>
        <field name="workEffortId"><display/></field>
        <field name="custRequestId"><lookup target-form-name="/ordermgr/control/LookupCustRequest"/></field>
        <field name="custRequestItemSeqId"><lookup target-form-name="/ordermgr/control/LookupCustRequestItem" target-parameter="custRequestId"/></field>
        <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext">
            <submit button-type="text-link"/>
        </field>
    </form>
    
    <form name="EditWorkEffortRequestItem" default-map-name="custRequestItem" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditCustRequestItem" extends-resource="component://order/webapp/ordermgr/request/RequestForms.xml"
            target="updateWorkEffortRequestItem" title="" type="single">
        <actions>
            <entity-one entity-name="StatusItem" value-name="currentStatus" auto-field-map="false">
                <field-map field-name="statusId" env-name="custRequestItem.statusId"/>
            </entity-one>
        </actions>
        <sort-order>
            <sort-field name="workEffortId"/>
            <sort-field name="custRequestId"/>
            <sort-field name="custRequestItemSeqId"/>
        </sort-order>
        <field name="workEffortId" map-name="parameters" field-name="workEffortId"><display/></field>
        <field name="custRequestId"><display/></field>
        <field name="custRequestItemSeqId"><display/></field>
        <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext">
            <submit button-type="text-link"/>
        </field>
    </form>
</forms>
