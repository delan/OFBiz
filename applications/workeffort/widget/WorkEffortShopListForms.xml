<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
  
    <form name="ListWorkEffortShopLists" separate-columns="true" default-title-style="tableheadtext" 
        default-tooltip-style="tabletext" default-widget-style="tabletext" target="" title="" type="list" >
        <actions>
            <entity-and entity-name="WorkEffortShoppingListView" >
                <field-map field-name="workEffortId" />
                <order-by field-name="shoppingListId"/>
            </entity-and>
        </actions>
        <field name="workEffortId" widget-style="linktext">
            <hyperlink  description="[${workEffortId}]" target="EditWorkEffort?workEffortId=${workEffortId}" />
        </field>
        <field name="shoppingListId" title="${uiLabelMap.WorkEffortShopListId}" widget-style="linktext">
            <hyperlink target="EditWorkEffortShopList?shoppingListId=${shoppingListId}&amp;workEffortId=${workEffortId}" target-type="inter-app"   description="[${shoppingListId}]"/>
        </field>
        <field name="listName"><display/></field>
        <field name="description"><display/></field>
        <field name="shoppingListTypeDescription"><display/></field>
        <field name="partyId"><display/></field>
        <field name="deleteLink" title=" " widget-style="buttontext"><hyperlink target="deleteShoppingListWorkEffort?workEffortId=${workEffortId}&amp;shoppingListId=${shoppingListId}" also-hidden="false" description="[${uiLabelMap.CommonDelete}]"/></field>
    </form>
  
    <form name="AddWorkEffortShopList" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditShopList" extends-resource="component://order/webapp/ordermgr/order/OrderShopListForms.xml"
            target="createShoppingListWorkEffort" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
            <banner left-text-style="tabletext" left-text="Enter existing ShoppingList Id below"/>
            <sort-field name="shoppingListId"/>
            <banner left-text-style="tabletext" left-text="OR add new ShoppingList data below to create new entity (leave ShoppingList Id empty)"/>
        </sort-order>
        <field name="workEffortId" map-name="parameters"> <display/> </field>
        <field name="shoppingListId" ><lookup target-form-name="/ordermgr/control/LookupShoppingList"/></field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
  
    <form name="EditWorkEffortShopList" default-map-name="shoppingList" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditShopList" extends-resource="component://order/webapp/ordermgr/order/OrderShopListForms.xml"
            target="updateShoppingList" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
        </sort-order>
        <field name="workEffortId" map-name="parameters"> <display /> </field>
        <field name="shoppingListId" ><display/></field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
</forms>
