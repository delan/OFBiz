<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
  
    <form name="ListWorkEffortRequirements" separate-columns="true" default-title-style="tableheadtext" default-tooltip-style="tabletext" 
    default-widget-style="tabletext" target="" title="" type="list" >
        <actions>
            <entity-condition entity-name="WorkRequirementFulfillment" >
                <condition-list combine="and">
                    <condition-expr field-name="workEffortId" operator="equals" env-name="workEffortId"/>
                </condition-list>
                <order-by field-name="requirementId"/>
            </entity-condition>
        </actions>
        <field name="workEffortId">
            <hyperlink  description="[${workEffortId}]" target="EditWorkEffort?workEffortId=${workEffortId}" />
        </field>
        <field name="requirementId" title="${uiLabelMap.WorkEffortRequirementId}" widget-style="buttontext">
            <hyperlink target="/ordermgr/control/EditRequirement?requirementId=${requirementId}" target-type="inter-app" description="${requirementId}"/>
        </field>
        <field name="workReqFulfTypeId">
            <display-entity entity-name="WorkReqFulfType"/>
        </field>
        <field name="description" > <display/> </field>
        <field name="editLink" title=" " widget-style="buttontext"><hyperlink target="EditWorkEffortRequirement?workEffortId=${workEffortId}&amp;requirementId=${requirementId}" also-hidden="false" description="[${uiLabelMap.CommonEdit}]" /></field>
        <field name="deleteLink" title=" " widget-style="buttontext"><hyperlink target="deleteWorkEffortRequirement?workEffortId=${workEffortId}&amp;requirementId=${requirementId}" also-hidden="false" description="[${uiLabelMap.CommonDelete}]"/></field>
    </form>
  
    <form name="AddWorkEffortRequirement" default-map-name="workRequirementFulfillment" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditRequirement" extends-resource="component://order/webapp/ordermgr/requirement/RequirementForms.xml"
            target="createWorkEffortRequirement" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
            <sort-field name="requirementId"/>
            <sort-field name="workReqFulfTypeId"/>
        </sort-order>
        <field name="workEffortId" > <display/> </field>
        <field name="requirementId" ><ignored/></field>
        <field name="workReqFulfTypeId">
            <drop-down allow-empty="false">
                <entity-options entity-name="WorkReqFulfType" description="${description}"/>
            </drop-down>
        </field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
  
    <form name="EditWorkEffortRequirement" default-map-name="requirement" 
            default-title-style="tableheadtext" default-tooltip-style="tabletext" 
            default-widget-style="inputBox" 
            extends="EditRequirement" extends-resource="component://order/webapp/ordermgr/requirement/RequirementForms.xml"
            target="updateRequirement" title="" type="single">
        <sort-order>
            <sort-field name="workEffortId"/>
        </sort-order>
        <field name="workEffortId" map-name="parameters"> <display /> </field>
        <field name="requirementId" ><display/></field>
       <field name="submitButton" title="[${uiLabelMap.CommonSave}]" widget-style="buttontext"> <submit button-type="text-link"/> </field>
    </form>
</forms>
