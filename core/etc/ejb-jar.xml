<ejb-jar>
  <description>The Core Module of the Open For Business Project</description>
  <enterprise-beans>
    <entity>
      <ejb-name>GenericEntity</ejb-name>
      <home>org.ofbiz.core.entity.GenericHome</home>
      <remote>org.ofbiz.core.entity.GenericRemote</remote>
      <ejb-class>org.ofbiz.core.entity.GenericBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>org.ofbiz.core.entity.GenericPK</prim-key-class>
      <reentrant>False</reentrant>
      <resource-ref>
        <res-ref-name>jdbc/MainDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
    </entity>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>GenericEntity</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
