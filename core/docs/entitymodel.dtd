<!-- ====================== Root Element ======================= -->
<!ELEMENT entitymodel (entity*, title?, description?, copyright?, author?, version?)>

<!-- ================= Children of entitymodel =================== -->
<!ELEMENT entity (title?, description?, copyright?, author?, version?, 
                  entity-name?, table-name?, use-cache?, field*,
                  prim-key-col*, relation*)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT description (#PCDATA)>
<!ELEMENT copyright (#PCDATA)>
<!ELEMENT author (#PCDATA)>
<!ELEMENT version (#PCDATA)>

<!-- ================== Children of entity ===================== -->
<!-- see the children of entitygen section for title, etc. -->
<!ELEMENT entity-name (#PCDATA)>
<!ELEMENT table-name (#PCDATA)>
<!ELEMENT use-cache (#PCDATA)>
<!ELEMENT field (col-name?, name?, type?, validate*)>
<!ELEMENT prim-key-col (#PCDATA)>
<!ELEMENT relation (title?,type?,rel-table-name?,rel-entity-name?,key-map*)>

<!-- ==================== Children of field ===================== -->
<!ELEMENT col-name (#PCDATA)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT type (#PCDATA)>
<!ELEMENT validate (#PCDATA)>

<!-- ==================== Children of relation ====================== -->
<!ELEMENT title (#PCDATA)>
<!ELEMENT type (#PCDATA)>  <!-- this can be one or many depending on the cardinality of the related table compared to this table -->
<!ELEMENT rel-table-name (#PCDATA)>
<!ELEMENT rel-entity-name (#PCDATA)>
<!ELEMENT key-map (col-name?,field-name?,rel-col-name?,rel-field-name?)>
<!-- see definition of relation in entity section above -->

<!-- ===================== Children of key-map ====================== -->
<!-- see definition of col-name and name in field section above -->
<!ELEMENT rel-col-name (#PCDATA)> <!-- this is only required if the col-name in the related table is different from the col-name in this table -->
<!ELEMENT rel-field-name (#PCDATA)> <!-- this is only required if the field-name in the related table is different from the name in this table -->

