      <Activities>

        <Activity Id="receive_order" Name="Receive Order">
          <Description>The first activity to run when an order is received.</Description>
          <Limit>1</Limit>
          <Route/>
          <Performer>admin</Performer>
		  <StartMode>
		    <Automatic/>
		  </StartMode>
		  <FinishMode>
		    <Automatic/>
		  </FinishMode>
          <Priority>1</Priority>
          <TransitionRestrictions>
            <TransitionRestriction>
              <Join Type="AND"/>
              <Split Type="AND"/>
            </TransitionRestriction>
          </TransitionRestrictions>

          <!--  Ingore this ... here for reference only.
          <SimulationInformation Instantiation="ONCE">
            <Cost>5</Cost>
            <TimeEstimation>
              <WaitingTime>2</WaitingTime>
              <WorkingTime>3</WorkingTime>
              <Duration>10</Duration>
            </TimeEstimation>
          </SimulationInformation>
          <Icon></Icon>
          <Documentation></Documentation>
          <TransitionRestrictions>
            <TransitionRestriction>
              <InlineBlock Begin="NMTOKEN" End="NMTOKEN">
                <BlockName>#PCDATA</BlockName>
                <Description>#PCDATA</Description>
                <Icon>#PCDATA</Icon>
                <Documentation>#PCDATA</Documentation>
              </InlineBlock>
              <Join Type="AND"/>
              <Split Type="AND">
                <TransitionRefs>
                  <TransitionRef Id="NMTOKEN"/>
                </TransitionRefs>
              </Split>
            </TransitionRestriction>
          </TransitionRestrictions>
          -->

          <ExtendedAttributes>
            <ExtendedAttribute Name="canStart" Value="Y"/> <!-- must always be Y or N -->
          </ExtendedAttributes>
        </Activity>

        <Activity Id="assign_approver" Name="Assign Approver">
          <Description>Assigns a participant to approve the order.</Description>
          <Limit>30</Limit>
		  <Implementation>
		    <Tool Id="testScv" Type="PROCEDURE">
              <ActualParameters>
                <ActualParameter>
                    expr:expressionTest = orderId.equals("10000") ? "OrderId is 10000" : "OrderId is NOT 10000"
                </ActualParameter>
                <ActualParameter>expr: message=orderId</ActualParameter>
                <ActualParameter>message</ActualParameter>
                <ActualParameter>expressionTest</ActualParameter>
              </ActualParameters>
            </Tool>
		  </Implementation>
          <Performer>admin</Performer>
		  <StartMode>
		    <Automatic/>
		  </StartMode>
		  <FinishMode>
		    <Automatic/>
		  </FinishMode>
          <Priority>1</Priority>
          <TransitionRestrictions>
            <TransitionRestriction>
              <Join Type="AND"/>
              <Split Type="AND"/>
            </TransitionRestriction>
          </TransitionRestrictions>
          <ExtendedAttributes>
            <ExtendedAttribute Name="canStart" Value="Y"/> <!-- must always be Y or N -->
          </ExtendedAttributes>
        </Activity>

        <Activity Id="send_notification" Name="Send Notification">
          <Description>Sends the admins a notification the order has arrived.</Description>
          <Limit>30</Limit>
		  <Implementation>
		    <Tool Id="testScv" Type="PROCEDURE">
              <ActualParameters>
                <ActualParameter>expr: message="Message to Admin 0.01."</ActualParameter>
                <ActualParameter>message</ActualParameter>
              </ActualParameters>
            </Tool>
		  </Implementation>
          <Performer>admin</Performer>
		  <StartMode>
		    <Automatic/>
		  </StartMode>
		  <FinishMode>
		    <Automatic/>
		  </FinishMode>
          <Priority>1</Priority>
          <TransitionRestrictions>
            <TransitionRestriction>
              <Join Type="AND"/>
              <Split Type="AND"/>
            </TransitionRestriction>
          </TransitionRestrictions>
        </Activity>

        <Activity Id="approve_order" Name="Approve Order">
          <Description>The assigned participant approves the order.</Description>
          <Limit>1</Limit>
		  <Implementation>
		    <No/>
		  </Implementation>
          <Performer>ORDER_CLERK</Performer>
          <!-- <Performer>??? - assigned at run time</Performer> -->

		  <StartMode>
            <Manual/>
		  </StartMode>
		  <FinishMode>
		    <Manual/>
		  </FinishMode>
          <Priority>2</Priority>
          <TransitionRestrictions>
            <TransitionRestriction>
              <Join Type="AND"/>
              <Split Type="AND"/>
            </TransitionRestriction>
          </TransitionRestrictions>
          <ExtendedAttributes>
            <ExtendedAttribute Name="acceptAllAssignments" Value="Y"/>
            <ExtendedAttribute Name="completeAllAssignments" Value="Y"/>
            <ExtendedAttribute Name="limitAfterStart" Value="N"/>
            <ExtendedAttribute Name="limitService" Value="testScv"/>
            <ExtendedAttribute Name="inheritPriority" Value="Y"/>
            <ExtendedAttribute Name="canStart" Value="N"/>
          </ExtendedAttributes>
        </Activity>
      </Activities>

      <Transitions>
        <Transition Id="trans1" From="receive_order" To="assign_approver" Loop="NOLOOP" Name="Go to Assign Approver">
          <Condition Type="CONDITION"/>
          <Description>None</Description>
          <ExtendedAttributes>
            <ExtendedAttribute Name="conditionClassName" Value="org.ofbiz.core.workflow.impl.ServiceCondition"/>
            <ExtendedAttribute Name="serviceName" Value="testWorkflowCondition"/>
          </ExtendedAttributes>
        </Transition>
        <Transition Id="trans2" From="receive_order" To="send_notification" Loop="NOLOOP" Name="Go to Send Notify">
          <Condition Type="CONDITION"/>
          <Description>None</Description>
        </Transition>
        <Transition Id="trans3" From="assign_approver" To="approve_order" Loop="NOLOOP" Name="Go to Approve Order">
          <Condition Type="CONDITION">true</Condition>
          <Description>None</Description>
        </Transition>
        <Transition Id="trans4" From="send_notification" To="approve_order" Loop="NOLOOP" Name="Go to Approve Order">
          <Condition Type="CONDITION">true</Condition>
          <Description>None</Description>
        </Transition>
      </Transitions>

    </WorkflowProcess>
  </WorkflowProcesses>

</Package>

