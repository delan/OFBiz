      <Participants>
        <Participant Id="admin" Name="First Participant">
          <ParticipantType Type="HUMAN"/>
          <Description>None</Description>
		  <ExtendedAttributes>
		    <ExtendedAttribute Name="partyId" Value="admin"/>
	      </ExtendedAttributes>
        </Participant>
        <Participant Id="all" Name="All Participant">
          <ParticipantType Type="HUMAN"/>
          <Description>None</Description>
		  <ExtendedAttributes>
		    <ExtendedAttribute Name="roleTypeId" Value="ORDER_CLERK"/>
	      </ExtendedAttributes>
        </Participant>        
      </Participants>

