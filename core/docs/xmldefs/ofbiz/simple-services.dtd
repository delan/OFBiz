<!ELEMENT simple-services ( simple-service* )>
<!ELEMENT simple-service ( ( make-now-timestamp | get-sequenced-id | simple-map-processor | check-errors | service | 
                             make-value | find-value | clone-value | fill-value | value-to-list | store-list | remove-list |
                             create-value | update-value | remove-value )* )>
<!ATTLIST simple-service
    service-name CDATA #REQUIRED
    short-description CDATA #REQUIRED
    login-required ( true | false ) "true"
    context-map-name CDATA "context"
    request-name CDATA "_request_"
    response-code-name CDATA "_response_code_"
    error-message-name CDATA "_error_message_"
    success-message-name CDATA "_success_message_"
>

<!ELEMENT make-now-timestamp EMPTY>
<!ATTLIST make-now-timestamp
    map-name CDATA #REQUIRED
    map-field CDATA #REQUIRED
>
<!ELEMENT get-sequenced-id EMPTY>
<!ATTLIST get-sequenced-id
    sequence-name CDATA #REQUIRED
    map-name CDATA #REQUIRED
    map-field CDATA #REQUIRED
>

<!ELEMENT simple-map-processor EMPTY>
<!ATTLIST simple-map-processor
    xml-resource CDATA #REQUIRED
    processor-name CDATA #REQUIRED
    in-map-name CDATA #REQUIRED
    out-map-name CDATA #REQUIRED
    error-list-name CDATA "_error_list_"
>

<!ELEMENT check-errors EMPTY>
<!ATTLIST check-errors
    error-code CDATA "error"
    error-list-name CDATA "_error_list_"
>

<!ELEMENT service ( results-to-map*, result-to-field* )>
<!ATTLIST service
    service-name CDATA #REQUIRED
    in-map-name CDATA #REQUIRED
    include-user-login ( true | false ) "true"
    error-code CDATA "error"
    success-code CDATA "success"
>
    <!ELEMENT results-to-map EMPTY>
    <!ATTLIST results-to-map
        map-name CDATA #REQUIRED
    >
    <!ELEMENT result-to-field EMPTY>
    <!ATTLIST result-to-field
        result-name CDATA #REQUIRED
        map-name CDATA #REQUIRED
        field-name CDATA #IMPLIED
    >

<!ELEMENT make-value EMPTY>
<!ATTLIST make-value
    value-name CDATA #REQUIRED
    entity-name CDATA #REQUIRED
    map-name CDATA #IMPLIED
>
<!ELEMENT find-value EMPTY>
<!ATTLIST find-value
    value-name CDATA #REQUIRED
    entity-name CDATA #REQUIRED
    map-name CDATA #IMPLIED
>
<!ELEMENT clone-value EMPTY>
<!ATTLIST clone-value
    value-name CDATA #REQUIRED
    new-value-name CDATA #REQUIRED
>
<!ELEMENT fill-value EMPTY>
<!ATTLIST fill-value
    value-name CDATA #REQUIRED
    map-name CDATA #REQUIRED
>

<!ELEMENT value-to-list EMPTY>
<!ATTLIST value-to-list
    value-name CDATA #REQUIRED
    list-name CDATA #REQUIRED
>
<!ELEMENT store-list EMPTY>
<!ATTLIST store-list
    list-name CDATA #REQUIRED
>
<!ELEMENT remove-list EMPTY>
<!ATTLIST remove-list
    list-name CDATA #REQUIRED
>

<!ELEMENT create-value EMPTY>
<!ATTLIST create-value
    value-name CDATA #REQUIRED
>
<!ELEMENT update-value EMPTY>
<!ATTLIST update-value
    value-name CDATA #REQUIRED
>
<!ELEMENT remove-value EMPTY>
<!ATTLIST remove-value
    value-name CDATA #REQUIRED
>
