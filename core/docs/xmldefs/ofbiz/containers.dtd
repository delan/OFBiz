<!ELEMENT containers (web-container?, component-container)>
<!ELEMENT web-container (server+)>
<!ATTLIST web-container
	class CDATA #REQUIRED
>
<!ELEMENT server (listener+)>
<!ATTLIST server
	name CDATA #REQUIRED
>
<!ELEMENT listener EMPTY>
<!ATTLIST listener
	type ( default | sun-jsse | ibm-jsse | nio | ajp13 ) "default"
	host CDATA #IMPLIED
	port CDATA "8080"
	min-threads CDATA "5"
	max-threads CDATA "250"
	max-idle-time CDATA "30000"
	max-read-time CDATA "60000"
	keystore CDATA #IMPLIED
	password CDATA #IMPLIED
	key-password CDATA #IMPLIED
	need-client-cert ( true | false ) "false"	
>
<!ELEMENT component-container (component+)>
<!ATTLIST component-container
	class CDATA #REQUIRED
>
<!ELEMENT component EMPTY>
<!ATTLIST component
	name CDATA #REQUIRED
	config CDATA #REQUIRED
>
