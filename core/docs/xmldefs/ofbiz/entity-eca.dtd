<!ELEMENT entity-eca ( eca+ )>
<!ELEMENT eca ( (condition | condition-field)*, action+ )>
<!ATTLIST eca
    entity CDATA #REQUIRED
    operation ( create | store | remove | find | create-store | create-remove | store-remove | create-store-remove | any ) #REQUIRED
    event ( validate | run | return | cache-check | cache-put | cache-clear ) #REQUIRED
    run-on-error ( true | false ) "false"
>

<!ELEMENT condition EMPTY>
<!ATTLIST condition
    field-name CDATA #REQUIRED
    operator ( less | greater | less-equals | greater-equals | equals | not-equals | is-null | is-not-null | contains ) #REQUIRED
    value CDATA #IMPLIED
    type ( PlainString | String | Double | Float | Long | Integer | Date | Time | Timestamp | Boolean | Object ) "String"
    format CDATA #IMPLIED
>

<!ELEMENT condition-field EMPTY>
<!ATTLIST condition-field
    field-name CDATA #REQUIRED
    operator ( less | greater | less-equals | greater-equals | equals | not-equals | contains ) #REQUIRED
    to-field-name CDATA #IMPLIED
    type ( PlainString | String | Double | Float | Long | Integer | Date | Time | Timestamp | Boolean | Object ) "String"
    format CDATA #IMPLIED
>

<!ELEMENT action EMPTY>
<!ATTLIST action
    service CDATA #REQUIRED
    mode ( sync | async ) #REQUIRED
    result-to-value ( true | false ) "true"
    rollback-on-error ( true | false ) "false"
    persist ( true | false ) "false"
    value-attr CDATA #IMPLIED
>
<!-- if value-attr is specified the generic value object corresponding to the entity in question will be passed
    to the action service -->

