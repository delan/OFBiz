<!ELEMENT service-eca ( eca+ )>
<!ELEMENT eca ( condition*, action+ )>
<!ATTLIST eca
	serviceName CDATA #REQUIRED
	event ( auth | validate | invoke | commit ) #REQUIRED
>
<!ELEMENT condition EMPTY>
<!ATTLIST condition
    lhs-type ( constant | field ) "constant"
    lhs-map CDATA #IMPLIED
    lhs-value CDATA #REQUIRED
    operator ( less | greater | less-equals | greater-equals | equals | not-equals | contains ) #REQUIRED
    rhs-type ( constant | field ) "constant"
    rhs-map CDATA #IMPLIED
    rhs-value CDATA #REQUIRED
    compare-type ( PlainString | String | Double | Float | Long | Integer | Date | Time | Timestamp | Object ) "String"
>
<!ELEMENT action EMPTY>
<!ATTLIST action
	service CDATA #REQUIRED
	mode ( sync | async ) #REQUIRED
>

