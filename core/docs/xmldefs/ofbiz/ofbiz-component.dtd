<!ELEMENT ofbiz-component ( resource-loader+, transaction-manager-jndi? )>
<!ATTLIST ofbiz-component 
    name CDATA #REQUIRED
>

<!ELEMENT resource-loader EMPTY>
<!ATTLIST resource-loader
    name CDATA #REQUIRED
    class CDATA #REQUIRED
    prepend-env CDATA #IMPLIED
    prefix CDATA #IMPLIED
>

<!ELEMENT classpath-jar EMPTY>
<!ATTLIST classpath-jar
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>
<!ELEMENT classpath-dir EMPTY>
<!ATTLIST classpath-dir
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT entity-model EMPTY>
<!ATTLIST entity-model
    reader-name CDATA #REQUIRED
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>
<!ELEMENT entity-group EMPTY>
<!ATTLIST entity-group
    reader-name CDATA #REQUIRED
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>
<!ELEMENT entity-eca EMPTY>
<!ATTLIST entity-eca
    reader-name CDATA #REQUIRED
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT service-model EMPTY>
<!ATTLIST service-model
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>
<!ELEMENT service-group EMPTY>
<!ATTLIST service-group
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>
<!ELEMENT service-eca EMPTY>
<!ATTLIST service-eca
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ATTLIST webapp
    name CDATA #REQUIRED
    server CDATA #REQUIRED
    loader CDATA #REQUIRED
    location CDATA #REQUIRED
>


