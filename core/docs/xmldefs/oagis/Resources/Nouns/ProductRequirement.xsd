        <xs:include schemaLocation="ProductRequirementBase.xsd"/>
        <xs:element name="ProductRequirement" type="ProductRequirementBase" substitutionGroup="Noun">
                <xs:annotation>
                        <xs:documentation source="http://www.openapplications.org/oagis">Product Requirement is a request to reserve or allocate a specified quantity of a specified item.  Typically, this requirement would be received by an inventory or production system.</xs:documentation>
