<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/entitymodel.xsd">
    <title>Special Entities for Wholesale</title>
    <description>None</description>
    <copyright>Copyright (c) 2005 The Open For Business Project - www.ofbiz.org</copyright>
    <author>Si Chen</author>
    <version>1.0</version>

	<view-entity entity-name="PartyRelationshipAndType"
		package-name="org.ofbiz.wholesale"
		title="Links together PartyRelationship:partyIdTo with Party:partyId">
		<member-entity entity-alias="PR" entity-name="PartyRelationship"/>
		<member-entity entity-alias="P" entity-name="Party"/>
		<alias-all entity-alias="PR"/>
		<alias-all entity-alias="P"/>
		<view-link entity-alias="PR" rel-entity-alias="P">
			<key-map field-name="partyIdTo" rel-field-name="partyId"/>
		</view-link>
	</view-entity>
	
	<view-entity entity-name="OrderHeaderPersonGroupRoleNote"
		package-name="org.ofbiz.wholesale"
		title="Links together OrderHeader:orderId to OrderRole:orderId, OrderHeaderNote:orderId and OrderRole:partyId to Party:partyId, PartyGroup:partyId">
		<member-entity entity-alias="OH" entity-name="OrderHeader"/>
		<member-entity entity-alias="OHN" entity-name="OrderHeaderNote"/>
		<member-entity entity-alias="ORL" entity-name="OrderRole"/>
		<member-entity entity-alias="P" entity-name="Party"/>
		<member-entity entity-alias="PERSN" entity-name="Person"/>
		<member-entity entity-alias="PG" entity-name="PartyGroup"/>
        <member-entity entity-alias="ND" entity-name="NoteData"/>
		<alias-all entity-alias="OH"/>
		<alias-all entity-alias="OHN"/>
		<alias-all entity-alias="ORL"/>
		<alias-all entity-alias="P"/>
		<alias-all entity-alias="PG"/>
		<alias-all entity-alias="PERSN"/>
		<alias-all entity-alias="ND"/>
		<view-link entity-alias="ORL" rel-entity-alias="OH">
		    <key-map field-name="orderId"/>
		</view-link>
		<view-link entity-alias="ORL" rel-entity-alias="OHN" rel-optional="true">
		    <key-map field-name="orderId"/>
		</view-link>
		<view-link entity-alias="ORL" rel-entity-alias="P">
		    <key-map field-name="partyId"/>
		</view-link>
		<view-link entity-alias="ORL" rel-entity-alias="PERSN" rel-optional="true">
		    <key-map field-name="partyId"/>
		</view-link>
		<view-link entity-alias="ORL" rel-entity-alias="PG" rel-optional="true">
		    <key-map field-name="partyId"/>
		</view-link>
        <view-link entity-alias="OHN" rel-entity-alias="ND" rel-optional="true">
            <key-map field-name="noteId"/>
         </view-link>
         <relation type="one" fk-name="ORDER_HDR_STTS" rel-entity-name="StatusItem">
        	<key-map field-name="statusId"/>
      	</relation>
	</view-entity>
</entitymodel>

