<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">


    <form name="login" target="login" title="" type="single"
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox">
        <field name="USERNAME" title="${uiLabelMap.CommonUsername}" entry-name="userLoginId" map-name="autoUserLogin">
            <text size="20"/>
        </field>
        <field name="notUser" title=" " use-when="0 &lt; &quot;${autoUserLogin.userLoginId}&quot;.length() ">
          <hyperlink also-hidden="false" description="${uiLabelMap.CommonNot}&amp;nbsp;${autoUserLogin.userLoginId}" target="${autoLogoutUrl}" target-type="intra-app"/>
        </field>
        <field name="PASSWORD" title="${uiLabelMap.CommonPassword}" >
            <password size="20"/>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonLogin}" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
        <!--
        <field name="forgotpassword" title="Forgot Password?">
            <hyperlink also-hidden="false" target-type="plain" description="${partyId}" target=""/>
        </field>
            -->
        <field name="previousParams" >
            <hidden />
        </field>
    </form>
    <form name="forgotpassword" target="/ecommerce/control/forgotpassword${previousParams}" 
        target-type="inter-app"
        title="" type="single"
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox">
        <field name="USERNAME" title="${uiLabelMap.CommonUsername}" entry-name="userName" >
            <text size="20"/>
        </field>
        <field name="GET_PASSWORD_HINT" title="${uiLabelMap.CommonGetPasswordHint}" widget-style="smallSubmit" position="1" >
            <submit button-type="button"/>
        </field>
        <field name="GET_EMAIL_PASSWORD" title="${uiLabelMap.CommonEmailPassword}" widget-style="smallSubmit" position="2" >
            <submit button-type="button"/>
        </field>
    </form>
</forms>
