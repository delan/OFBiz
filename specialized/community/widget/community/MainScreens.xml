<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
        <actions>
        </actions>
                  <widgets>
                       <decorator-screen name="main" location="component://community/widget/community/MainCommon.xml" >
                         <decorator-section name="body">
                           <label text="OFBiz Blog Site"/>
                          </decorator-section>
                        </decorator-screen>
                  </widgets>
        </section>
    </screen>
    <screen name="login">
        <section>
            <actions>
                <property-map resource="BlogUiLabels" map-name="uiLabelMap"></property-map>
                <script location="component://community/widget/community/login.bsh"/>
                <set field="userName" from-field="requestParameters.USERNAME" default-value="${autoUserLogin.userLoginId}"/>
            </actions>
            <widgets>
                       <decorator-screen name="main" location="component://community/widget/community/MainCommon.xml">
                         <decorator-section name="body">
                           <container>
                           <label text="${uiLabelMap.CommonLogin}" style="head1"/>
                           
                           <container style="boxleft">
                             <container style="boxtop">
                               <label text="${uiLabelMap.CommonRegistred}" style="boxhead"/> 
                             </container>
                             <include-form name="login" location="component://community/widget/community/MainForms.xml"/>
                           </container>
                           <!-- It's probably better if new users are created on the ecommerce site, less confusing flow
                           <container style="boxright">
                             <container style="boxtop">
                               <label text="${uiLabelMap.CommonNewUser}" style="boxhead"/> 
                             </container>
                             <label text="${uiLabelMap.CommonMayCreateNewAccountHere}&lt;br/&gt;" style="tabletext"/>
                             <link text="${uiLabelMap.CommonMayCreate}" style="smallSubmit" target="ecommerce/control/newcustomer${previousParams}" url-mode="inter-app"/>
                           </container>
                           -->
                           <container style="boxright">
                             <container style="boxtop">
                               <label text="${uiLabelMap.CommonForgotYourPassword}" style="boxhead"/> 
                             </container>
                             <include-form name="forgotpassword" location="component://community/widget/community/MainForms.xml"/>
                           </container>
                           <container style="endcolumns"/>
                           </container>
                          </decorator-section>
                        </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="error">
        <section>
        <actions>
        </actions>
                  <widgets>
                       <decorator-screen name="main" location="component://community/widget/community/MainCommon.xml" >
                         <decorator-section name="body">
                           <label text="OFBiz Document Site - Error"/>
                          </decorator-section>
                        </decorator-screen>
                  </widgets>
        </section>
    </screen>
    <screen name="DocTop">
        <section>
            <actions>
            </actions>
            <widgets>
                <platform-specific><html><html-template location="component://community/webapp/community/includes/appbar.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
</screens>
