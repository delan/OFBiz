<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <screen name="main">
        <section>
            <actions>
                <property-map resource="BlogUiLabels" map-name="uiLabelMap" global="true"/>
                <!-- <set field="layoutSettings.headerMiddleBackgroundUrl" value="" global="true"/> -->
                <!-- <set field="layoutSettings.headerRightBackgroundUrl" value="" global="true"/> -->
                <set field="activeApp" value="blog" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.CatalogCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.ProductCompanySubtitle" global="true"/>
                <set field="layoutSettings.headerImageUrl" value="/images/ofbiz_logo.jpg" global="true"/>
            </actions>
            <widgets>
                
              <platform-specific>
                <html>
                  <html-template-decorator  location="component://community/webapp/community/includes/main.ftl">
                    
                    <html-template-decorator-section name="top">
                        <include-screen name="DocTop" location="component://community/widget/community/MainScreens.xml"/>
                    </html-template-decorator-section>
                        <!-- by default will render left-bar only if leftbarScreen value not empty -->
                    
                    <html-template-decorator-section name="leftbar">
                        <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
                    </html-template-decorator-section>
                    
                    <html-template-decorator-section name="body">
                        <container style="column-main">
                            <platform-specific><html><html-template location="component://common/webcommon/includes/messages.ftl"/></html></platform-specific>
                            <container style="appbarleft">
                                <link text="Forums" id="forums" style="tabButton" target="/MainForum" target-window="_top"/>
                                <link text="Blogs" id="blogs" style="tabButton" target="/MainBlog" target-window="_top"/>
                            </container>
                            <container style="appbarright">
                                <include-screen name="loginLink"/>
                                <include-screen name="logoutLink"/>
                            </container>
                            <decorator-section-include name="body"/>
                        </container>
                    </html-template-decorator-section>
                
                  </html-template-decorator>
                </html>
              </platform-specific>
                
            </widgets>
        </section>
    </screen>
    
    <screen name="loginLink">
        <section>
            <condition>
                <if-empty field-name="userLogin.userLoginId" />
            </condition>
            <actions>
            </actions>
            <widgets>
                <link text="Login" style="tabButton" target="/checkLogin" target-window="_top"/>
            </widgets>
        </section>
    </screen>
    <screen name="logoutLink">
        <section>
            <condition>
                <not>
                <if-empty field-name="userLogin.userLoginId" />
                </not>
            </condition>
            <actions>
            </actions>
            <widgets>
                <link text="Profile" style="tabButton" url-mode="inter-app" target="/ecommerce/control/viewprofile?externalLoginKey=${externalLoginKey}" target-window="_top"/>
                <link text="Logout" style="tabButton" target="/logout" target-window="_top"/>
            </widgets>
        </section>
    </screen>

</screens>
