    <!-- =========== Top-Level and Stand-Alone Screens =========== -->

    <!-- Category Screens -->
    <screen name="category">
        <section>
            <actions>
                <set field="leftbarScreenName" value="leftbar"/>
                <set field="rightbarScreenName" value="rightbar"/>

                <set field="title-property" value="PageTitleCategoryPage"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="applications://ecommerce/widget/CommonScreens.xml">
                    <decorator-section name="body">
                        <include-screen name="category-include"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="category-include">
        <section>
            <actions>
                <script location="applications://ecommerce/webapp/ecommerce/WEB-INF/actions/catalog/category.bsh"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <not><if-empty field-name="productCategory"/></not>
                    </condition>
                    <widgets>
                        <include-screen name="${detailScreen}"/>
                    </widgets>
                    <fail-widgets>
                        <label style="head2">${uiLabelMap.ProductCategoryNotFoundforCategoryID} ${productCategoryId}!</label>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>
    <screen name="categorydetail">
        <section>
            <actions>
                <script location="applications://ecommerce/webapp/ecommerce/WEB-INF/actions/catalog/categorydetail.bsh"/>
