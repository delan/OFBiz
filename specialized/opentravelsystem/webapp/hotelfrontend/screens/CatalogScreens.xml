                <set field="title-property" value="PageTitleProductPage"/>
                <script location="applications://ecommerce/webapp/ecommerce/WEB-INF/actions/catalog/product.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="specialized://opentravelsystem/webapp/hotelfrontend/screens/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <not><if-empty field-name="product"/></not>
                            </condition>
                            <widgets>
                                <include-screen name="${detailScreen}"/>
                            </widgets>
                            <fail-widgets>
                                <label style="head2">${uiLabelMap.ProductProductNotFound} ${productId}!</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
