<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <screen name="CommonDecorator">
        <section>
            <actions>
                <property-map resource="backendConfig" map-name="configMap" global="true"/>
                <set field="productStoreId" to-scope="application" value="${configMap.productStoreId}" global="true"/>
                <property-map resource="opentravelsystemUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.opentravelsystemCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.opentravelsystemCompanySubtitle" global="true"/>
                <set field="layoutSettings.headerImageUrl" value="/images/opentravelsystem_logo.jpg" global="true"/>
                <set field="activeApp" value="website" global="true"/>
            </actions>
            <widgets>
                <!-- render header -->
                <platform-specific><html><html-template location="component://opentravelsystem/webapp/website/includes/header.ftl"/></html></platform-specific>
                <!-- render appbar -->
                <platform-specific><html><html-template location="component://opentravelsystem/webapp/website/includes/appbar.ftl"/></html></platform-specific>
                <container style="OTSmain">
	                <!-- by default will render left-bar only if leftbarScreen value not empty -->
	                <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
	                <!-- by default will render right-bar only if rightbarScreen value not empty -->
	                <include-screen name="${rightbarScreenName}" location="${rightbarScreenLocation}"/>
	                <decorator-section-include name="body"/><!-- last because of automatic width -->
	                <!-- render footer -->
                </container>
	                <platform-specific><html><html-template location="component://opentravelsystem/includes/footer.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>
    
    <screen name="main">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Home"/>
                <set field="page.headerItem" value="main"/>
                <set field="leftbarScreenName" value="left"/>
                <set field="rightbarScreenName" value="right"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonDecorator">
                    <decorator-section name="body">
                       <container style="OTScolumn-main">
                        <content  content-id="otsfrontpage"/>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="left">
        <section>
            <widgets>
                <container style="OTScolumn-left">
                <content  content-id="otsleftcolumn"/>
                <!--content  content-id="otsleft2column"/-->
                </container>
            </widgets>
        </section>
    </screen>

    <screen name="right">
        <section>
            <widgets>
                <container style="OTScolumn-right">
                <content  content-id="otsrightcolumn"/>
                <content  content-id="otsright2column"/>
                </container>
            </widgets>
        </section>
    </screen>

    <screen name="login">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Login"/>
                <set field="page.headerItem" value="main"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonDecorator">
                    <decorator-section name="body">
                      <container style="contentarea">
                        <platform-specific>
                            <html>
                                <html-template location="component://common/webcommon/login.ftl"/>
                            </html>
                        </platform-specific>
                      </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="main1">
        <section>
            <actions>
                <set field="title" value="View Content"/>
                <set field="headerItem" value="Content"/>
                <set field="entityName" value="ContentAssocDataResourceViewFrom"/>
                <set field="permissionType" value="none"/>
                <set field="contentId" value="ECMC180000"/>
                <script location="component://ecommerce/webapp/ecommerce/WEB-INF/actions/forum/nodetrailprep.bsh"/>
                <script location="component://ecommerce/webapp/ecommerce/WEB-INF/actions/includes/mruadd.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonDecorator">
                    <decorator-section name="body">
                       <container style="OTScolumn-main">
                        <platform-specific><html><html-template location="component://ecommerce/webapp/ecommerce/content/viewcontent.ftl"/></html></platform-specific>
                       </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>

