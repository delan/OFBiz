<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <screen name="CommonMainDecorator">
        <section>
            <actions>
                <property-map resource="opentravelsystemUiLabels"
                    map-name="uiLabelMap" global="true"/>
            </actions>
            <widgets>
                <decorator-screen name="common-decorator" location="component://opentravelsystem/webapp/hotelbackend/screens/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                 <platform-specific>
                                    <html>
                                        <html-template location="component://opentravelsystem/webapp/hotelbackend/includes/appheaderMain.ftl"/>
                                    </html>
                                </platform-specific>
                                <container style="contentarea">
                                    <!-- by default will render left-bar only if leftbarScreen value not empty -->
                                    <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
                        <platform-specific>
                             <html><html-template location="component://common/webcommon/includes/messages.ftl"/></html>
                        </platform-specific>
                                    <decorator-section-include name="body"/>
                                </container>
                            </widgets>
                            <fail-widgets>
                                <label style="head3">${uiLabelMap.ProductCatalogViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="main">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Main"/>
                <set field="page.headerItem" value="main"/>
                <!-- gets called from the store selection list and expect the productStorId to be passed to main. -->
                <set field="productStoreId" to-scope="user"  from-field="parameters.productStoreId" global="true"/>
                <set field="prodCatalogId" to-scope="user" from-field="parameters.productStoreId" global="true"/>
                <set field="webSiteId" to-scope="user" from-field="parameters.productStoreId" global="true"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonMainDecorator">
                    <decorator-section name="body">
                        <!--content content-id="otsfrontpage"/--> <!-- get page from internal cms instead of main.ftl below-->
                        <!--content content-id="otsxmlxsl"/--> <!-- xml/xsl test-->
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/main.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="intro">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Main"/>
                <set field="page.headerItem" value="intro"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonMainDecorator">
                    <decorator-section name="body">
                        <content content-id="OpenTravelSystemIntro"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="login">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Login"/>
                <set field="page.headerItem" value="main"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonMainDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://common/webcommon/login.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
