<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <!-- list parties whith a relation to the organizationPartyId -->
    <screen name="findParties">
        <section>
            <actions>
                <set field="title" value="Find a Party"/>
                <set field="headerItem" value="find"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">Find Parties</label></container>
                        <include-form name="FindParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                        <include-form name="ListParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPaymentsReceived">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdFrom" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List payments received for party ${parameters.partyId}</label></container>
                        <include-form name="ListPayments" location="component://accountingext/webapp/accountingext/payment/PaymentForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPaymentsSend">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdTo" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List payments paid to party ${parameters.partyId}</label></container>
                        <include-form name="ListPayments" location="component://accountingext/webapp/accountingext/payment/PaymentForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listSalesInvoices">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyId" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List sales invoices for party ${parameters.partyId}</label></container>
                        <include-form name="ListInvoices" location="component://accountingext/webapp/accountingext/invoice/InvoiceForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPurchaseInvoices">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdFrom" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List purchase invoices for party ${parameters.partyId}</label></container>
                        <include-form name="ListInvoices" location="component://accountingext/webapp/accountingext/invoice/InvoiceForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
