<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <!-- list parties whith a relation to the organizationPartyId -->
    <screen name="findParties">
        <section>
            <actions>
                <set field="title" value="Find a Party"/>
                <set field="headerItem" value="find"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">Find Parties</label></container>
                        <include-form name="FindParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                        <include-form name="ListParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPaymentsReceived">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdFrom" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List payments received for party ${parameters.partyId}</label></container>
                        <include-form name="ListPayments" location="component://accountingext/webapp/accountingext/payment/PaymentForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPaymentsSend">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdTo" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List payments paid to party ${parameters.partyId}</label></container>
                        <include-form name="ListPayments" location="component://accountingext/webapp/accountingext/payment/PaymentForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listSalesInvoices">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyId" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List sales invoices for party ${parameters.partyId}</label></container>
                        <include-form name="ListInvoices" location="component://accountingext/webapp/accountingext/invoice/InvoiceForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="listPurchaseInvoices">
        <section>
            <actions>
                <set field="title" value="List Payments"/>
                <set field="headerItem" value="??"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="parameters.partyIdFrom" from-field="parameters.partyId"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1">List purchase invoices for party ${parameters.partyId}</label></container>
                        <include-form name="ListInvoices" location="component://accountingext/webapp/accountingext/invoice/InvoiceForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="main"><!-- list customers... -->
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Parties"/>
                <set field="page.headerItem" value="main"/>
                <set field="productStoreId" from-scope="user" from-field="productStoreId"/>
                <property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true"/>
                <entity-condition entity-name="CustomerSummary" list-name="customers">
                        <condition-expr field-name="productStoreId" operator="equals"  env-name="productStoreId"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                            <label style="head1">List of customers who placed an order.&lt;br&gt;</label>
                        <include-form name="ListCustomers" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="viewprofile">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Parties"/>
                <set field="page.headerItem" value="main"/>
                <set field="productStoreId" from-scope="user" from-field="productStoreId"/>
                <property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://party/webapp/partymgr/WEB-INF/actions/party/viewprofile.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container>
                            <platform-specific>
                                <html>
                                    <html-template location="component://opentravelsystem/webapp/hotelbackend/party/viewprofile.ftl"/>
                                </html>
                            </platform-specific>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="visitdetail">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Parties"/>
                <set field="page.headerItem" value="main"/>
                <set field="productStoreId" from-scope="user" from-field="productStoreId"/>
                <property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true"/>
                <script location="component://party/webapp/partymgr/WEB-INF/actions/visit/visitdetail.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator">
                    <decorator-section name="body">
                        <container>
                            <platform-specific>
                                <html>
                                    <html-template location="component://party/webapp/partymgr/visit/visitdetail.ftl"/>
                                </html>
                            </platform-specific>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="findordersCust">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Parties"/>
                <set field="page.headerItem" value="main"/>
                <property-map resource="OrderUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="productStoreId" from-scope="user" from-field="productStoreId"/>
                <set field="productStoreId" to-scope="user" value="${productStoreId}"/>
                <script location="component://opentravelsystem/webapp/hotelbackend/WEB-INF/actions/order/findOrders.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/order/findOrders.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
</screens>
