<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <!-- list parties whith a relation to the organizationPartyId -->
    <screen name="findParties">
        <section>
            <actions>
                <set field="title" value="Find a Party"/>
                <set field="headerItem" value="Find"/>
                <set field="titleProperty" value="PageTitleFindInvoice"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1" text="Find Parties"/></container>
                        <include-form name="FindParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                        <section>
                            <condition>
                                <if-compare field-name="parameters.statusId" operator="equals" value="PARTYREL-ACTIVE"/>
                            </condition>
                            <widgets>
                                <include-form name="ListParties" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                            </widgets>
                            <fail-widgets>
                                <include-form name="ListParties1" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="editParty">
        <section>
            <actions>
                <set field="title" value="add/update a new party"/>
                <set field="partyId" from-field="parameters.partyId"/>
                <set field="tabButtonItem" value="EditParty"/>
                <entity-one entity-name="Party" value-name="party"></entity-one>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-empty field-name="parameters.partyId"/>
                            </condition>
                            <widgets>
                                <container><label style="head1" text="add a new party"/></container>
                            </widgets>
                            <fail-widgets>
                                <container><label style="head1" text="Modify party ${partyId}"/></container>
                            </fail-widgets>
                        </section>
                        <include-form name="editParty" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="editCompany">
        <section>
            <actions>
                <set field="title" value="add/update a new party"/>
                <set field="partyId" from-field="parameters.partyId"/>
                <set field="tabButtonItem" value="CompanyInfo"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <container><label style="head1" text="Update the Organization Party Information"/></container>
                            </widgets>
                        </section>
                        <include-form name="editCompany" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="partyFinancialHistory">
        <section>
            <actions>
                <set field="title" value="Party financial history"/>
                <set field="tabButtonItem" value="FinHistory"/>
                <set field="partyId" from-field="parameters.partyId"/>
                <entity-one entity-name="PartyNameView" value-name="party"></entity-one>
                <set field="organizationPartyId" from-scope="user" to-scope="screen" from-field="productStoreId"/>
                <script location="component://opentravelsystem/webapp/hotelbackend/script/partyFinancialHistory.bsh"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonPartyDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <container><label style="head1" text="Party: ${party.groupName} ${party.lastName} ${party.firstName} ${party.middleName} [${partyId}] financial history"/></container>
                        <container><label style="head1" text="Applied invoices to payments"/></container>
                        <include-form name="partyFinancialHistoryInvoices" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                        <section>
                            <condition>
                                <not>
                                    <if-empty field-name="historyListPayments"/>
                                </not>
                            </condition>
                            <widgets>
                                <container><label style="head1" text="Applied payments to payments"/></container>
                                <include-form name="partyFinancialHistoryPayments" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                            </widgets>
                        </section>
                        <section>
                            <condition>
                                <not>
                                    <if-empty field-name="historyListInvoicesN"/>
                                </not>
                            </condition>
                            <widgets>
                                <container><label style="head1" text="Invoices not yet (fully) applied"/></container>
                                <include-form name="partyFinancialHistoryInvoicesN" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                            </widgets>
                        </section>
                        <section>
                            <condition>
                                <not>
                                    <if-empty field-name="historyListPaymentsN"/>
                                </not>
                            </condition>
                            <widgets>
                                <container><label style="head1" text="Payments not yet (fully) applied"/></container>
                                <include-form name="partyFinancialHistoryPaymentsN" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                            </widgets>
                        </section>
                        <container><label style="head1" text="Totals for Company: ${organizationPartyId}"/></container>
                        <include-form name="partyFinancialSummary" location="component://opentravelsystem/webapp/hotelbackend/screens/PartyForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    
</screens>
