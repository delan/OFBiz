<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
    <screen name="CommonSettingsDecorator">
        <section>
            <widgets>
                <decorator-screen name="common-decorator" location="component://opentravelsystem/webapp/hotelbackend/screens/CommonScreens.xml">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                 <platform-specific>
                                    <html><html-template location="component://opentravelsystem/webapp/hotelbackend/includes/appheaderSettings.ftl"/></html>
                                </platform-specific>
                                 <platform-specific>
                                    <html><html-template location="component://common/webcommon/includes/messages.ftl"/></html>
                                </platform-specific>
                                <container style="contentarea">
                                    <!-- by default will render left-bar only if leftbarScreen value not empty -->
                                    <include-screen name="${leftbarScreenName}" location="${leftbarScreenLocation}"/>
                                    <decorator-section-include name="body"/>
                                </container>
                            </widgets>
                            <fail-widgets>
                                <label style="head3">${uiLabelMap.ProductCatalogViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
        <screen name="main">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="main"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                                 <platform-specific>
                                    <html>
                                        <html-template location="component://opentravelsystem/webapp/hotelbackend/settings/main.ftl"/>
                                    </html>
                                </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="EditProductStore">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="store"/>
                <set field="page.tabButtonItem" value="EditProductStore"/>
                <set field="productStoreId" from-scope="user"  from-field="productStoreId"/>
                <entity-one entity-name="ProductStore" value-name="productStore"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/ProductStoreTabBar.ftl"/>
                            </html>
                        </platform-specific>
                          <container>
                            <label style="head1">${uiLabelMap.PageTitleEditProductStore}:</label>
                            <label style="head2"> ${productStore.storeName} [${uiLabelMap.CommonId}:${productStoreId}]</label>
                             </container>
                        <include-form name="EditProductStore" location="component://product/webapp/catalog/store/ProductStoreForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="EditProductStoreRoles">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="store"/>
                <set field="page.tabButtonItem" value="EditProductStoreRoles"/>
                <set field="productStoreId" from-scope="user"  from-field="productStoreId"/>
                <entity-one entity-name="ProductStore" value-name="productStore"/>
                <entity-condition entity-name="ProductStoreRole" list-name="productStoreRoles">
                    <condition-expr field-name="productStoreId" operator="equals" value="${productStoreId}" />
                    <order-by field-name="partyId"/>
                    <order-by field-name="roleTypeId"/>
                    <order-by field-name="fromDate"/>
                    </entity-condition>
                 <entity-condition entity-name="RoleType" list-name="roleTypes">
                 <order-by field-name="description"/></entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/ProductStoreTabBar.ftl"/>
                            </html>
                        </platform-specific>
<!--                           <container>
                            <label style="head1">${uiLabelMap.PageTitleEditProductStoreRoles}: ${productStore.storeName} [${uiLabelMap.CommonId}:${productStoreId}]</label>
                             </container>
 -->                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/EditProductStoreRoles.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditProductStoreTaxSetup">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="store"/>
                <set field="page.tabButtonItem" value="EditProductStoreTaxSetup"/>
                <set field="productStoreId" from-scope="user"  from-field="productStoreId"/>
                <entity-one entity-name="ProductStore" value-name="productStore"/>
                <entity-condition entity-name="SimpleSalesTaxLookup" list-name="taxItems">
                    <condition-expr field-name="productStoreId" operator="equals" value="${productStoreId}" />
                    <order-by field-name="stateProvinceGeoId"/>
                    <order-by field-name="taxCategory"/>
                    <order-by field-name="fromDate"/>
                    </entity-condition>
           </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/ProductStoreTabBar.ftl"/>
                            </html>
                        </platform-specific>
<!--                           <container>
                            <label style="head1">${uiLabelMap.PageTitleEditProductStoreTaxSetup}: ${productStore.storeName} [${uiLabelMap.CommonId}:${productStoreId}]</label>
                             </container>
 -->                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/EditProductStoreTaxSetup.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditProductStorePaySetup">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="store"/>
                <set field="page.tabButtonItem" value="EditProductStorePaySetup"/>
                <set field="productStoreId" from-scope="user"  from-field="productStoreId"/>
                <set field="paymentMethodTypeId" from-field="parameters.paymentMethodTypeId"/>
                <set field="paymentServiceTypeEnumId" from-field="parameters.paymentServiceTypeEnumId"/>
                <entity-one entity-name="ProductStore" value-name="productStore"/>
                <entity-one entity-name="ProductStorePaymentSetting" value-name="editSetting" use-cache="true"/>
              <entity-condition entity-name="ProductStorePaymentSetting" list-name="paymentSettings" use-cache="true">
                    <condition-expr field-name="productStoreId" operator="equals" value="${productStoreId}" />
                    <order-by field-name="paymentMethodTypeId"/>
                    <order-by field-name="paymentServiceTypeEnumId"/>
                    </entity-condition>
                <entity-condition entity-name="Enumeration" list-name="serviceTypes" use-cache="true">
                    <condition-expr field-name="enumTypeId" operator="equals" value="PRDS_PAYSVC" />
                    <order-by field-name="description"/>
                    </entity-condition>
                <entity-condition entity-name="PaymentMethodType" list-name="paymentMethodTypes">
                    <order-by field-name="description"/>
                </entity-condition>
           </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/ProductStoreTabBar.ftl"/>
                            </html>
                        </platform-specific>
<!--                           <container>
                            <label style="head1">${uiLabelMap.PageTitleEditProductStorePaySetup}: ${productStore.storeName} [${uiLabelMap.CommonId}:${productStoreId}]</label>
                             </container>
 -->                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/EditProductStorePaySetup.ftl"/>
                            </html>
                        </platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="EditProductStoreEmails">
        <section>
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="store"/>
                <set field="page.tabButtonItem" value="EditProductStoreEmails"/>
                <set field="productStoreId" from-scope="user"  from-field="productStoreId"/>
                <entity-one entity-name="ProductStore" value-name="productStore"/>
                <entity-condition entity-name="ProductStoreEmailSetting" list-name="productStoreEmailSettings">
                    <condition-expr field-name="productStoreId" operator="equals" value="${productStoreId}" />
                    <order-by field-name="emailType"/>
                    </entity-condition>
<!--                  <entity-condition entity-name="RoleType" list-name="roleTypes">
                 <order-by field-name="description"/></entity-condition>
 -->            </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template location="component://opentravelsystem/webapp/hotelbackend/catalog/ProductStoreTabBar.ftl"/>
                            </html>
                        </platform-specific>
                          <container>
                            <label style="head1">${uiLabelMap.PageTitleEditProductStoreEmails}:</label>
                            <label style="head2"> ${productStore.storeName} [${uiLabelMap.CommonId}:${productStoreId}]</label>
                             </container>
                        <include-form name="updateProductStoreEmail" location="component://product/webapp/catalog/store/ProductStoreForms.xml"/>
                        <include-form name="createProductStoreEmail" location="component://product/webapp/catalog/store/ProductStoreForms.xml"/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="selectStore">
        <section> 
            <actions>
                <set field="page.appTabButtonItem" value="Settings"/>
                <set field="page.headerItem" value="selectStore"/>
                <set field="nowTimestamp" value="${UtilDateTime.nowTimestamp()}"/>
                <entity-condition entity-name="ProductStoreRole" list-name="stores"><!-- filter-by-date="nowTimestamp"-->
                       <condition-list>
                           <condition-expr field-name="partyId"  operator="equals" value="${userLogin.partyId}" />
                           <condition-expr field-name="roleTypeId"  operator="equals" value="ADMIN" />
                       </condition-list>
                </entity-condition>
                <entity-condition entity-name="ProductStore" list-name="storesAdmin">
                       <!--condition-list>
                           <condition-expr field-name="productStoreId"  operator="not-equals" value="${userLogin.userLoginId}" />
                       </condition-list-->
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="CommonSettingsDecorator">
                    <decorator-section name="body">
                        <section>
                            <condition> 
                                <if-compare field-name="userLogin.partyId" operator="not-equals" value="admin"></if-compare>
                            </condition>
                            <widgets>
                                <label style="head1">Select a store to work on for login: ${userLogin.partyId}</label>
                                <include-form name="selectStore" location="component://opentravelsystem/webapp/hotelbackend/screens/SettingsForms.xml"/>
                            </widgets>
                            <fail-widgets>
                                <label style="head1">Select a store to work on.</label>
                                <include-form name="selectStoreAdmin" location="component://opentravelsystem/webapp/hotelbackend/screens/SettingsForms.xml"/>
                            </fail-widgets>
                       </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
