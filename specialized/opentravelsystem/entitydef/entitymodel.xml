<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/entitymodel.xsd">
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
    <title>Entitis of the Open Travel System</title>
    <description>the views of the Open TravelSystem</description>
    <copyright>Copyright (c) 2001-2005 The Open Travel System - www.opentravelsystem.org</copyright>
    <author>Hans BakkerNone</author>
    <version>1.0</version>


  <!-- ========================================================= -->
  <!-- ======================== View Entities ======================= -->
  <!-- ========================================================= -->

     <view-entity entity-name="CustomerSummary"
            package-name="org.ofbiz.opentravelsystem"
            never-cache="true"
            title="Customer summary for a certain product store">
      <member-entity entity-alias="ORLE" entity-name="OrderRole"/>
      <member-entity entity-alias="OH" entity-name="OrderHeader"/>
      <alias entity-alias="ORLE" name="partyId" group-by="true"/>
      <alias entity-alias="OH" name="productStoreId" group-by="true"></alias>
      <alias entity-alias="OH" name="totalGrandAmount" field="grandTotal" function="sum"/>
      <alias entity-alias="OH" name="totalOrders" field="orderId" function="count"/>
      <view-link entity-alias="ORLE" rel-entity-alias="OH">
        <key-map field-name="orderId"/>
      </view-link>
    </view-entity>

</entitymodel>

