<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/simple-methods.xsd">

    <!-- ================================================================ -->
    <!-- Opentravelsystem Party Services -->
    <!-- ================================================================ -->
    
    <simple-method method-name="help" short-description="--provide help information to the user--" login-required="false">
        <set field="param.contentId" value="help"/>
        <string-append field-name="param.contentId" string="${parameters.app}"/>
        <string-append field-name="param.contentId" string="${parameters.function}"/>
        <string-append field-name="paramcontentId" string="${parameters.tab}"/>
        <call-service service-name="getContent" in-map-name="param">
            <result-to-field result-name="view" field-name="contentView"/>
        </call-service>
        
        <if-empty field-name="contentView">
            <!-- retrieve the general index-->
            <set field="param.contentId" value="helpIndex"/>
            <call-service service-name="getContent" in-map-name="param">
                <result-to-field result-name="view" field-name="contentView"/>
            </call-service>
            <if-empty field-name="contentView">
                <!-- not found so create with default text-->
                <set field="dr.dataResourceId" value="helpIndex"/>
                <set field="dr.dataTemplateTypeId" value="NONE"/>
                <set field="mimeTypeId" value="text/html"/>
                <call-service service-name="createDataResource" in-map-name="dr">
                    <result-to-field result-name="dataResourceId" field-name="dataResourceId"/>
                </call-service>
                <set field="et.dataResourceId" value="helpIndex"/>
                <set field="testData" value="&lt;center&gt;&lt;h1&gt; no help text loaded &lt;/h1&gt;&lt;/center&gt;"/>
                <call-service service-name="createElectronicText"/>
                <set field="c.contentId" value="helpIndex"/>
                <set field="c.contentTypeId" value="DOCUMENT"/>
                <set field="c.dataresourceId" value="helpIndex"/>
                <call-service service-name="createContent" in-map-name="c"/>
                <!-- retrieve the same thing to see if it went ok..-->
                <set field="param.contentId" value="helpIndex"/>
                <call-service service-name="getContent" in-map-name="param">
                    <result-to-field result-name="view" field-name="contentView"/>
                </call-service>
                <set field="message" value="No information found, creating/displaying the help index..."/>
            </if-empty>
        </if-empty>        
        <field-to-result field-name="contentView.dataResourceId" result-name="dataResourceId"/>        
        <field-to-result field-name="param.contentId" result-name="contentId"/>
    </simple-method>
    <simple-method method-name="editHelp" short-description="--update the help screens--" login-required="true">
        <set field="param.contentId" value="help"/>
        <string-append field-name="param.contentId" string="${parameters.app}"/>
        <string-append field-name="param.contentId" string="${parameters.function}"/>
        <string-append field-name="paramcontentId" string="${parameters.tab}"/>
        <call-service service-name="getContent" in-map-name="param">
            <result-to-field result-name="view" field-name="contentView"/>
        </call-service>
        
        <if-empty field-name="contentView">
            <!-- content does not exist yet so create -->
            
            
            
        </if-empty>
            
        
    </simple-method>  
    
    <!-- update local security, access to the organization party id -->
    <simple-method method-name="addUserLoginToSecurityGroup" short-description="--add a user to a security group--" login-required="true">
        <check-permission permission="OPENTRAVELSYSTEM" action="_RW">
            <alt-permission permission="${parameters.organizationPartyId}" action="_RW"/>
            <fail-message message="Security Error: to update you need RW access to &quot;${parameters.organizationPartyId}&quot; in the &quot;OPENTRAVELSYSTEM&quot;"/>
        </check-permission>
        <check-errors/>
        <set-service-fields service-name="addUserLoginToSecurityGroup" map-name="parameters" to-map-name="p"/>
        <call-service service-name="addUserLoginToSecurityGroup" in-map-name="p"/>
    </simple-method>  

    <simple-method method-name="updateUserLoginToSecurityGroup" short-description="--update a user to a security group--" login-required="true">
        <check-permission permission="OPENTRAVELSYSTEM" action="_RW">
            <alt-permission permission="${parameters.organizationPartyId}" action="_RW"/>
            <fail-message message="Security Error: to update you need RW access to &quot;${parameters.organizationPartyId}&quot; in the &quot;OPENTRAVELSYSTEM&quot;"/>
        </check-permission>        
        <check-errors/>
        <set-service-fields service-name="updateUserLoginToSecurityGroup" map-name="parameters" to-map-name="p"/>
        <call-service service-name="updateUserLoginToSecurityGroup" in-map-name="p">
        </call-service>        
    </simple-method>  

    <simple-method method-name="removeUserLoginFromSecurityGroup" short-description="--remove a user to a security group--" login-required="true">
        <env-to-field env-name="screen" field-name="organizationPartyId"/>
        <check-permission permission="OPENTRAVELSYSTEM" action="_RW">
            <alt-permission permission="${parameters.organizationPartyId}" action="_RW"/>
            <fail-message message="Security Error: to update you need RW access to &quot;${parameters.organizationPartyId}&quot; in the &quot;OPENTRAVELSYSTEM&quot;"/>
        </check-permission>        
        <check-errors/>
        <set-service-fields service-name="removeUserLoginFromSecurityGroup" map-name="parameters" to-map-name="p"/>
        <call-service service-name="removeUserLoginFromSecurityGroup" in-map-name="p">
        </call-service>        
    </simple-method>  
    
          
    
</simple-methods>