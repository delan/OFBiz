 <simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="file:/home/hans/ofbizSvn/framework/minilang/dtd/simple-methods.xsd">
     
     <simple-method method-name="createCustomer" short-description="Create Customer" login-required="false">
         <!-- call original event -->
         <call-simple-method method-name="createCustomer" xml-resource="org/ofbiz/ecommerce/customer/CustomerEvents.xml"/>
         <check-errors/>
         <!-- create relationship to organizationParty -->
         <set field="parties.partyId" from-field="parameters.partyId"/>        
         <set field="parties.relationshipTypeId" value="CUSTOMER"/>
         <if-not-empty field-name="parameters.organizationPartyId">
             <set field="parties.organizationPartyId" from-field="parameters.organizationPartyId"/>
             <else>
                 <set field="parties.organizationPartyId" from-field="parameters.productStoreId"/>
             </else>             
         </if-not-empty>
         <call-service service-name="otsCreatePartyRelationship" in-map-name="parties"/>
         
     </simple-method>
     
</simple-methods>             