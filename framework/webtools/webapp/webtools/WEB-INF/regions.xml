<regions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/regions.xsd">
    <define id="MAIN_REGION" template="/templates/main_template.jsp">
        <put section="title">Application Page</put> <!-- this is a default and is meant to overridden -->
        <put section="header" type="ftl" content="/includes/header.ftl"/>
        <put section="appbar" type="ftl" content="/includes/appbar.ftl"/>
        <put section="appheader" type="ftl" content="/includes/appheader.ftl"/>
        <put section="error" type="ftl" content="/includes/messages.ftl"/>
        <put section="content" content="/main.jsp"/> <!-- this is a default and is meant to overridden -->
        <put section="footer" type="ftl" content="/includes/footer.ftl"/>
    </define>

    <!-- ====== Start View Specific Regions ====== -->
    <define id="EditEntity" region="MAIN_REGION">
        <put section="title">Edit Entity Definition</put>
        <put section="content" content="/entity/EditEntity.jsp"/>
    </define>
    <define id="xmldsdump" region="MAIN_REGION">
        <put section="title">XML Entity Data Export</put>
        <put section="content" content="/entity/xmldsdump.jsp"/>
    </define>

    <define id="viewdatafile" region="MAIN_REGION">
        <put section="title">View Data File</put>
        <put section="content" content="/datafile/viewdatafile.jsp"/>
    </define>

    <define id="readxpdl" region="MAIN_REGION">
        <put section="title">Import XPDL File to Workflow Repository</put>
        <put section="content" content="/workflow/readxpdl.jsp"/>
    </define>
    <define id="workflowMonitor" region="MAIN_REGION">
        <put section="title">Active Workflow Monitor</put>
        <put section="content" content="/workflow/workflowMonitor.jsp"/>
    </define>    

    <define id="StatsSinceStart" region="MAIN_REGION">
        <put section="title">Statistics Since Start</put>
        <put section="content" content="/stats/StatsSinceStart.jsp"/>
    </define>
    <define id="StatBinsHistory" region="MAIN_REGION">
        <put section="title">Statistics Bins History</put>
        <put section="content" content="/stats/StatBinsHistory.jsp"/>
    </define>

    <define id="EntityPerformanceTest" region="MAIN_REGION">
        <put section="title">Entity Performance Test</put>
        <put section="content" content="/performance/EntityPerformanceTest.jsp"/>
    </define>

    <define id="EditCustomTimePeriod" region="MAIN_REGION">
        <put section="title">Edit CustomTimePeriod</put>
        <put section="content" content="/period/EditCustomTimePeriod.jsp"/>
    </define>
