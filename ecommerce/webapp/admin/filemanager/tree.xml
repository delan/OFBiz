<?xml version="1.0"?>

<page xmlns="http://www.einnovation.com/xmlns/WSP/Admin/Content"
    xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Content Tree</title>
  <content>
    <dialog fill="yes">
      <content>
        <box>
          $pageTree.render().getRootElement().asXML()
        </box>
      </content>
      <buttons>
        <submit-button icon="images/refresh.gif" title="Refresh tree" href="$request.requestURI?WebTreeName=pageTree&amp;wsp-action=reloadTree"/>
        <submit-button icon="images/new.gif" title="Add new page" href="addpage/addpage.html" target="edit"/>
        <submit-button icon="images/copy.gif" title="Copy selected page" onclick="gotoPage( 'copypage.html?sourcePath=' + escape(tree.selectedNode.path), 'edit' )" target="edit"/>
        <submit-button icon="images/move.gif" title="Move selected page" onclick="gotoPage( 'movepage.html?sourcePath=' + escape(tree.selectedNode.path), 'edit' )" target="edit"/>
        <!--
        <submit-button icon="images/rename.gif" title="Rename selected page" onclick="gotoPage( 'renamepage.html?sourcePath=' + escape(tree.selectedNode.path), 'edit' )" target="edit"/>
        -->
        <submit-button icon="images/delete.gif" title="Delete selected page" onclick="gotoPage( 'deletepage.html?delete=' + escape(tree.selectedNode.path), 'edit' )" target="edit"/>
      </buttons>
    </dialog>
  </content>
</page>
