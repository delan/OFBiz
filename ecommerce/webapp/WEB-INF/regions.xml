<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE regions PUBLIC "-//OFBiz//DTD Regions Config//EN" "http://www.ofbiz.org/dtds/regions.dtd">

<regions>
    <define id='MAIN_REGION' template='/templates/main_template.jsp'>
        <put section='title'>Application Page</put> <!-- this is a default and is meant to overridden -->
        <put section='header' content='/includes/header.jsp'/>
        <put section='error' content='/includes/errormsg.jsp'/>
        <put section='content' content='/main.jsp'/> <!-- this is a default and is meant to overridden -->
        <put section='footer' content='/includes/footer.jsp'/>
    </define>

    <define id='LEFTBAR_REGION' template='/templates/leftbar_template.jsp'>
        <put section='first' content='/catalog/choosecatalog.jsp'/>
        <put section='second' content='/catalog/keywordsearchbox.jsp'/>
        <put section='third' content='/catalog/sidedeepcategory.jsp'/>
        <put section='fourth' content='/catalog/minireorderprods.jsp'/>
        <!-- <put section='fifth' content='/fifth.jsp'/> -->
    </define>

    <define id='RIGHTBAR_REGION' template='/templates/rightbar_template.jsp'>
        <put section='first' content='/cart/minicart.jsp'/>
        <put section='second' content='/catalog/minipromotext.jsp'/>
        <put section='third' content='/catalog/miniassocprods.jsp'/>
        <!-- <put section='fourth' content='/fourth.jsp'/> -->
        <!-- <put section='fifth' content='/fifth.jsp'/> -->
    </define>

    <define id='LEFT_ONLY_REGION' region='MAIN_REGION'>
        <put section='leftbar' content='LEFTBAR_REGION'/>
    </define>

    <define id='RIGHT_ONLY_REGION' region='MAIN_REGION'>
        <put section='rightbar' content='RIGHTBAR_REGION'/>
    </define>

    <define id='LEFT_RIGHT_REGION' region='MAIN_REGION'>
        <put section='leftbar' content='LEFTBAR_REGION'/>
        <put section='rightbar' content='RIGHTBAR_REGION'/>
        <!-- <put section='right'><![CDATA[<font size='4'>Direct Content</font>]]></put> -->
    </define>

    <!-- ====== Start View Specific Regions ====== -->
    <define id='main' region='LEFT_RIGHT_REGION'>
        <put section='title'>Main Page</put>
        <put section='content' content='/main.jsp'/>
    </define>
    <define id='login' region='MAIN_REGION'>
        <put section='title'>Login Page</put>
        <put section='content' content='/login.jsp'/>
    </define>
    
    <define id='showcart' region='LEFT_ONLY_REGION'>
        <put section='title'>Show Cart</put>
        <put section='content' content='/cart/showcart.jsp'/>
    </define>
    
    <define id='quickadd' region='LEFT_RIGHT_REGION'>
        <put section='title'>Quick Add</put>
        <put section='content' content='/catalog/quickadd.jsp'/>
    </define>
    <define id='category' region='LEFT_RIGHT_REGION'>
        <put section='title'>Product Category Page</put>
        <put section='content' content='/catalog/category.jsp'/>
    </define>
    <define id='product' region='LEFT_RIGHT_REGION'>
        <put section='title'>Product Page</put>
        <put section='content' content='/catalog/product.jsp'/>
    </define>
    <define id='keywordsearch' region='LEFT_RIGHT_REGION'>
        <put section='title'>Keyword Search Page</put>
        <put section='content' content='/catalog/keywordsearch.jsp'/>
    </define>

    <define id='checkoutoptions' region='MAIN_REGION'>
        <put section='title'>Checkout Options Page</put>
        <put section='content' content='/order/checkoutoptions.jsp'/>
    </define>
    <define id='checkout' region='MAIN_REGION'>
        <put section='title'>Final Checkout Review Page</put>
        <put section='content' content='/order/checkout.jsp'/>
    </define>
    <define id='showconfirmorder' region='MAIN_REGION'>
        <put section='title'>Show Confirm Order Page</put>
        <put section='content' content='/order/showconfirmorder.jsp'/>
    </define>
    <define id='orderhistory' region='MAIN_REGION'>
        <put section='title'>Order History Page</put>
        <put section='content' content='/order/orderhistory.jsp'/>
    </define>
    <define id='orderstatus' region='RIGHT_ONLY_REGION'>
        <put section='title'>Order Status Page</put>
        <put section='content' content='/order/orderstatus.jsp'/>
    </define>
    
    <define id='viewprofile' region='MAIN_REGION'>
        <put section='title'>View Profile</put>
        <put section='content' content='/customer/viewprofile.jsp'/>
    </define>
    <define id='newcustomer' region='MAIN_REGION'>
        <put section='title'>New Customer</put>
        <put section='content' content='/customer/newcustomer.jsp'/>
    </define>
    <define id='editcontactmech' region='MAIN_REGION'>
        <put section='title'>Edit Contact Mechanism (Phone, Address, etc)</put>
        <put section='content' content='/customer/editcontactmech.jsp'/>
    </define>
    <define id='editcreditcard' region='MAIN_REGION'>
        <put section='title'>Edit Credit Card</put>
        <put section='content' content='/customer/editcreditcard.jsp'/>
    </define>
    <define id='editeftaccount' region='MAIN_REGION'>
        <put section='title'>Edit EFT Account</put>
        <put section='content' content='/customer/editeftaccount.jsp'/>
    </define>
    <define id='changepassword' region='MAIN_REGION'>
        <put section='title'>Change Password</put>
        <put section='content' content='/customer/changepassword.jsp'/>
    </define>
    <define id='editperson' region='MAIN_REGION'>
        <put section='title'>Edit Personal Information</put>
        <put section='content' content='/customer/editperson.jsp'/>
    </define>
    
    <define id='newAffiliate' region='MAIN_REGION'>
        <put section='title'>New Affiliate</put>
        <put section='content' content='/newaffiliate.jsp'/>
    </define>
</regions>
