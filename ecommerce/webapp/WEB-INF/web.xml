<web-app>
  <display-name>Open For Business - demostore</display-name>
  <description>Demo Store for the Open For Business Project</description>

  <context-param>
    <param-name>siteConfigurationFile</param-name>
    <param-value>/WEB-INF/demostore-config.xml</param-value>
    <description>Request/View Mapping And Site Configuration File</description>
  </context-param>
  <context-param>
    <param-name>schedulerConfigurationFile</param-name>
    <param-value>/WEB-INF/scheduler-config.xml</param-value>
    <description>Configuration File For The Job Scheduler</description>
  </context-param>
  <context-param>
    <param-name>entityDelegatorName</param-name>
    <param-value>default</param-value>
    <description>The Name of the Entity Delegator to use, defined in servers.properties</description>
  </context-param>

  <servlet>
    <servlet-name>ControlServlet</servlet-name>
    <display-name>ControlServlet</display-name>
    <description>Main Control Servlet</description>
    <servlet-class>org.ofbiz.core.control.ControlServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlServlet</servlet-name>
    <url-pattern>/control/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>60</session-timeout>    
  </session-config>

  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
    <welcome-file>/main.jsp</welcome-file>
  </welcome-file-list>

  <taglib> 
     <taglib-uri>ofbizTags</taglib-uri>
     <taglib-location>/WEB-INF/taglib.tld</taglib-location> 
  </taglib> 

</web-app>
