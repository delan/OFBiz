<simple-methods>    
    <simple-method method-name="initiateOrderWorkflow" short-description="Initiates the order processing workflow">
        <request-to-field map-name="context" field-name="orderId" request-name="order_id"/>   
        
        <make-value entity-name="OrderHeader" value-name="lookupPKMap"/>     
        <field-to-field field-name="orderId" map-name="context" to-field-name="orderId" to-map-name="lookupPKMap"/>
        <find-by-primary-key entity-name="OrderHeader" map-name="lookupPKMap" value-name="lookedUpValue"/>
        
        <field-to-field field-name="statusId" map-name="lookedUpValue" to-field-name="orderStatusId" to-map-name="context"/>        
        <call-service-asynch service-name="processOrder" in-map-name="context"/>
    </simple-method>
</simple-methods>
