<simple-methods>
    <simple-method method-name="tellAFriend" short-description="Tell A Friend" login-required="false">
        <call-map-processor in-map-name="parameters" out-map-name="serviceContext">
            <simple-map-processor name="tellAFriendEmail">
                <process field="sendTo">
                    <validate-method method="isEmail">
                        <fail-message message="To E-mail address not formatted correctly, must be like: name@domain"/>
                    </validate-method>
                    <copy/>
                </process>
                <process field="sendFrom">
                    <validate-method method="isEmail">
                        <fail-message message="From E-mail address not formatted correctly, must be like: name@domain"/>
                    </validate-method>
                    <copy/>
                </process>
                <make-in-string field="subject"><constant>Check this out at some store</constant></make-in-string>
                <make-in-string field="body">
                    <constant><![CDATA[
                    ]]></constant>
                    <in-field field="comments"/>
                    <constant><![CDATA[
                    ]]></constant>
                    <constant>http://change me/ecommerce/control/product?product_id=</constant>
                    <in-field field="product_id"/>
                </make-in-string>
            </simple-map-processor>
        </call-map-processor>
        <webapp-property-to-field resource="ecommerce.properties" property="smtp.relay.host" map-name="serviceContext" field-name="sendVia"/>
        <check-errors/>
        <call-service service-name="sendMail" in-map-name="serviceContext"/>
    </simple-method>
</simple-methods>
