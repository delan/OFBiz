<?xml version="1.0"?>
<!DOCTYPE jms-server PUBLIC "Orion JMS server" "http://www.orionserver.com/dtds/jms-server.dtd">

<jms-server port="9127">

        <queue-connection-factory location="jms/QueueConnectionFactory" port="9127" />
        <!--<xa-queue-connection-factory location="jms/XAQueueConnectionFactory" password="ofbiz" username="ofbiz" />-->

        <topic-connection-factory location="jms/TopicConnectionFactory" port="9127" password="ofbiz" username="ofbiz" />
        <!--<xa-topic-connection-factory location="jms/XATopicConnectionFactory" password="ofbiz" username="ofbiz" />-->

    <queue name="OFB Services Queue" location="jms/OFBQueue">
        <description>Service Engine Queue</description>
    </queue>

    <topic name="OFB Services Topic" location="jms/OFBTopic">
        <description>Service Engine Topic</description>
    </topic>

    <!-- path to the log-file where JMS-events/errors are stored -->
    <log>
            <file path="../log/jms.log" />
    </log>

</jms-server>
