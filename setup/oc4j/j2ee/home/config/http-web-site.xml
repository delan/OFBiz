<?xml version="1.0"?>
<!DOCTYPE web-site PUBLIC "Oracle9iAS XML Web-site" "http://xmlns.oracle.com/ias/dtds/web-site.dtd">

<!-- change the host name below to your own host name. Localhost will -->
<!-- not work with clustering -->
<!-- also add cluster-island attribute as below
<web-site host="localhost" port="8888" 
          display-name="Oracle 9iAS Java HTTP WebSite" cluster-island="1" >
-->

<web-site port="8080" display-name="Oracle9iAS Containers for J2EE HTTP Web Site">
        <!-- Uncomment the following line when using clustering -->
	<!-- <frontend host="your_host_name" port="80" /> -->
	<!-- The default web-app for this site, bound to the root -->
	<default-web-app application="default" name="defaultWebApp" />
	<web-app application="default" name="dms0" root="/dms0" />
	<web-app application="default" name="dms" root="/dmsoc4j" />

	<web-app load-on-startup="true" application="default" name="commonapp" root="/commonapp" /> 
        <web-app load-on-startup="true" application="default" name="webtools" root="/webtools" /> 
        <web-app load-on-startup="true" application="default" name="ecommerce" root="/ecommerce" /> 
        <web-app load-on-startup="true" application="default" name="images" root="/images" />
        <web-app load-on-startup="true" application="default" name="catalog" root="/catalog" /> 
        <web-app load-on-startup="true" application="default" name="ordermgr" root="/ordermgr" /> 
        <web-app load-on-startup="true" application="default" name="partymgr" root="/partymgr" /> 
        <web-app load-on-startup="true" application="default" name="workeffort" root="/workeffort" /> 
        <web-app load-on-startup="true" application="default" name="accounting" root="/accounting" /> 
        <web-app load-on-startup="true" application="default" name="facility" root="/facility" /> 
        <web-app load-on-startup="true" application="default" name="marketing" root="/marketing" /> 
        
        <!-- Uncomment the following to access these apps.
	<web-app application="callerInfo" name="callerInfo-web" root="/jazn" /> 
	<web-app application="news" name="news-web" root="/news" /> 
	<web-app application="logger" name="messagelogger-web" root="/messagelogger" /> 
	<web-app application="ws_example" name="ws_example" root="/webservices" /> 
        <web-app application="ojspdemos" name="ojspdemos-web" root="/ojspdemos" />
        -->
	<!-- Access Log, where requests are logged to -->
	<access-log path="../log/http-web-access.log" />
</web-site>
