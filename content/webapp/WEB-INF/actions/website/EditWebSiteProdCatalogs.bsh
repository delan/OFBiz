import org.ofbiz.core.util.*;
import org.ofbiz.core.entity.*;
import org.ofbiz.core.widgetimpl.*;

security = request.getAttribute("security");
delegator = request.getAttribute("delegator");

if(security.hasEntityPermission("CONTENTMGR", "_VIEW", session)) {
    context.put("hasPermission", Boolean.TRUE);
} else {
    context.put("hasPermission", Boolean.FALSE);
}

String webSiteId = request.getParameter("webSiteId");
GenericValue webSite = delegator.findByPrimaryKey("WebSite", UtilMisc.toMap("webSiteId", webSiteId));
List webSiteCatalogs = null;
List webSiteCatalogDatas = new LinkedList();
if (prodCatalog != null) {
    webSiteCatalogs = webSite.getRelated("WebSiteCatalog", null, UtilMisc.toList("sequenceNum", "webSiteId"));
    Iterator webSiteCatalogIter = webSiteCatalogs.iterator();
    while (webSiteCatalogIter.hasNext()) {
        GenericValue webSiteCatalog = (GenericValue) webSiteCatalogIter.next();
        Map webSiteCatalogData = new HashMap();
        webSiteCatalogData.put("webSiteCatalog", webSiteCatalog);
        webSiteCatalogData.put("prodCatalog", webSiteCatalog.getRelatedOne("ProdCatalog"));
        webSiteCatalogDatas.add(webSiteCatalogData);
    }
}

HtmlFormWrapper updateProdCatalogToWebSiteWrapper = new HtmlFormWrapper("/website/WebSiteForms.xml", "UpdateProdCatalogToWebSite", request, response);
updateProdCatalogToWebSiteWrapper.putInContext("webSiteCatalogDatas", webSiteCatalogDatas);

HtmlFormWrapper addProdCatalogToWebSiteWrapper = new HtmlFormWrapper("/website/WebSiteForms.xml", "AddProdCatalogToWebSite", request, response);
addProdCatalogToWebSiteWrapper.putInContext("webSite", webSite);

context.put("webSiteId", webSiteId);
context.put("webSite", webSite);
context.put("updateProdCatalogToWebSiteWrapper", updateProdCatalogToWebSiteWrapper);
context.put("addProdCatalogToWebSiteWrapper", addProdCatalogToWebSiteWrapper);
