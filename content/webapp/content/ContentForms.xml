<forms>
    <!-- ContentFind forms -->
    <form default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        name="findContent" target="FindContent" title="" type="single">
        <auto-fields-entity entity-name="Content" default-field-type="find" />
        <field name="contentTypeId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="ContentType" key-field-name="contentTypeId"/>
            </drop-down>
        </field>
        <field name="dataResourceId" title="" >
		<lookup target-form-name="LookupDataResource" />
        </field>
        <field name="mimeTypeId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="MimeType" key-field-name="mimeTypeId"/>
            </drop-down>
        </field>
        <field name="statusId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="StatusItem" key-field-name="statusId"/>
            </drop-down>
        </field>
        <field name="isTemplate">
            <drop-down allow-empty="true">
		<option key="Y" description="Yes" />
		<option key="N" description="No" />
            </drop-down>
        </field>
        <field name="submitButton" title="Find" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <form default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="display"
        list-name="entityList" name="listFindContent" paginate-target="FindContent" title="" type="list">
        <auto-fields-entity entity-name="Content" default-field-type="display"/>
        <field name="contentId" title="Edit" widget-style="buttontext">
            <hyperlink also-hidden="false" description="${contentId}" target="gotoContent?contentId=${contentId}"/>
        </field>
<!--
	<field name="createdDate"><ignored/></field>
	<field name="createdByUserLogin"><ignored/></field>
	<field name="lastModifiedDate"><ignored/></field>
	<field name="lastModifiedByUserLogin"><ignored/></field>
-->
    </form>
    <form 
        name="EditContent" target="UpdateContent" title="" type="single"
	default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
	default-entity-name="Content"
	>
        <auto-fields-entity entity-name="Content"/>
        <field name="contentTypeId">
            <drop-down allow-empty="false">
                <entity-options description="${description}"
                    entity-name="ContentType" key-field-name="contentTypeId"/>
            </drop-down>
        </field>
        <field name="submitButton" title="Update" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
        <field name="dataResourceId" title="" >
		<lookup target-form-name="LookupDataResource" />
        </field>
        <field name="dataResourceGoTo" title="" 
		use-when="valueObject!=null &amp;&amp; valueObject.get(&quot;dataResourceId&quot;)!=null"
	>
            <hyperlink also-hidden="false" description="Jump to Data Resource"
		target="EditDataResource?dataResourceId=${valueObject.dataResourceId}"/>
        </field>
        <field name="mimeTypeId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="MimeType" key-field-name="mimeTypeId"/>
            </drop-down>
        </field>
        <field name="statusId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="StatusItem" key-field-name="statusId"/>
            </drop-down>
        </field>
        <field name="isTemplate">
            <drop-down allow-empty="true">
		<option key="Y" description="Yes" />
		<option key="N" description="No" />
            </drop-down>
        </field>
    </form>

    <!-- ContentRole forms -->
    <form default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        name="AddContentRole" target="addContentRole" title="" type="single">
        <auto-fields-service service-name="createContentRole"/>
        <field name="submitButton" title="Add" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <form default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        list-name="contentList" name="UpdateContentRole"
        target="updateContentRole" title="" type="list">
        <auto-fields-service service-name="updateContentRole"/>
        <field name="contentRoleId" title="ContentRoleId" widget-style="buttontext">
            <display/>
        </field>
        <field name="submitButton" title="Update" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
        <field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink also-hidden="false" description="[Delete]" target="removeContentRole?contentRoleId=${contentRoleId}"/>
        </field>
    </form>

    <!-- ContentPurpose forms -->
    <form name="AddContentPurpose" default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        target="addContentPurpose" title="" type="single">
        <auto-fields-service service-name="createContentPurpose"/>
        <field name="contentPurposeTypeId">
            <drop-down allow-empty="true">
                <entity-options description="${description}"
                    entity-name="ContentPurposeType" key-field-name="contentPurposeTypeId"/>
            </drop-down>
        </field>
        <field name="submitButton" title="Add" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <form default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        list-name="contentList" name="UpdateContentPurpose"
        target="updateContentPurpose" title="" type="list">
        <auto-fields-service service-name="updateContentPurpose"/>
        <field name="contentPurposeId" title="ContentPurposeId" widget-style="buttontext">
            <display/>
        </field>
        <field name="submitButton" title="Update" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
        <field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink also-hidden="false" description="[Delete]" target="removeContentPurpose?contentPurposeId=${contentPurposeId}"/>
        </field>
    </form>

</forms>
