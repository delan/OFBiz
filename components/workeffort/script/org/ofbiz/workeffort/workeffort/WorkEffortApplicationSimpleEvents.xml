<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/simple-methods.xsd">
    <simple-method method-name="initApplication" short-description="Init the application that has been requested from the WorkEffort">
        <call-map-processor processor-name="assignmentMap" in-map-name="parameters" out-map-name="context">
          <simple-map-processor name="assignmentMap" >
                <process field="applicationId"><not-empty><fail-message message="Expected ApplicationId."/></not-empty>
                <copy/>
                </process>
          </simple-map-processor>
        </call-map-processor>
        <check-errors/>
        <call-service service-name="wfGetApplicationContext" in-map-name="context" >
            <result-to-request result-name="applicationContext" request-name="applicationContext"/>
        </call-service>
    </simple-method>



    <simple-method method-name="completeApplication" short-description="complete the application">
        <call-map-processor processor-name="assignmentMap" in-map-name="parameters" out-map-name='context'>
          <simple-map-processor name="assignmentMap" >
                <process field="applicationId"><not-empty><fail-message message="Expected ApplicationId."/></not-empty>
                <copy/>
                </process>
          </simple-map-processor>
        </call-map-processor>
        <field-to-field  field-name="parameters" to-map-name="context" to-field-name="result"/>
        <check-errors/>
        <call-service service-name="wfCompleteApplication" in-map-name="context" >
        </call-service>
    </simple-method>
    
</simple-methods>
