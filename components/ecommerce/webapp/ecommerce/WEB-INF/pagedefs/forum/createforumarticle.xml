<?xml version="1.0" encoding="UTF-8"?>
<page>
    <template>main_htmlarea</template> 
    <property name="title">Add Content</property>
    <property name="formDefFile">/forum/ForumForms.xml</property>    
    <property name="singleFormName">AddContent</property>    
    <property name="subMenu">/admin/admin_menu.ftl</property>    
    <property name="headerItem">Admin</property>    
    <property name="entityName">Content</property>    
    <property name="permission">CONTENTMGR</property>    
    <property name="primaryHTMLField">textData</property>    
    <property name="secondaryHTMLField"></property>    
    <property name="summaryDataResourceTypeId"></property>    
    <property name="priKeyName">contentId</property>    
    <property name="permissionIdName">forumId</property>    
    <property name="permittedOperations">HAS_USER_ROLE</property>    
    <property name="entityOperation">_CREATE</property>    
    <!-- no contentAssocTypeId is specified because the content will not be linked to a publish point when created. That is done in a separate operation -->
    <property name="contentAssocTypeId">PUBLISH_LINK</property>    
    <property name="targetOperation">HAS_USER_ROLE</property>    
    <property name="requiredRoles">BLOG_AUTHOR|BLOG_EDITOR|BLOG_ADMIN|BLOG_PUBLISHER</property>    
    <property name="contentTypeId">DOCUMENT</property>    
    <property name="contentPurposeTypeId">ARTICLE</property>    
    <property name="statusId">BLOG_SUBMITTED</property>    
    <property name="permissionType">complex</property>    
    <content-action name="/forum/nodetrailprep.bsh"/>
    <content-action name="/forum/permprep.bsh"/>
    <content-action name="/forum/htmlareaprep.bsh"/>
    <content-action name="/forum/formprep.bsh"/>
    <content-action name="/forum/ownercontentprep.bsh"/>
    <content-action name="/forum/contentaddprep.bsh"/>

</page>
