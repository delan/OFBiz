<simple-methods>
	<simple-method method-name="createCustomer" short-description="Create Customer" login-required="true">
		<!-- timestamp to be used -->
		<now-timestamp-to-env env-name="nowStamp"/>
		
		<!-- create the party/person -->
		<field-to-field field-name="personalTitle" map-name="parameters" to-map-name="personMap"/>
		<field-to-field field-name="firstName" map-name="parameters" to-map-name="personMap"/>
		<field-to-field field-name="middleName" map-name="parameters" to-map-name="personMap"/>
		<field-to-field field-name="lastName" map-name="parameters" to-map-name="personMap"/>
		<field-to-field field-name="suffix" map-name="parameters" to-map-name="personMap"/>
        <!-- call the create person service -->
        <call-service service-name="createPerson" in-map-name="personMap">
        	<result-to-field result-name="partyId" map-name="tmpMap"/>
        	<result-to-request result-name="partyId"/>
        </call-service>
        
        <!-- add the party to the customer role -->
        <string-to-field field-name="roleTypeId" map-name="roleMap" string="CUSTOMER"/>
        <field-to-field field-name="partyId" map-name="tmpMap" to-map-name="roleMap"/>
        <call-service service-name="createPartyRole" in-map-name="roleMap"/>
        
        <!-- create the email address -->
        <field-to-field field-name="emailAddress" map-name="parameters" to-field-name="emailAddress" to-map-name="emailMap"/>
        <field-to-field field-name="emailSol" map-name="parameters" to-field-name="allowSolicitation" to-map-name="emailMap"/>        
        <field-to-field field-name="partyId" map-name="tmpMap" to-map-name="emailMap"/>
        <string-to-field field-name="contactMechPurposeTypeId" map-name="emailMap" string="PRIMARY_EMAIL"/>
        <!-- call the create email service -->
        <call-service service-name="createPartyEmailAddress" in-map-name="emailMap"/>
        
        <!-- create home phone -->
        <if-not-empty field-name="homeContactNumber" map-name="parameters">
        	<field-to-field field-name="homeCountryCode" map-name="parameters" to-field-name="countryCode" to-map-name="homePhoneMap"/>
        	<field-to-field field-name="homeAreaCode" map-name="parameters" to-field-name="areaCode" to-map-name="homePhoneMap"/>
        	<field-to-field field-name="homeContactNumber" map-name="parameters" to-field-name="contactNumber" to-map-name="homePhoneMap"/>
        	<field-to-field field-name="homeExt" map-name="parameters" to-field-name="extension" to-map-name="homePhoneMap"/>
        	<field-to-field field-name="homeSol" map-name="parameters" to-field-name="allowSolicitation" to-map-name="homePhoneMap"/>
        	<field-to-field field-name="partyId" map-name="tmpMap" to-map-name="homePhoneMap"/>
        	<string-to-field field-name="contactMechPurposeTypeId" map-name="homePhoneMap" string="PHONE_HOME"/>
        	<!-- call create telecom service -->
        	<call-service service-name="createPartyTelecomNumber" in-map-name="homePhoneMap"/>
        </if-not-empty>
        
        <!-- create work phone -->
        <if-not-empty field-name="workContactNumber" map-name="parameters">
	        <field-to-field field-name="workCountryCode" map-name="parameters" to-field-name="countryCode" to-map-name="workPhoneMap"/>
    	    <field-to-field field-name="workAreaCode" map-name="parameters" to-field-name="areaCode" to-map-name="workPhoneMap"/>
        	<field-to-field field-name="workContactNumber" map-name="parameters" to-field-name="contactNumber" to-map-name="workPhoneMap"/>
			<field-to-field field-name="workExt" map-name="parameters" to-field-name="extension" to-map-name="workPhoneMap"/>
			<field-to-field field-name="workSol" map-name="parameters" to-field-name="allowSolicitation" to-map-name="workPhoneMap"/>
			<field-to-field field-name="partyId" map-name="tmpMap" to-map-name="workPhoneMap"/>
			<string-to-field field-name="contactMechPurposeTypeId" map-name="workPhoneMap" string="PHONE_WORK"/>
        	<!-- call create telecom service -->
        	<call-service service-name="createPartyTelecomNumber" in-map-name="workPhoneMap"/>
       	</if-not-empty>
        
        <!-- create userLogin -->
        <if-not-empty field-name="userLoginId" map-name="parameters">
	        <field-to-field field-name="userLoginId" map-name="parameters" to-map-name="loginMap"/>
    	    <!-- call create userLogin -->
        	<!-- call reset password (to email a password) -->
        </if-not-empty>        
	</simple-method>
</simple-methods>
