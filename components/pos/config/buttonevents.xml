    <event button-name="numDZero" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerDZero" disable-lock="true"/>

    <!-- extended numeric events -->
    <event button-name="numClear" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerClear" disable-lock="true"/>
    <event button-name="numQty" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerQty" disable-lock="true"/>
    <event button-name="numEnter" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerEnter" disable-lock="true"/>

    <!-- sales menu events -->
    <event button-name="menuTotal" class-name="org.ofbiz.pos.event.MenuEvents" method-name="calcTotal" disable-lock="false"/>
    <event button-name="menuVoidItem" class-name="org.ofbiz.pos.event.MenuEvents" method-name="voidItem" disable-lock="false"/>
    <event button-name="menuVoidAll" class-name="org.ofbiz.pos.event.MenuEvents" method-name="voidAll" disable-lock="false"/>
    <event button-name="menuChgQty" class-name="org.ofbiz.pos.event.MenuEvents" method-name="changeQty" disable-lock="false"/>

    <!-- payment events -->
    <event button-name="payCash" class-name="org.ofbiz.pos.event.PaymentEvents" method-name="payCash" disable-lock="false"/>
    <event button-name="payCredit" class-name="org.ofbiz.pos.event.PaymentEvents" method-name="payCredit" disable-lock="false"/>
    <event button-name="payFinish" class-name="org.ofbiz.pos.event.PaymentEvents" method-name="processSale" disable-lock="false"/>
    <event button-name="payClearAll" class-name="org.ofbiz.pos.event.PaymentEvents" method-name="clearAllPayments" disable-lock="false"/>

    <!-- pos main menu events -->
    <event button-name="menuSku" class-name="org.ofbiz.pos.event.MenuEvents" method-name="addItem" disable-lock="false"/>
    <event button-name="menuLock" class-name="org.ofbiz.pos.event.SecurityEvents" method-name="lock" disable-lock="false"/>
    <event button-name="menuMgr" class-name="org.ofbiz.pos.event.SecurityEvents" method-name="mgrLogin" disable-lock="false"/>
    <event button-name="menuMain" class-name="org.ofbiz.pos.event.NavagationEvents" method-name="showPosScreen" disable-lock="false"/>    
    <event button-name="menuPay" class-name="org.ofbiz.pos.event.NavagationEvents" method-name="showPayScreen" disable-lock="false"/>
    <event button-name="menuPromo" class-name="org.ofbiz.pos.event.NavagationEvents" method-name="showPromoScreen" disable-lock="false"/>

    <!-- pos promo menu events -->

    <!-- pos mgr menu events -->
    <event button-name="mgrLogOut" class-name="org.ofbiz.pos.event.ManagerEvents" method-name="logoff" disable-lock="false"/>

    <!-- test events -->
    <event button-name="testAlert" class-name="org.ofbiz.pos.event.TestEvents" method-name="testAlert" disable-lock="false"/>
</button-events>