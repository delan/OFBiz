    <event button-name="numTwo" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerTwo" disable-lock="true"/>
    <event button-name="numThree" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerThree" disable-lock="true"/>
    <event button-name="numFour" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerFour" disable-lock="true"/>
    <event button-name="numFive" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerFive" disable-lock="true"/>
    <event button-name="numSix" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerSix" disable-lock="true"/>
    <event button-name="numSeven" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerSeven" disable-lock="true"/>
    <event button-name="numEight" class-name="org.ofbiz.pos.event.NumericEvents" method-name="triggerEight" disable-lock="true"/>
