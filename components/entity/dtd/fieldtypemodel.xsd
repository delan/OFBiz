<!-- ====================== Root Element ======================= -->
 <xsd:element name='fieldtypemodel'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='field-type-def' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

<!-- ================= Children of fieldtypemodel =================== -->
 <xsd:element name='field-type-def'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='validate' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='type' type='xsd:string' use='required'/>
   <xsd:attribute name='sql-type' type='xsd:string' use='required'/>
   <xsd:attribute name='sql-type-alias' type='xsd:string' use='optional'/>
   <xsd:attribute name='java-type' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

<!-- ================= Children of field-type-def =================== -->
 <xsd:element name='validate'>
  <xsd:complexType>
   <xsd:attribute name='method' type='xsd:string' use='required'/>
   <xsd:attribute name='class' type='xsd:string' default='org.ofbiz.base.util.UtilValidate'/>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
