<!ELEMENT menus ( menu+ )>

<!ELEMENT menu ( menu-item* )>
<!ATTLIST menu
    name CDATA #REQUIRED
    type ( simple | cascade ) "simple"
    title CDATA #IMPLIED
    tooltip CDATA #IMPLIED
    default-entity-name CDATA #IMPLIED
    default-title-style CDATA #IMPLIED
    default-widget-style CDATA #IMPLIED
    default-tooltip-style CDATA #IMPLIED
    default-selected-style CDATA #IMPLIED
    orientation (vertical | horizontal) "horizontal"
    extends CDATA #IMPLIED
    extends-resource CDATA #IMPLIED
    default-menu-item-name CDATA #IMPLIED
    default-permission-operation CDATA #IMPLIED
    default-permission-entity-action CDATA #IMPLIED
    default-permission-status-id CDATA #IMPLIED
    default-privilege-enum-id CDATA #IMPLIED
    default-associated-content-id CDATA #IMPLIED
    default-hide-if-selected (true | false) "false"
    menu-width CDATA #IMPLIED
    default-cell-width CDATA #IMPLIED
>


<!ELEMENT menu-item ( target* )>
<!ATTLIST menu-item
    name CDATA #REQUIRED
    title CDATA #IMPLIED
    tooltip CDATA #IMPLIED
    title-style CDATA #IMPLIED
    widget-style CDATA #IMPLIED
    tooltip-style CDATA #IMPLIED
    selected-style CDATA #IMPLIED
    default-target-name CDATA #IMPLIED
    position CDATA "1"
    permission-operation CDATA #IMPLIED
    permission-status-id CDATA #IMPLIED
    permission-entity-action CDATA #IMPLIED
    privilege-enum-id CDATA #IMPLIED
    associated-content-id CDATA #IMPLIED
    hide-if-selected (true | false) "false"
    cell-width CDATA #IMPLIED
>

<!--
-->
<!ELEMENT target ( param* )>
<!ATTLIST target
    title CDATA #IMPLIED
    request-name CDATA #REQUIRED
    request-type CDATA #IMPLIED
>

<!--
-->
<!ELEMENT param EMPTY>
<!ATTLIST param
    name CDATA #REQUIRED
    value CDATA #IMPLIED
    default-value CDATA #IMPLIED
    type (name-value | map) "name-value"
>

