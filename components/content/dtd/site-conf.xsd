 <xsd:element name='site-conf'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='description' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='owner' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='errorpage'/>
    <xsd:element ref='handler' maxOccurs='unbounded'/>
    <xsd:element ref='firstvisit' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='preprocessor' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='postprocessor' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='request-map' maxOccurs='unbounded'/>
    <xsd:element ref='view-map' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='description'>
  <xsd:complexType>
   <xsd:sequence>
   <xsd:any namespace='http://www.w3.org/namespace/'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='owner' type='xsd:string'>
 </xsd:element>

 <xsd:element name='errorpage' type='xsd:string'>
 </xsd:element>

 <xsd:element name='handler'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='type' default='request'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='view'/>
      <xsd:enumeration value='request'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='class' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='firstvisit'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='event' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='preprocessor'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='event' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='postprocessor'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='event' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='request-map'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='description' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='security' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='event' minOccurs='0' maxOccurs='1'/>
    <xsd:element ref='response' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='uri' type='xsd:string' use='required'/>
   <xsd:attribute name='edit' default='true'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='security'>
  <xsd:complexType>
   <xsd:attribute name='https' default='false'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='auth' default='false'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='external-view' default='true'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='direct-request' default='true'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='event'>
  <xsd:complexType>
   <xsd:attribute name='type' type='xsd:string' use='required'/>
   <xsd:attribute name='path' type='xsd:string' use='optional'/>
   <xsd:attribute name='invoke' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='response'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='type' use='required'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='none'/>
      <xsd:enumeration value='view'/>
      <xsd:enumeration value='request'/>
      <xsd:enumeration value='request-redirect'/>
      <xsd:enumeration value='url'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='value' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='view-map'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='description' minOccurs='0' maxOccurs='1'/>
   </xsd:sequence>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='page' type='xsd:string' use='optional'/>
   <xsd:attribute name='type' type='xsd:string' default='default'/>
   <xsd:attribute name='info' type='xsd:string' use='optional'/>
   <xsd:attribute name='content-type' type='xsd:string' use='optional'/>
   <xsd:attribute name='encoding' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
