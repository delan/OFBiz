 <xsd:element name='regions'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='define' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='define'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='put' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='id' type='xsd:string' use='required'/>
   <xsd:attribute name='template' type='xsd:string' use='optional'/>
   <xsd:attribute name='region' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

<!-- 
    NOTE: type can be direct (for direct inline content), region (for a nested region), 
        default (for JSP/Servlet resource), or any ViewHandler defined in the corresponding controller.xml file 
-->
 <xsd:element name='put'>
  <xsd:complexType>
  <xsd:simpleContent>
  <xsd:extension base='xsd:string'>
   <xsd:attribute name='section' type='xsd:string' use='required'/>
   <xsd:attribute name='info' type='xsd:string' use='optional'/>
   <xsd:attribute name='role' type='xsd:string' use='optional'/>
   <xsd:attribute name='permission' type='xsd:string' use='optional'/>
   <xsd:attribute name='action' type='xsd:string' use='optional'/>
   <xsd:attribute name='content' type='xsd:string' use='optional'/>
   <xsd:attribute name='type' type='xsd:string' default='default'/>
   </xsd:extension>
   </xsd:simpleContent>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
