<!ELEMENT trees ( tree+ )>

<!ELEMENT tree ( node+ )>
<!ATTLIST tree
    name CDATA #REQUIRED
    root-node-name CDATA #REQUIRED
>

<!ELEMENT node ( (entity-one | service), (screen | label), sub-node* )>
<!ATTLIST node
    name CDATA #REQUIRED
>

    <!ELEMENT screen EMPTY>
    <!ATTLIST screen
        screen-name CDATA #REQUIRED
        screen-location CDATA #REQUIRED
    >
    
    <!ELEMENT label (#PCDATA)>
    <!ATTLIST label
        text CDATA #IMPLIED
        id CDATA #IMPLIED
        style CDATA #IMPLIED
    >

<!ELEMENT sub-node (entity-many | service)>
<!ATTLIST sub-node
    node-name CDATA #REQUIRED
>

    <!ELEMENT service ( field-map* )>
    <!ATTLIST service
        service-name CDATA #REQUIRED
        out-field-name CDATA "dataFound"
        auto-field-map ( true | false ) "true"
    >
    
    <!ELEMENT entity-one ( field-map* )>
    <!ATTLIST entity-one
        entity-name CDATA #REQUIRED
        cache ( true | false ) "true"
        auto-field-map ( true | false ) "true"
    >
    
    <!ELEMENT entity-many ( constraint*, order-by*, field-map+ )>
    <!ATTLIST entity-many
        entity-name CDATA #REQUIRED
        cache ( true | false ) "true"
        filter-by-date ( true | false | by-name ) "by-name"
    >

    <!ELEMENT constraint EMPTY>
    <!ATTLIST constraint
        field-name CDATA #REQUIRED
        value CDATA #REQUIRED
    >
    
    <!ELEMENT order-by EMPTY>
    <!ATTLIST order-by
        field-name CDATA #REQUIRED
    >
    
    <!ELEMENT field-map EMPTY>
    <!ATTLIST field-map
        field-name CDATA #REQUIRED
        to-field-name CDATA #IMPLIED
    >


