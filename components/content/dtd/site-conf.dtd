<!ELEMENT site-conf (description?, owner?, errorpage, handler+, firstvisit?, preprocessor?, postprocessor?, request-map+, view-map+)>
<!ELEMENT description ANY>
<!ELEMENT owner (#PCDATA)>
<!ELEMENT errorpage (#PCDATA)>
<!ELEMENT handler EMPTY>
<!ATTLIST handler
    name CDATA #REQUIRED
    type (view|request) "request"
    class CDATA #REQUIRED
>
<!ELEMENT firstvisit (event*)>
<!ELEMENT preprocessor (event*)>
<!ELEMENT postprocessor (event*)>
<!ELEMENT request-map (description?, security?, event?, response+)>
<!ATTLIST request-map
    uri CDATA #REQUIRED
    edit (true|false) "true"
>
<!ELEMENT security EMPTY>
<!ATTLIST security
    https (true|false) "false"
    auth (true|false) "false"
    external-view (true|false) "true"
    direct-request (true|false) "true"
>
<!ELEMENT event EMPTY>
<!ATTLIST event
    type CDATA #REQUIRED
    path CDATA #IMPLIED
    invoke CDATA #IMPLIED
>
<!ELEMENT response EMPTY>
<!ATTLIST response
    name CDATA #REQUIRED
    type (none|view|request|request-redirect|url) #REQUIRED
    value CDATA #IMPLIED
>
<!ELEMENT view-map (description?)>
<!ATTLIST view-map
    name CDATA #REQUIRED
    page CDATA #IMPLIED
    type CDATA "default"
    info CDATA #IMPLIED
    content-type CDATA #IMPLIED
    encoding CDATA #IMPLIED
>
