<!ENTITY % AllWidgets "container | label | sub-screen | form | menu | tree | content | sub-content | template">


<!ELEMENT screens ( screen+ )>

<!ELEMENT screen ( action*, container )>
<!ATTLIST screen
    name CDATA #REQUIRED
>

<!ELEMENT container ( (%AllWidgets;)* )>
<!ATTLIST container
    id CDATA #IMPLIED
    style CDATA #IMPLIED
>

<!ELEMENT label (#PCDATA)>
<!ATTLIST label
    text CDATA #IMPLIED
    id CDATA #IMPLIED
    style CDATA #IMPLIED
>

<!ELEMENT sub-screen EMPTY>
<!ATTLIST sub-screen
    name CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT form EMPTY>
<!ATTLIST form
    name CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT menu EMPTY>
<!ATTLIST menu
    name CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT tree EMPTY>
<!ATTLIST tree
    name CDATA #REQUIRED
    location CDATA #REQUIRED
>

<!ELEMENT content EMPTY>
<!ATTLIST content
    content-id CDATA #REQUIRED
>

<!ELEMENT sub-content EMPTY>
<!ATTLIST sub-content
    content-id CDATA #REQUIRED
    assoc-name CDATA #REQUIRED
>

<!ELEMENT template EMPTY>
<!ATTLIST template
    location CDATA #REQUIRED
>

<!-- do we really want to encourage this? would rather do it on the screen level, and regions too... -->
<!ELEMENT template-decorator ( (%AllWidgets;)* )>
<!ATTLIST template-decorator
    location CDATA #REQUIRED
>

