<!ENTITY % AllWidgets "section | container | include-screen | decorator-screen | decorator-section | decorator-section-include | label | form | menu | tree | content | sub-content | platform-specific">

<!ENTITY % AllActions "script | service | entity-one | entity-and | entity-condition">


<!ELEMENT screens ( screen+ )>

<!ELEMENT screen ( actions?, section )>
<!ATTLIST screen
    name CDATA #REQUIRED
>

<!ELEMENT actions ( (%AllActions;)* )>

    <!ELEMENT service ( field-map* )>
    <!ATTLIST service
        service-name CDATA #REQUIRED
        out-field-name CDATA "dataFound"
        auto-field-map ( true | false ) "true"
    >
    
    <!ELEMENT entity-one ( field-map* )>
    <!ATTLIST entity-one
        entity-name CDATA #REQUIRED
        use-cache ( true | false ) "true"
        auto-field-map ( true | false ) "true"
    >
    
    <!ELEMENT entity-and ( field-map+, order-by*, ( limit-range | limit-view )? )>
    <!ATTLIST entity-and
        entity-name CDATA #REQUIRED
        use-cache ( true | false ) "false"
        filter-by-date ( true | false | by-name ) "false"
        list-name CDATA #REQUIRED
    >

    <!ELEMENT entity-condition ( ( condition | condition-list ), having-condition-list?, select-field*, order-by*, ( limit-range | limit-view )? )>
    <!ATTLIST entity-condition
        entity-name CDATA #REQUIRED
        use-cache ( true | false ) "false"
        filter-by-date ( true | false | by-name ) "false"
        distinct ( true | false ) "false"
        list-name CDATA #REQUIRED
    >
        <!ELEMENT condition-list ( ( condition | condition-list )+ )>
        <!ATTLIST condition-list
            combine ( and | or ) "and"
        >
        <!ELEMENT having-condition-list ( ( condition | condition-list )+ )>
        <!ATTLIST having-condition-list
            combine ( and | or ) "and"
        >
        <!ELEMENT condition EMPTY>
        <!ATTLIST condition
            field-name CDATA #REQUIRED
            operator ( less | greater | less-equals | greater-equals | equals | not-equals | in | between | like ) #REQUIRED
            env-name CDATA #IMPLIED
            value CDATA #IMPLIED
        >
        <!ELEMENT select-field EMPTY>
        <!ATTLIST select-field
            field-name CDATA #REQUIRED
        >
        <!ELEMENT order-by EMPTY>
        <!ATTLIST order-by
            field-name CDATA #REQUIRED
        >
        
        <!ELEMENT limit-range EMPTY>
        <!ATTLIST limit-range
            start CDATA #REQUIRED
            size CDATA #REQUIRED
        >
        <!ELEMENT limit-view EMPTY>
        <!ATTLIST limit-view
            view-index CDATA #REQUIRED
            view-size CDATA #REQUIRED
        >
        
        <!ELEMENT field-map EMPTY>
        <!ATTLIST field-map
            env-name CDATA #REQUIRED
            field-name CDATA #IMPLIED
        >

    <!ELEMENT script EMPTY>
    <!ATTLIST script
        location CDATA #REQUIRED
    >

<!ELEMENT section ( (%AllWidgets;)* )>
<!ATTLIST section
    name CDATA #IMPLIED
>

    <!ELEMENT container ( (%AllWidgets;)* )>
    <!ATTLIST container
        id CDATA #IMPLIED
        style CDATA #IMPLIED
    >
    
    <!ELEMENT include-screen EMPTY>
    <!ATTLIST include-screen
        name CDATA #REQUIRED
        location CDATA #REQUIRED
    >
    
    <!-- renders the named screen and includes the children of this elements at the point where it finds the decorator-section-include tag -->
    <!ELEMENT decorator-screen ( decorator-section+ )>
    <!ATTLIST decorator-screen
        name CDATA #REQUIRED
        location CDATA #IMPLIED
    >
    
    <!ELEMENT decorator-section ( (%AllWidgets;)* )>
    <!ATTLIST decorator-section
        name CDATA #REQUIRED
    >
    
    <!-- this is just a place holder to tell the renderer to include the parent container's contents at this point -->
    <!ELEMENT decorator-section-include EMPTY>
    <!ATTLIST decorator-section-include
        name CDATA #REQUIRED
    >
    
    <!ELEMENT label (#PCDATA)>
    <!ATTLIST label
        text CDATA #IMPLIED
        id CDATA #IMPLIED
        style CDATA #IMPLIED
    >
    
    <!ELEMENT form EMPTY>
    <!ATTLIST form
        name CDATA #REQUIRED
        location CDATA #REQUIRED
    >
    
    <!ELEMENT menu EMPTY>
    <!ATTLIST menu
        name CDATA #REQUIRED
        location CDATA #REQUIRED
    >
    
    <!ELEMENT tree EMPTY>
    <!ATTLIST tree
        name CDATA #REQUIRED
        location CDATA #REQUIRED
    >
    
    <!ELEMENT content EMPTY>
    <!ATTLIST content
        content-id CDATA #REQUIRED
    >
    
    <!ELEMENT sub-content EMPTY>
    <!ATTLIST sub-content
        content-id CDATA #REQUIRED
        assoc-name CDATA #REQUIRED
    >

<!-- ============== Platform Specific Elements =============== -->

<!ELEMENT platform-specific ( html?, swing? )>

<!-- ============== HTML Specific Elements =============== -->

<!ENTITY % HtmlWidgets "template | template-decorator">

<!ELEMENT html ( (%HtmlWidgets;)* )>

<!ELEMENT template EMPTY>
<!ATTLIST template
    location CDATA #REQUIRED
>

<!-- don't really want to encourage, should be done on the screen level -->
<!ELEMENT template-decorator ( template-decorator-section+ )>
<!ATTLIST template-decorator
    location CDATA #REQUIRED
>
<!ELEMENT template-decorator-section ( (%AllWidgets;)* )>
<!ATTLIST template-decorator-section
    name CDATA #REQUIRED
>

<!-- ============== Swing Specific Elements =============== -->

<!ELEMENT swing EMPTY>

