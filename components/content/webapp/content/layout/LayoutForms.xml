        default-map-name="currentValue"
        target="createLayout" title="" type="single">
        <field name="contentTypeId" >
            <hidden value="DOCUMENT"/>
        </field>
        <field name="contentName">
            <text/>
        </field>
        <field name="description">
            <text/>
        </field>
        <field name="drObjectInfo" title="Template File" >
            <text/>
        </field>
        <field name="submitButton" title="Create" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
