    <!-- Methods for ContentRole -->
    <simple-method method-name="createContentRole" short-description="Create Content Role">
        <log level="always" message="createContentRole(1), parameters:${parameters}"/>
        <check-permission permission="CONTENTMGR" action="_CREATE"><fail-message message="Security Error: to run createContentRole you must have the CONTENTMGR_CREATE or CONTENTMGR_ADMIN permission"/></check-permission>
        <check-errors/>

        <field-to-field field-name="partyId" map-name="parameters" to-map-name="partyRolePK"/>
        <field-to-field field-name="roleTypeId" map-name="parameters" to-map-name="partyRolePK"/>
        <log level="always" message="createContentRole(2), partyRole:${partyRole}/${partyRolePK}"/>
        <find-by-primary-key entity-name="PartyRole" map-name="partyRolePK" value-name="partyRole"/>
        <if-empty field-name="partyRole">
        <log level="always" message="createContentRole(3), partyRole:${partyRole}/${partyRolePK}"/>
            <make-value entity-name="PartyRole" map-name="partyRolePK" value-name="partyRole"/>
            <create-value value-name="partyRole"/>
        </if-empty>
        <check-errors/>
        <log level="always" message="createContentRole(4), partyRole:${partyRole}/${partyRolePK}"/>

        <make-value entity-name="ContentRole" value-name="newEntity"/>
        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        <log level="always" message="createContentRole(6), newEntity:${newEntity}"/>
        <find-by-primary-key entity-name="ContentRole" map-name="newEntity" value-name="contentRole"/>
        <if-empty field-name="contentRole">
            <set-nonpk-fields map-name="parameters" value-name="newEntity"/>
            <log level="always" message="createContentRole(5), newEntity:${newEntity}"/>
            <create-value value-name="newEntity"/>
        </if-empty>
        <check-errors/>
        <log level="always" message="createContentRole(7), newEntity:${newEntity}"/>
    </simple-method>
