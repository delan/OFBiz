<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
	<screen name="GlAccountTree">
        <section>
            <actions>
                <set field="title" value="Test AddGlAccount"/>
                <set field="titleProperty" value="PageTitleEditProduct"/>
                <set field="tabButtonItem" value="EditProduct"/>
                <set field="labelTitleProperty" value="ListAccounts"/>
				<!-- parameters includes requestAttributes and parameter map -->
				<!-- requestParameters is just the parameter map -->
                <set field="glAccountId" from-field="requestParameters.glAccountId"/>
			</actions>
			<widgets>
                <decorator-screen name="main" location="component://accounting/widget/CommonScreens.xml">/
					<decorator-section name="body">
                        
                        <include-form name="EditGlAccount" location="component://accounting/webapp/accounting/chartofaccounts/GlAccountForms.xml"/>
                        <include-tree name="GlAccountTree" location="component://accounting/widget/AccountingTrees.xml" /> 
					
                 	</decorator-section>
                </decorator-screen>
			</widgets>
        </section>

	</screen>

    <screen name="GenericDecorator">
        <section>
            <actions>
                <!--set field="leftbarScreenName" value="leftbar"/ -->
    
                <!-- set field="productId" from-field="parameters.productId"/>
                <entity-one entity-name="Product" value-name="product"/ -->
            </actions>
            <widgets>
				<!-- main defines the regions of the HTML page -->
                <decorator-screen name="main" location="component://accounting/widget/CommonScreens.xml">
				<!-- body is the primary display for this page and is called recursively -->
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <platform-specific>
                                    <html><html-template location="component://accounting/webapp/accounting/chartofaccounts/GlAccountTabBar.ftl"/></html>
                                </platform-specific>
            
                                <container>
                                    <!-- label style="head1">List Accounts</label -->
                                    <label style="head1">${uiLabelMap.${labelTitleProperty}}</label>
                                </container>
                                
                                <!-- add Create Product and View Product (in ecommerce) links -->
                                <!-- container>
                                    <link target="EditProduct" text="[${uiLabelMap.ProductNewProduct}]" style="buttontext"/>
                                    <link target="/ecommerce/control/product?product_id=${productId}" url-mode="raw" text="[${uiLabelMap.ProductProductPage}]" style="buttontext"/>
                                </container -->
								
								<!-- Now call the SimpleScreen form -->
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="head3">${uiLabelMap.ProductCatalogViewPermissionError}</label>
                            </fail-widgets>
                        </section>                    
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>



	<screen name="SimpleScreen">
		<section>
			<widgets>
				<platform-specific>
					<html><html-template location="chartofaccounts/SimpleForm.ftl"/></html>
                </platform-specific>
			</widgets>
		</section>
	</screen>
	
