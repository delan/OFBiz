        <set-pk-fields map-name="parameters" value-name="newEntity"/>
        <create-value value-name="newEntity"/>
    </simple-method>
    <simple-method method-name="updateContactListParty" short-description="Update Add Party To ContactList">
        <check-permission permission="MARKETING" action="_UPDATE"><fail-message message="Security Error: to run updateContactListParty you must have the MARKETING_UPDATE or MARKETING_ADMIN permission"/></check-permission>
