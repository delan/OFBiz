 <xsd:element name='data-files'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='data-file' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='data-file'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='record' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='type-code' type='xsd:string' use='required'/>
   <xsd:attribute name='sender' type='xsd:string' use='optional'/>
   <xsd:attribute name='receiver' type='xsd:string' use='optional'/>
   <xsd:attribute name='delimiter' type='xsd:string' use='optional'/>
   <xsd:attribute name='record-length' type='xsd:string' use='optional'/>
   <xsd:attribute name='separator-style' use='required'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='fixed-length'/>
      <xsd:enumeration value='fixed-record'/>
      <xsd:enumeration value='delimited'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='description' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='record'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='field' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='type-code' type='xsd:string' use='optional'/>
   <xsd:attribute name='tc-min' type='xsd:string' use='optional'/>
   <xsd:attribute name='tc-max' type='xsd:string' use='optional'/>
   <xsd:attribute name='tc-isnum' default='true'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='false'/>
      <xsd:enumeration value='true'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='tc-position' type='xsd:string' use='optional'/>
   <xsd:attribute name='tc-length' type='xsd:string' use='optional'/>
   <xsd:attribute name='description' type='xsd:string' use='optional'/>
   <xsd:attribute name='parent-name' type='xsd:string' use='optional'/>
   <xsd:attribute name='limit' default='many'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='one'/>
      <xsd:enumeration value='many'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='field'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='position' type='xsd:string' use='optional'/>
   <xsd:attribute name='length' type='xsd:string' use='optional'/>
   <xsd:attribute name='type' type='xsd:string' use='required'/>
   <xsd:attribute name='format' type='xsd:string' use='optional'/>
   <xsd:attribute name='valid-exp' type='xsd:string' use='optional'/>
   <xsd:attribute name='description' type='xsd:string' use='optional'/>
   <xsd:attribute name='prim-key' default='false'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
