<!ELEMENT service-group ( group+ )>
<!ELEMENT group ( service+ )>
<!ATTLIST group
	name CDATA #REQUIRED
	send-mode (none|all|first-available|random|round-robin) "all"
>
<!ELEMENT service EMPTY>
<!ATTLIST service
	name CDATA #REQUIRED
	mode (sync|async) "sync"
	result-to-context (true|false) "false"
>

