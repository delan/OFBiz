 <xsd:element name='service-config'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='authorization'/>
    <xsd:element ref='thread-pool'/>
    <xsd:element ref='engine' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='service-location' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='startup-service' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='resource-loader' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='global-services' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='service-groups' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='service-ecas' minOccurs='0' maxOccurs='unbounded'/>
    <xsd:element ref='jms-service' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='authorization'>
  <xsd:complexType>
   <xsd:attribute name='service-name' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='thread-pool'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='run-from-pool' minOccurs='0' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='send-to-pool' type='xsd:string' use='required'/>
   <xsd:attribute name='purge-job-days' type='xsd:string' default='30'/>
   <xsd:attribute name='failed-retry-min' type='xsd:string' default='30'/>
   <xsd:attribute name='ttl' type='xsd:string' use='required'/>
   <xsd:attribute name='wait-millis' type='xsd:string' use='required'/>
   <xsd:attribute name='jobs' type='xsd:string' use='required'/>
   <xsd:attribute name='min-threads' type='xsd:string' use='required'/>
   <xsd:attribute name='max-threads' type='xsd:string' use='required'/>
   <xsd:attribute name='poll-enabled' default='true'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='poll-db-millis' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='run-from-pool'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='engine'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='class' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='startup-service'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='runtime-data-id' type='xsd:string' use='optional'/>
   <xsd:attribute name='runtime-delay' type='xsd:string' default='0'/>
   <xsd:attribute name='run-in-pool' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='service-location'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='location' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='resource-loader'>
  <xsd:complexType>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='class' type='xsd:string' use='required'/>
   <xsd:attribute name='prepend-env' type='xsd:string' use='optional'/>
   <xsd:attribute name='prefix' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='global-services'>
  <xsd:complexType>
   <xsd:attribute name='loader' type='xsd:string' use='required'/>
   <xsd:attribute name='location' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='service-groups'>
  <xsd:complexType>
   <xsd:attribute name='loader' type='xsd:string' use='required'/>
   <xsd:attribute name='location' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='service-ecas'>
  <xsd:complexType>
   <xsd:attribute name='loader' type='xsd:string' use='required'/>
   <xsd:attribute name='location' type='xsd:string' use='required'/>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='jms-service'>
  <xsd:complexType>
   <xsd:sequence>
    <xsd:element ref='server' maxOccurs='unbounded'/>
   </xsd:sequence>
   <xsd:attribute name='name' type='xsd:string' use='required'/>
   <xsd:attribute name='send-mode' default='none'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='none'/>
      <xsd:enumeration value='all'/>
      <xsd:enumeration value='first-available'/>
      <xsd:enumeration value='random'/>
      <xsd:enumeration value='round-robin'/>
      <xsd:enumeration value='least-load'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
  </xsd:complexType>
 </xsd:element>

 <xsd:element name='server'>
  <xsd:complexType>
   <xsd:attribute name='jndi-server-name' type='xsd:string' use='required'/>
   <xsd:attribute name='jndi-name' type='xsd:string' use='required'/>
   <xsd:attribute name='topic-queue' type='xsd:string' use='required'/>
   <xsd:attribute name='type' use='required'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='topic'/>
      <xsd:enumeration value='queue'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='username' type='xsd:string' use='optional'/>
   <xsd:attribute name='password' type='xsd:string' use='optional'/>
   <xsd:attribute name='client-id' type='xsd:string' use='optional'/>
   <xsd:attribute name='listen' default='false'>
    <xsd:simpleType>
     <xsd:restriction base='xsd:string'>
      <xsd:enumeration value='true'/>
      <xsd:enumeration value='false'/>
     </xsd:restriction>
    </xsd:simpleType>
   </xsd:attribute>
   <xsd:attribute name='listener-class' type='xsd:string' use='optional'/>
  </xsd:complexType>
 </xsd:element>
</xsd:schema>
