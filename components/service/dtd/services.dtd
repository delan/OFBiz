<!ELEMENT services (description?, vendor?, version?, created?, service+)>
<!ELEMENT description ANY>
<!ELEMENT namespace ANY>
<!ELEMENT vendor (#PCDATA)>
<!ELEMENT version (#PCDATA)>
<!ELEMENT created (#PCDATA)>
<!ELEMENT service (description?, namespace?, required-permissions*, implements*, auto-attributes*, attribute*, override*)>
<!ATTLIST service
	name CDATA #REQUIRED
	engine CDATA #REQUIRED
	location CDATA #REQUIRED
	invoke CDATA #REQUIRED
	auth (true|false) "false"
	export (true|false) "false"
	validate (true|false) "true"
	default-entity-name CDATA #IMPLIED
	use-transaction (true|false) "true"
	require-new-transaction (true|false) "false"
	transaction-timout CDATA #IMPLIED
    max-retry CDATA "-1"
	debug (true|false) "false"
>
<!ELEMENT required-permissions (check-permission*, check-role-member*)>
<!ATTLIST required-permissions
    join-type (AND|OR) #REQUIRED
>
<!ELEMENT check-permission EMPTY>
<!ATTLIST check-permission
    permission CDATA #REQUIRED
    action CDATA #IMPLIED
>
<!ELEMENT check-role-member EMPTY>
<!ATTLIST check-role-member
    role-type CDATA #REQUIRED
>
<!ELEMENT implements EMPTY>
<!ATTLIST implements
	service CDATA #REQUIRED
>
<!ELEMENT attribute EMPTY>
<!ATTLIST attribute
	name CDATA #REQUIRED
	type CDATA #REQUIRED
	mode (IN|OUT|INOUT) #REQUIRED
	form-label CDATA #IMPLIED
	entity-name CDATA #IMPLIED
	field-name CDATA #IMPLIED
    string-map-prefix CDATA #IMPLIED
    string-list-suffix CDATA #IMPLIED
	form-display (true|false) "true"
	optional (true|false) "false"
>
<!ELEMENT exclude EMPTY>
<!ATTLIST exclude
    field-name CDATA #REQUIRED
>
<!ELEMENT auto-attributes (exclude*)>
<!ATTLIST auto-attributes
    entity-name CDATA #IMPLIED
    include (pk|nonpk|all) "all"
    mode (IN|OUT|INOUT) #REQUIRED
    form-display (true|false) "true"
    optional (true|false) "false"
>
<!ELEMENT override EMPTY>
<!ATTLIST override
    name CDATA #REQUIRED
    type CDATA #IMPLIED
    entity-name CDATA #IMPLIED
    field-name CDATA #IMPLIED
    mode (IN|OUT|INOUT) #IMPLIED
    form-label CDATA #IMPLIED
    form-display (true|false) #IMPLIED
    optional (true|false) #IMPLIED
>


