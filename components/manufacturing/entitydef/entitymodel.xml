<entitymodel>
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
    <title>Entity of the Open For Business Manufacturing Component</title>
    <description>None</description>
    <copyright>Copyright (c) 2003 The Open For Business Project - www.ofbiz.org</copyright>
    <author>Misc</author>
    <version>1.0</version>

  <!-- ========================================================= -->
  <!-- ======================== Data Model ===================== -->
  <!-- The modules in this file are as follows:                  -->
  <!--  - org.ofbiz.manufacturing.bom -->
  <!--  - org.ofbiz.manufacturing.techdata -->
  <!-- ========================================================= -->


  <!-- ========================================================= -->
  <!-- org.ofbiz.manufacturing.bom -->
  <!-- ========================================================= -->

    <entity entity-name="ProductManufacturingRule"
            package-name="org.ofbiz.manufacturing.bom"
            title="Product To Part Rule Entity"
            author="Jacopo Cappellato">
      <field name="ruleId" type="id-ne"></field>
      <field name="productId" type="id"></field>
      <field name="productIdFor" type="id"></field>
      <field name="productIdIn" type="id-ne"></field>
      <field name="ruleSeqId" type="id"></field>
      <field name="fromDate" type="date-time"></field>
      <field name="productIdInSubst" type="id"></field>
      <field name="productFeature" type="id"></field>
      <field name="ruleOperator" type="id"></field>
      <field name="description" type="description"></field>
      <field name="thruDate" type="date-time"></field>
      <prim-key field="ruleId"/>
      <!-- FIXME: relations are missing -->
    </entity>

  <!-- ========================================================= -->
  <!-- org.ofbiz.manufacturing.techdata -->
  <!-- ========================================================= -->

    <entity entity-name="TechDataMachineGroup"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Tech Data Machine Group"
            author="Olivier Heintz">
 	<description>Used to group similar machine, a routing operation is done on a machine group</description>
      <field name="machineGroupId" type="id-ne"></field>
      <field name="description" type="description"></field>
      <prim-key field="machineGroupId"/>
      <relation type="many"  rel-entity-name="TechDataMachine">
        <key-map field-name="machineGroupId"/>
      </relation>
    </entity>
    <entity entity-name="TechDataCalendarWeek"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Week definition entity"
            author="Olivier Heintz">
 	<description>Used to defined the week definition disponibility for machine</description>
      <field name="calendarWeekId" type="id-ne"></field>
      <field name="description" type="description"></field>
      <field name="mondayStartTime" type="time"></field>
      <field name="mondayCapacity" type="floating-point"></field>
      <field name="tuesdayStartTime" type="time"></field>
      <field name="tuesdayCapacity" type="floating-point"></field>
      <field name="wednesdayStartTime" type="time"></field>
      <field name="wednesdayCapacity" type="floating-point"></field>
      <field name="thursdayStartTime" type="time"></field>
      <field name="thursdayCapacity" type="floating-point"></field>
      <field name="fridayStartTime" type="time"></field>
      <field name="fridayCapacity" type="floating-point"></field>
      <field name="saturdayStartTime" type="time"></field>
      <field name="saturdayCapacity" type="floating-point"></field>
      <field name="sundayStartTime" type="time"></field>
      <field name="sundayCapacity" type="floating-point"></field>
      <field name="weekCapacity" type="floating-point"></field>
      <prim-key field="calendarWeekId"/>
      <relation type="many"  rel-entity-name="TechDataCalendar">
        <key-map field-name="calendarWeekId"/>
      </relation>
      <relation type="many"  rel-entity-name="TechDataCalendarWeekException">
        <key-map field-name="calendarWeekId"/>
      </relation>
    </entity>
    <entity entity-name="TechDataCalendar"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Calendar entity"
            author="Olivier Heintz">
 	<description>Used to defined the availability of the machines, this entity define the Id and the week definition.
 	The Id is used in the exception calendar table as reference
 	</description>
      <field name="calendarId" type="id-ne"></field>
      <field name="description" type="description"></field>
      <field name="calendarWeekId" type="id-ne"></field>
      <prim-key field="calendarId"/>
      <relation type="one" fk-name="CALENDAR_WEEK" rel-entity-name="TechDataCalendarWeek">
        <key-map field-name="calendarWeekId"/>
      </relation>
      <relation type="many"  rel-entity-name="TechDataCalendarExceptionDay">
        <key-map field-name="calendarId"/>
      </relation>
      <relation type="many"  rel-entity-name="TechDataCalendarExceptionWeek">
        <key-map field-name="calendarId"/>
      </relation>
      <relation type="many"  rel-entity-name="TechDataMachine">
        <key-map field-name="calendarId"/>
      </relation>
    </entity>
    <entity entity-name="TechDataCalendarExceptionDay"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Calendar Exception Day entity"
            author="Olivier Heintz">
 	<description>Used to defined some days which differ from the normal day definition in the weekId associated in the calendar.
 	</description>
      <field name="calendarId" type="id-ne"></field>
      <field name="exceptionDateStartTime" type="date-time"></field>
      <field name="exceptionCapacity" type="floating-point"></field>
      <field name="description" type="description"></field>
      <prim-key field="calendarId"/>
      <prim-key field="exceptionDateStartTime"/>
      <relation type="one" fk-name="EXCEPT_DAY_CALENDAR" rel-entity-name="TechDataCalendar">
        <key-map field-name="calendarId"/>
      </relation>
    </entity>
    <entity entity-name="TechDataCalendarExceptionWeek"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Calendar Exception Week entity"
            author="Olivier Heintz">
 	<description>Used to defined some weeks which differ from the normal week defined in the calendar.
 	</description>
      <field name="calendarId" type="id-ne"></field>
      <field name="exceptionDateStart" type="date"></field>
      <field name="calendarWeekId" type="id-ne"></field>
      <field name="description" type="description"></field>
      <prim-key field="calendarId"/>
      <prim-key field="exceptionDateStart"/>
      <relation type="one" fk-name="EXCEPT_WEEK_CALENDAR" rel-entity-name="TechDataCalendar">
        <key-map field-name="calendarId"/>
      </relation>
      <relation type="one" fk-name="EXCEPT_WEEK_WEEK" rel-entity-name="TechDataCalendarWeek">
        <key-map field-name="calendarWeekId"/>
      </relation>
    </entity>
    <entity entity-name="TechDataMachine"
            package-name="org.ofbiz.manufacturing.techdata"
            title="Machine entity">
 	<description>A machine is a element of a machineGroup, which is used by the operation entity or routing entity. This is used by the delay and capacity calculation.
 	</description>
      <field name="machineId" type="id-ne"></field>
      <field name="description" type="description"></field>
      <field name="machineGroupId" type="id-ne"></field>
      <field name="calendarId" type="id-ne"></field>
      <prim-key field="machineId"/>
      <relation type="one" fk-name="MACHINE_MACHINE_GROUP" rel-entity-name="TechDataMachineGroup">
        <key-map field-name="machineGroupId"/>
      </relation>
      <relation type="one" fk-name="MACHINE_CALENDAR" rel-entity-name="TechDataCalendar">
        <key-map field-name="calendarId"/>
      </relation>
    </entity>
</entitymodel>

