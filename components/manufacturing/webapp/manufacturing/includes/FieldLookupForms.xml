<forms>
	<form name="lookupRoutingTask" type="single" 
		target="fieldLookup" title="" default-map-name="lookup"
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="lookupRoutingTask" map-name="parameters"/>
        <field name="fixedAssetId" >
			<drop-down>
				<list-options list-name="allMachineGroups" list-entry-name="machineGroup" 
								key-name="machineGroup.fixedAssetId" description="${machineGroup.fixedAssetName}"/>
			</drop-down>
        </field>
		<field name="submitButton" title="${uiLabelMap.CommonLookup}" widget-style="smallSubmit"><submit button-type="button"/></field>
		<field name="lookupService"><hidden value="lookupRoutingTask"/></field>
		<field name="formName" ><hidden value="lookupRoutingTask"/></field>
		<field name="id" ><hidden/></field>
	</form>
    <form
        name="lookupProduct" 
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        target="LookupProduct" title="" type="single">
        <auto-fields-entity entity-name="Product" default-field-type="find" />
        <field name="productId" title="${uiLabelMap.ProductProductId}"></field>
        <field name="productName" title="${uiLabelMap.ProductProductName}"></field>
        <field name="productTypeId" title="${uiLabelMap.ProductType}">
            <drop-down>
                <option key="" description=""/>
                <entity-options entity-name="ProductType" description="${description}">
                    <entity-constraint name="parentTypeId" value="GOOD"/>
                </entity-options>
             </drop-down>
        </field>
        <field name="productTypeId_op">
            <hidden value="equals"/>
        </field>
        <field name="isVirtual"><ignored/></field>
        <field name="primaryProductCategoryId"><ignored/></field>
        <field name="manufacturerPartyId"><ignored/></field>
        <field name="introductionDate"><ignored/></field>
        <field name="supportDiscontinuationDate"><ignored/></field>
        <field name="salesDiscontinuationDate"><ignored/></field>
        <field name="salesDiscWhenNotAvail"><ignored/></field>
        <field name="internalName"><ignored/></field>
        <field name="brandName"><ignored/></field>
        <field name="comments"><ignored/></field>
        <field name="description"><ignored/></field>
        <field name="longDescription"><ignored/></field>
        <field name="inventoryMessage"><ignored/></field>
        <field name="requireInventory"><ignored/></field>
        <field name="smallImageUrl"><ignored/></field>
        <field name="mediumImageUrl"><ignored/></field>
        <field name="largeImageUrl"><ignored/></field>
        <field name="detailImageUrl"><ignored/></field>
        <field name="detailTemplate"><ignored/></field>
        <field name="quantityUomId"><ignored/></field>
        <field name="quantityIncluded"><ignored/></field>
        <field name="piecesIncluded"><ignored/></field>
        <field name="weightUomId"><ignored/></field>
        <field name="weight"><ignored/></field>
        <field name="returnable"><ignored/></field>
        <field name="taxable"><ignored/></field>
        <field name="taxCategory"><ignored/></field>
        <field name="taxVatCode"><ignored/></field>
        <field name="taxDutyCode"><ignored/></field>
        <field name="chargeShipping"><ignored/></field>
        <field name="autoCreateKeywords"><ignored/></field>
        <field name="isVariant"><ignored/></field>
        <field name="totalQuantityOrdered"><ignored/></field>
        <field name="createdDate"><ignored/></field>
        <field name="createdByUserLogin"><ignored/></field>
        <field name="lastModifiedDate"><ignored/></field>
        <field name="lastModifiedByUserLogin"><ignored/></field>
        <field name="depthUomId"><ignored/></field>
        <field name="productDepth"><ignored/></field>
        <field name="widthUomId"><ignored/></field>
        <field name="productWidth"><ignored/></field>
        <field name="heightUomId"><ignored/></field>
        <field name="productHeight"><ignored/></field>
        <field name="amountUomTypeId"><ignored/></field>
        <field name="requireAmount"><ignored/></field>
        <field name="submitButton" title="${uiLabelMap.CommonLookup}" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <form
        name="listLookupProduct" 
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="display"
        list-name="entityList" paginate-target="/LookupProduct" 
	    title="" type="list">
        <field name="productId" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink also-hidden="false" target-type="plain" description="${productId}" target="javascript:set_value('${productId}')"/>
        </field>
        <field name="productName" title="${uiLabelMap.ProductProductName}"><display/></field>
        <field name="productTypeId" title="${uiLabelMap.ProductType}"><display/></field>
    </form>
    <form 
        name="lruLookupProduct" 
        default-entity-name="Product"
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="display"
        list-name="lruList" 
        target="" title="" type="list">
        <field name="productId" title="${uiLabelMap.CommonId}" widget-style="buttontext">
            <hyperlink also-hidden="false" target-type="plain" description="${productId}" target="javascript:set_value('${productId}')"/>
        </field>
        <field name="productName" title="${uiLabelMap.ProductProductName}" widget-style="buttontext">
                <display/>
        </field>
    </form>
</forms>