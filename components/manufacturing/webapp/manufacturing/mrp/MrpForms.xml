<forms>
  <form name="findProposedOrder" type="single" 
	target="FindProposedOrder" title=""
	default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
    <field name="hideSearch"><hidden value="Y"/></field>
    <field name="requirementId" title="${uiLabelMap.ManufacturingRequirementId}"><text-find default-value="equals"/></field>
    <field name="productId" title="${uiLabelMap.ProductProductId}">
       <lookup target-form-name="/manufacturing/control/LookupProduct"/>
    </field>
    <field name="requirementStartDate" title="${uiLabelMap.ManufacturingRequirementStartDate}"><text-find default-value="equals"/></field>
    <field name="requirementByDate" title="${uiLabelMap.ManufacturingRequirementByDate}"><text-find default-value="equals"/></field>
    <field name="submitButton" title="${uiLabelMap.CommonLookup}" widget-style="smallSubmit">
      <submit button-type="button"/>
     </field>
  </form>
  <form name="listProposedOrder" type="list" 
	target="FindProposedOrder" title="" list-name="requirementList" paginate-target="/FindProposedOrder"
	default-title-style="tableheadtext" default-widget-style="tabletextcenter" default-tooltip-style="tabletext">
    <field name="requirementId" title="${uiLabelMap.ManufacturingRequirementId}"><display/></field>
    <field name="description" title="descritpion"><display/></field>
    <field name="productId" title="${uiLabelMap.ProductProductId}"><display/></field>
    <field name="internalName" title="${uiLabelMap.ProductProductInternalName}" ><display/></field>
    <field name="requirementStartDate" title="${uiLabelMap.ManufacturingRequirementStartDate}"><display/></field>
    <field name="requirementByDate" title="${uiLabelMap.ManufacturingRequirementByDate}"><display/></field>
    <field name="quantity" title="${uiLabelMap.CommonQuantity}"><display/></field>
  </form>
</forms>
