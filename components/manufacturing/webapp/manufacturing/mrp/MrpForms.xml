<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-form.xsd">
  <form name="findProposedOrder" type="single" 
	target="FindProposedOrder" title=""
	default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
    <actions>
        <property-map resource="ManufacturingUiLabels" map-name="uiLabelMap"/>
    </actions>
    <field name="hideSearch"><hidden value="Y"/></field>
    <field name="requirementId" title="${uiLabelMap.ManufacturingRequirementId}"><text-find default-value="equals"/></field>
    <field name="requirementTypeId" title="${uiLabelMap.ManufacturingRequirementTypeId}">
        <drop-down allow-empty="true">
            <entity-options entity-name="RequirementType" description="${description}"/>
        </drop-down>
    </field>
    <field name="statusId" title="${uiLabelMap.ManufacturingRequirementStatusId}">
        <drop-down allow-empty="true">
            <entity-options entity-name="StatusItem" description="${description}">
                <entity-constraint name="statusTypeId" operator="equals" value="REQUIREMENT_STATUS"/>
                <entity-order-by field-name="sequenceId"/>
            </entity-options>
        </drop-down>
    </field>
    <field name="productId" title="${uiLabelMap.ProductProductId}">
       <lookup target-form-name="/manufacturing/control/LookupProduct"/>
    </field>
    <field name="requirementStartDate" title="${uiLabelMap.ManufacturingRequirementStartDate}"><date-find type="date"/></field>
    <field name="requirementByDate" title="${uiLabelMap.ManufacturingRequirementByDate}"><date-find type="date"/></field>
    <field name="submitButton" title="${uiLabelMap.CommonLookup}" widget-style="smallSubmit">
      <submit button-type="button"/>
     </field>
  </form>
  <form name="listProposedOrder" type="multi" use-row-submit="true" 
        target="approveRequirements" title="" list-name="requirementList" paginate-target="/FindProposedOrder"
        default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
    <actions>
        <property-map resource="ManufacturingUiLabels" map-name="uiLabelMap"/>
    </actions>
    <field name="requirementId" title="${uiLabelMap.ManufacturingRequirementId}"><display/></field>
    <field name="statusId" title="${uiLabelMap.ManufacturingStatusId}"><display/></field>
    <field name="description" title="descritpion"><display/></field>
    <field name="productId" title="${uiLabelMap.ProductProductId}"><display/></field>
    <field name="internalName" title="${uiLabelMap.ProductProductInternalName}" ><display/></field>
    <field name="requirementStartDate" title="${uiLabelMap.ManufacturingRequirementStartDate}"><display/></field>
    <field name="requirementByDate" title="${uiLabelMap.ManufacturingRequirementByDate}"><display/></field>
    <field name="quantity" title="${uiLabelMap.CommonQuantity}"><display/></field>
    <field name="_rowSubmit" title="${uiLabelMap.CommonSelect}"><check/></field>
    <!--
    <field name="requirementTypeId" use-when="&quot;MRP_PRO_PURCH_ORDER&quot;.equals(&quot;${requirementTypeId}&quot;)"><text/></field>
    -->
    <field name="submitButton" widget-style="smallSubmit">
      <submit/>
    </field>
  </form>
</forms>
