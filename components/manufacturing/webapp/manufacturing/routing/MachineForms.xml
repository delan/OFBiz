<forms>
    <form name="ListMachine" type="list" 
            target="UpdateMachine" title="" list-name="machinesDatas"
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext"
            >
        <auto-fields-service service-name="updateMachine" map-name="machine"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineId}"><display/></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}"><display/></field>
        <field name="fixedAssetTypeId" ><hidden/></field>
        <field name="parentFixedAssetId" title="${uiLabelMap.ManufacturingMachineGroup}">
        	<display description="${machineGroup.fixedAssetName} "/></field>
        <field name="calendarId" title="${uiLabelMap.ManufacturingCalendar}" >
        	<display description="${calendar.description} "/></field>
        <field name="updateLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="EditMachine?fixedAssetId=${machine.fixedAssetId}" description="[${uiLabelMap.CommonSelected}]" />
        </field> 
        <field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="RemoveMachine?fixedAssetId=${machine.fixedAssetId}" description="[${uiLabelMap.CommonDelete}]" also-hidden="false"/>
        </field>
    </form>
 
     <form name="UpdateMachine" type="single" 
            target="UpdateMachine" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="updateMachine" map-name="machine"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineId}"><display/></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}" position="2" ></field>
        <field name="parentFixedAssetId" title="${uiLabelMap.ManufacturingMachineGroup}" position="3" >
			<drop-down>
				<list-options list-name="allMachineGroups" list-entry-name="machineGroup" 
								key-name="machineGroup.fixedAssetId" description="${machineGroup.fixedAssetName}"/>
			</drop-down>
        </field>
        <field name="calendarId" title="${uiLabelMap.ManufacturingCalendar}" position="4" >
			<drop-down>
				<entity-options entity-name="TechDataCalendar" description="${description}">
					<entity-order-by field-name="description"/>
				</entity-options>
			</drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" widget-style="smallSubmit" position="5" ><submit button-type="button"/></field>
    </form>

     <form name="AddMachine" type="single" 
            target="CreateMachine" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="createMachine" map-name="machine"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineId}"></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}" ></field>
        <field name="parentFixedAssetId" title="${uiLabelMap.ManufacturingMachineGroup}">
			<drop-down>
				<list-options list-name="allMachineGroups" list-entry-name="machineGroup" 
							key-name="machineGroup.fixedAssetId" description="${machineGroup.fixedAssetName}"/>
			</drop-down>
        </field>
        <field name="calendarId" title="${uiLabelMap.ManufacturingCalendar}">
			<drop-down>
				<entity-options entity-name="TechDataCalendar" description="${description}">
					<entity-order-by field-name="description"/>
				</entity-options>
			</drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}" widget-style="smallSubmit" ><submit button-type="button"/></field>
    </form>
 
    <form name="ListMachineGroup" type="list" 
            target="UpdateMachineGroup" title="" list-name="machineGroups"
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext"
            >
        <auto-fields-service service-name="updateMachineGroup" map-name="machineGroup"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineGroupId}"><display/></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}"><display/></field>
        <field name="updateLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="EditMachineGroup?fixedAssetId=${fixedAssetId}" description="[${uiLabelMap.CommonSelected}]" />
        </field> 
        <field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="RemoveMachineGroup?fixedAssetId=${fixedAssetId}" description="[${uiLabelMap.CommonDelete}]" also-hidden="false"/>
        </field>
    </form>
 
     <form name="UpdateMachineGroup" type="single" 
            target="UpdateMachineGroup" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="updateMachineGroup" map-name="machineGroup"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineGroupId}"><display/></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}" position="2" ></field>
        <field name="fixedAssetTypeId" ><hidden/></field>
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" widget-style="smallSubmit" position="3" ><submit button-type="button"/></field>
    </form>

     <form name="AddMachineGroup" type="single" 
            target="CreateMachineGroup" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="createMachineGroup" map-name="machineGroup"/>
        <field name="fixedAssetId" title="${uiLabelMap.ManufacturingMachineGroupId}"></field>
        <field name="fixedAssetName" title="${uiLabelMap.CommonDescription}" ></field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}" widget-style="smallSubmit" ><submit button-type="button"/></field>
    </form>
 
</forms>
