<forms>

    <form name="ListProductManufacturingRules" type="list" 
            target="UpdateProductManufacturingRule" title="" list-name="manufacturingRules"
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext"
            >
        <auto-fields-service service-name="updateProductManufacturingRule" map-name="manufacturingRule"/>
        <field name="ruleId"><display/></field>
        <field name="productId"><display/></field>
        <field name="productIdFor"><display/></field>
        <field name="productIdIn"><display/></field>
        <field name="productIdInSubst"><display/></field>
        <field name="productFeature"><display/></field>
        <field name="quantity"><display/></field>
        <field name="ruleOperator"><display/></field>
        <field name="fromDate"><display/></field>
        <field name="thruDate"><display/></field>
        <field name="updateLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="EditProductManufacturingRules?ruleId=${ruleId}" description="[${uiLabelMap.CommonSelected}]" />
        </field> 
        <field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink target="DeleteProductManufacturingRule?ruleId=${ruleId}" description="[${uiLabelMap.CommonDelete}]" also-hidden="false"/>
        </field>
    </form>

     <form name="UpdateProductManufacturingRule" type="single" 
            target="UpdateProductManufacturingRule" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="updateProductManufacturingRule" map-name="manufacturingRule"/>
        <field name="ruleId"><display/></field>
        <field name="productIdIn">
            <lookup target-form-name="LookupVirtualProduct"/>
        </field>
        <field name="ruleOperator">
            <drop-down>
                <option key="OR"/>
                <option key="AND"/>
            </drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonUpdate}" widget-style="smallSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    
     <form name="AddProductManufacturingRule" type="single" 
            target="AddProductManufacturingRule" title=""
            default-title-style="tableheadtext" default-widget-style="tabletext" default-tooltip-style="tabletext">
        <auto-fields-service service-name="addProductManufacturingRule" map-name="manufacturingRule"/>
        <field name="ruleId"><display/></field>
        <field name="ruleOperator">
            <drop-down>
                <option key="OR"/>
                <option key="AND"/>
            </drop-down>
        </field>
        <field name="productIdIn">
            <lookup target-form-name="LookupVirtualProduct"/>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}" widget-style="smallSubmit" >
            <submit button-type="button"/>
        </field>
    </form>

    <form
        name="lookupVirtualProduct" 
        default-map-name= "inputFields" default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="inputBox"
        target="LookupVirtualProduct" title="" type="single">
        <auto-fields-entity entity-name="Product" default-field-type="hidden" />
        <field name="isVirtual">
            <hidden value="Y"/>
        </field>
        <field name="isVirtual_op">
            <hidden value="equals"/>
        </field>
        <field name="productId" title="${uiLabelMap.ProductProductId}"><text-find value="equals"/></field>
        <field name="productTypeId" title="${uiLabelMap.ProductType}">
            <drop-down>
                <option key="" description=""/>
                <entity-options entity-name="ProductType" description="${description}">
                    <entity-constraint name="parentTypeId" value="GOOD"/>
                </entity-options>
             </drop-down>
        </field>
        <field name="productTypeId_op">
            <hidden value="equals"/>
        </field>
	<field name="productName" title="${uiLabelMap.ProductProductName}"><text-find value="equals"/></field>
        <field name="submitButton" title="${uiLabelMap.CommonLookUp}" widget-style="standardSubmit">
            <submit button-type="button"/>
        </field>
    </form>
    <form
        name="listLookupVirtualProduct" 
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="display"
        list-name="entityList" paginate-target="/GenericLookup" 
	title="" type="list">
        <field name="productId" title="&amp;nbsp;" widget-style="buttontext">
            <hyperlink also-hidden="false" target-type="plain" description="${productId}" target="javascript:set_value('${productId}')"/>
        </field>
        <field name="productName"><display/></field>
        <field name="productTypeId"><display/></field>
    </form>
    <form 
        name="lruLookupVirtualProduct" 
        default-entity-name="Product"
        default-title-style="tableheadtext"
        default-tooltip-style="tabletext" default-widget-style="display"
        list-name="lruList" 
        target="" title="" type="list">
        <field name="productId" title="Id" widget-style="buttontext">
            <hyperlink also-hidden="false" target-type="plain" description="${productId}" target="javascript:set_value('${productId}')"/>
        </field>
        <field name="productName" title="Name" widget-style="buttontext">
                <display/>
        </field>
    </form>

</forms>
