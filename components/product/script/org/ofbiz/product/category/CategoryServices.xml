        <if-not-empty field-name="validDate" map-name="parameters">
            <field-to-env field-name="validDate" map-name="parameters" env-name="expireTimestamp"/>
            <else>
                <now-timestamp-to-env env-name="expireTimestamp"/>
            </else>
