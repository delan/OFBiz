<forms>
	<form name="EditProdCatalog" type="single" 
		target="updateProdCatalog" title="" default-map-name="prodCatalog"
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		
		<alt-target use-when="prodCatalog==null" target="createProdCatalog"/>
		
		<auto-fields-service service-name="updateProdCatalog" map-name=""/>
		
		<field use-when="prodCatalog!=null" name="prodCatalogId" tooltip="This cannot be changed without re-creating the Product Catalog."><display/></field>
		<field use-when="prodCatalog==null&amp;&amp;prodCatalogId!=null" name="prodCatalogId" tooltip="Could not find ProdCatalog with ID [${prodCatalogId}]"><text size="20" maxlength="20"/></field>
		<!-- this to be taken care of with auto-fields-service as soon as it uses entity field info too -->
		<field use-when="prodCatalog==null&amp;&amp;prodCatalogId==null" name="prodCatalogId"><text size="20" maxlength="20"/></field>

		<field name="catalogName"><text size="30" maxlength="60"/></field>
		
		<field name="useQuickAdd" widget-style="selectBox">
			<drop-down allow-empty="false" no-current-selected-key="Y"><option key="Y"/><option key="N"/></drop-down>
		</field>

		<field name="styleSheet"><text size="60" maxlength="250"/></field>
		<field name="headerLogo"><text size="60" maxlength="250"/></field>
		<field name="contentPathPrefix" tooltip="If specified will be prepended to image and other content paths. Should start with a slash but not end with one."><text size="60" maxlength="250"/></field>
		<field name="templatePathPrefix" tooltip="If specified will be prepended to template paths. Should start with a slash but not end with one."><text size="60" maxlength="250"/></field>

		<field name="submitButton" title="Update" widget-style="standardSubmit"><submit button-type="button"/></field>
	</form>
	<form name="AddProdCatalogToParty" type="single" 
		target="addProdCatalogToParty" title=""
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="addProdCatalogToParty"/>
		<field name="prodCatalogId" map-name="prodCatalog"><hidden/></field>
		<field name="roleTypeId" title="Role" widget-style="selectBox">
			<drop-down no-current-selected-key="_NA_">
				<entity-options entity-name="RoleType" description="${description}">
					<entity-order-by field-name="description"/>
				</entity-options>
			</drop-down>
		</field>
		<field name="submitButton" title="Add" widget-style="standardSubmit"><submit button-type="button"/></field>
	</form>
	<form name="UpdateProdCatalogToParty" type="list" 
		target="updateProdCatalogToParty" title="" list-name="prodCatalogRoleDatas"
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="updateProdCatalogToParty" map-name="prodCatalogRole"/>
		<field name="prodCatalogId"><hidden/></field>
		<!-- three possibilities for the Party: person, partyGroup, neither... just print everything and if it's empty, no biggie -->
		<field name="partyId" title="Party [ID]" widget-style="buttontext">
			<hyperlink target-type="inter-app" target="/partymgr/control/viewprofile?party_id=${prodCatalogRole.partyId}"
				description="${person.personalTitle} ${person.firstName} ${person.middleName} ${person.lastName} ${person.suffix} ${partyGroup.groupName} [${prodCatalogRole.partyId}]"/>
		</field>
		<field name="roleTypeId" title="Role" widget-style="tabletext">
			<display description="${roleType.description}"/>
		</field>
		<field name="fromDate" title="From Date &amp;amp; Time" widget-style="tabletext"><display/></field>
		<field name="thruDate" title="Thru Date &amp;amp; Time"></field>
		<field name="submitButton" title="Update" widget-style="standardSubmit"><submit button-type="button"/></field>
		<field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
			<hyperlink target="removeProdCatalogFromParty?prodCatalogId=${prodCatalogRole.prodCatalogId}&amp;partyId=${prodCatalogRole.partyId}&amp;roleTypeId=${prodCatalogRole.roleTypeId}&amp;fromDate=${prodCatalogRole.fromDate}"
				description="[Delete]" also-hidden="false"/>
		</field>
	</form>
	<form name="CreateProductStoreCatalog" type="single" 
		target="createProdCatalogStore" title=""
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="createProductStoreCatalog"/>
		<field name="prodCatalogId" map-name="prodCatalog"><hidden/></field>
		<field name="productStoreId" title="Store" widget-style="selectBox">
			<drop-down>
				<entity-options entity-name="ProductStore" description="${storeName}">
					<entity-order-by field-name="storeName"/>
				</entity-options>
			</drop-down>
		</field>
		<field name="submitButton" title="Add" widget-style="standardSubmit"><submit button-type="button"/></field>
	</form>
	<form name="UpdateProductStoreCatalog" type="list"
		target="updateProdCatalogStore" title="" list-name="productStoreCatalogDatas"
		default-title-style="tableheadtext" default-widget-style="inputBox" default-tooltip-style="tabletext">
		<auto-fields-service service-name="updateProductStoreCatalog" map-name="productStoreCatalog"/>
		<field name="prodCatalogId"><hidden/></field>
		<field name="productStoreId" title="Store [ID]" widget-style="buttontext">
			<hyperlink target-type="intra-app" target="EditProductStore?productStoreId=${productStoreCatalog.productStoreId}"
				description="${productStore.storeName} [${productStoreCatalog.productStoreId}]"/>
		</field>
		<field name="fromDate" title="From Date &amp;amp; Time" widget-style="tabletext"><display/></field>
		<field name="thruDate" title="Thru Date &amp;amp; Time"></field>
		<field name="submitButton" title="Update" widget-style="standardSubmit"><submit button-type="button"/></field>
		<field name="deleteLink" title="&amp;nbsp;" widget-style="buttontext">
			<hyperlink target="deleteProdCatalogStore?prodCatalogId=${productStoreCatalog.prodCatalogId}&amp;productStoreId=${productStoreCatalog.productStoreId}&amp;fromDate=${productStoreCatalog.fromDate}"
				description="[Delete]" also-hidden="false"/>
		</field>
	</form>
</forms>
