import java.util.*;
import java.sql.*;
import java.io.*;
import org.ofbiz.entity.*;
import org.ofbiz.base.util.*;
import org.ofbiz.content.widget.html.*;

security = request.getAttribute("security");
delegator = request.getAttribute("delegator");

if(security.hasEntityPermission("CATALOG", "_VIEW", session)) {
    context.put("hasPermission", Boolean.TRUE);
} else {
    context.put("hasPermission", Boolean.FALSE);
}    

nowTimestamp = UtilDateTime.nowTimestamp();
nowTimestampString = nowTimestamp.toString();

productCategoryId = request.getParameter("productCategoryId");
productCategory = delegator.findByPrimaryKey("ProductCategory", UtilMisc.toMap("productCategoryId", productCategoryId));
productFeatureCategoryAppls = null;
productFeatureCatGrpAppls = null;
if (productCategory != null) {
    productFeatureCategoryAppls = productCategory.getRelated("ProductFeatureCategoryAppl", null, UtilMisc.toList("productFeatureCategoryId"));
    productFeatureCatGrpAppls = productCategory.getRelated("ProductFeatureCatGrpAppl", null, UtilMisc.toList("productFeatureGroupId"));
}
productFeatureCategories = delegator.findAll("ProductFeatureCategory", UtilMisc.toList("description"));
productFeatureGroups = delegator.findAll("ProductFeatureGroup", UtilMisc.toList("description"));

context.put("nowTimestamp", nowTimestamp);
context.put("nowTimestampString", nowTimestampString);
context.put("productCategoryId", productCategoryId);
context.put("productCategory", productCategory);
context.put("productFeatureCategoryAppls", productFeatureCategoryAppls);
context.put("productFeatureCatGrpAppls", productFeatureCatGrpAppls);
context.put("productFeatureCategories", productFeatureCategories);
context.put("productFeatureGroups", productFeatureGroups);
