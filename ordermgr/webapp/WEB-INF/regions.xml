<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE regions PUBLIC "-//OFBiz//DTD Regions Config//EN" "http://www.ofbiz.org/dtds/regions.dtd">

<regions>
    <define id='MAIN_REGION' template='/templates/main_template.jsp'>
        <put section='title'>Application Page</put> <!-- this is a default and is meant to overridden -->
        <put section='header' content='/includes/header.jsp'/>
        <put section='appbar' content='/includes/appbar.jsp'/>
        <put section='error' content='/includes/errormsg.jsp'/>
        <put section='content' content='/main.jsp'/> <!-- this is a default and is meant to overridden -->
        <put section='footer' content='/includes/footer.jsp'/>
    </define>

    <define id='LEFTBAR_REGION' template='/templates/leftbar_template.jsp'>  
    	<put section='first' content='/entry/orderparty.jsp'/>  	
        <put section='second' content='/entry/catalog/choosecatalog.jsp'/>
        <put section='third' content='/entry/catalog/keywordsearchbox.jsp'/>
        <put section='fourth' content='/entry/catalog/sidedeepcategory.jsp'/>                       
    </define>

    <define id='RIGHTBAR_REGION' template='/templates/rightbar_template.jsp'>
        <put section='first' content='/entry/minicart.jsp'/>
    </define>

    <define id='LEFT_ONLY_REGION' region='MAIN_REGION'>
        <put section='leftbar' content='LEFTBAR_REGION'/>
    </define>

    <define id='RIGHT_ONLY_REGION' region='MAIN_REGION'>
        <put section='rightbar' content='RIGHTBAR_REGION'/>
    </define>

    <define id='LEFT_RIGHT_REGION' region='MAIN_REGION'>
        <put section='leftbar' content='LEFTBAR_REGION'/>
        <put section='rightbar' content='RIGHTBAR_REGION'/>
        <!-- <put section='right'><![CDATA[<font size='4'>Direct Content</font>]]></put> -->
    </define>

    <!-- ====== Start View Specific Regions ====== -->
    <define id='main' region='MAIN_REGION'>
        <put section='title'>Main Page</put>
        <put section='content' content='/order/orderlist.jsp'/>
    </define>
    <define id='login' region='MAIN_REGION'>
        <put section='title'>Login Page</put>
        <put section='content' content='/login.jsp'/>
    </define>

    <define id='orderview' region='MAIN_REGION'>
        <put section='title'>View Order Page</put>
        <put section='content' content='/order/orderview.jsp'/>
    </define>
    <define id='orderlist' region='MAIN_REGION'>
        <put section='title'>Order List Page</put>
        <put section='content' content='/order/orderlist.jsp'/>
    </define>
    <define id='createnewnote' region='MAIN_REGION'>
        <put section='title'>Create New Note</put>
        <put section='content' content='/order/newnote.jsp'/>
    </define>

    <define id='salesentry' region='LEFT_ONLY_REGION'>
        <put section='title'>Order Entry Page</put>
        <put section='content' content='/entry/showcart.jsp'/>
    </define>
    <define id='keywordsearch' region='LEFT_RIGHT_REGION'>
        <put section='title'>Keyword Search Page</put>
        <put section='content' content='/entry/catalog/keywordsearch.jsp'/>
    </define>
    <define id='category' region='LEFT_RIGHT_REGION'>
        <put section='title'>Product Category Page</put>
        <put section='content' content='/entry/catalog/category.jsp'/>
    </define>
    <define id='product' region='LEFT_RIGHT_REGION'>
        <put section='title'>Product Page</put>
        <put section='content' content='/entry/catalog/product.jsp'/>
    </define>    
        
    <define id='shipsetup' region='MAIN_REGION'>
        <put section='title'>Shipping Estimate Setup</put>
        <put section='content' content='/shipment/shipsetup.jsp'/>
    </define>
    <define id='taxsetup' region='MAIN_REGION'>
        <put section='title'>Tax Rate Setup</put>
        <put section='content' content='/tax/taxsetup.jsp'/>
    </define>
</regions>
