import org.ofbiz.core.util.*;
import org.ofbiz.core.entity.*;
import org.ofbiz.core.widgetimpl.*;

security = request.getAttribute("security");
delegator = request.getAttribute("delegator");

orderId = request.getParameter("orderId");
returnId = request.getParameter("returnId");
returnHeader = null;
if (returnId != null) {
    returnHeader = delegator.findByPrimaryKey("ReturnHeader", UtilMisc.toMap("returnId", returnId));
}

editReturnForm = new HtmlFormWrapper("/return/ReturnForms.xml", "EditReturn", request, response);
editReturnForm.putInContext("orderId", orderId);
editReturnForm.putInContext("returnId", returnId);
editReturnForm.putInContext("returnHeader", returnHeader);


context.put("orderId", orderId);
context.put("returnId", returnId);
context.put("returnHeader", returnHeader);
context.put("editReturnForm", editReturnForm);
context.put("returnItemsForm", returnItemsForm);
